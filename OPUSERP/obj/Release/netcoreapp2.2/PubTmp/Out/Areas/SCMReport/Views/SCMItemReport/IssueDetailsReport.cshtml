                    </div>    <div class="col-3" style="padding-left:40px;">
                        <p>Printing Date: @DateTime.Now.ToShortDateString()</p>
                    </div>
                </div>
            </div>
        </div>*@




    <div class="row" style="padding: 10px 12px 0px 12px;">
        @{

            <table class="table-bordered-grey" style="width:100%;">
                <thead>
                    <tr style="background-color:lightgray;">
                        <th style="text-align:center;width:10%;">SKU Code</th>
                        <th style="text-align:center;width:15%;">SKU Name</th>
                        <th style="text-align:center;width:15%;">Item Name</th>
                        <th style="text-align:center;width:10%;">Unit</th>
                        <th style="text-align:center;width:10%;">Quentity</th>
                        <th style="text-align:center;width:15%;">Isuue Date</th>
                        <th style="text-align:center;width:15%;">Department</th>
                        <th style="text-align:center;width:10%;">Received By</th>
                    </tr>
                </thead>
                <tbody style="min-height:400px;">
                    @{
                        int i = 1;

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="text-align:center;width:10%;">@i</td>
                                <td style="text-align:center;width:15%;">@item.SKUNumber</td>
                                <td style="text-align:center;width:15%;">@item.Item.itemName</td>
                                <td style="text-align:center;width:15%;">@item.Item.unitId</td>
                                <td style="text-align:center;width:15%;">566</td>
                                <td style="text-align:center;width:15%;">@item.createdAt</td>
                                <td style="text-align:center;width:15%;">It</td>
                                <td style="text-align:center;width:15%;">@item.updatedBy</td>
                            </tr>
                            i++;
                        }


                    }
                </tbody>
                <tfoot>

                </tfoot>
            </table>
        }
    </div>



