                        }).then(function () {
                            window.location.href = "/CRMClient/OwnerChange/Index";
                            $('#changeType').val("");
                            $('#previousOwner').val("");
                            $('#newOwner').val("");
                            $('#progress').hide();
                        });

                    }
                });
            });

