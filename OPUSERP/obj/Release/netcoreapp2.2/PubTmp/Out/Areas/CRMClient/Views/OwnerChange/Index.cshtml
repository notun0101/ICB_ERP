                title: 'Are you sure?', text: 'Do you want to change record!', type: 'warning', showCancelButton: true, confirmButtonColor: '#3085d6', cancelButtonColor: '#d33', confirmButtonText: 'Yes, Change it!'
            }).then(function () {
