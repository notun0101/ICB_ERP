@model EmployeeWithDesignationVM
@{
    ViewData["Title"] = "AssignEmployeeList";
    Layout = "~/Areas/HRPMSAssignment/Views/Shared/_AssignmentForm.cshtml";
}

<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Employee Information</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="allEmployeeListTable">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>@Model.visualEmpCodeName</th>
                            <th>Designation</th>
                            <th>Current Basic</th>
                            <th>Father Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var data in Model.employeeWithDesignations)
                        {
                            <tr>
                                <td>@data.nameEnglish</td>
                                <td>@data.employeeCode</td>
                                <td>@data.designationName</td>
                                <td>@data.Basic</td>
                                <td>@data.fatherNameEnglish</td>
                                <td style="width:100px;">
                                    <a class="btn btn-success" href="@Url.Action("Index", "Assignment", new { id = data.Id})"><i class="fa fa-edit"></i></a>
                                    @*<a class="btn btn-outline-primary" href="@Url.Action("Index", "InfoView", new { id = data.Id })"><i class="fa fa-eye"></i></a>*@
                                    @*<a class="btn btn-info" href="#"><i class="fa fa-print"></i></a>*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section ScriptsAssignment{
    <script>
        $(document).ready(function () {

            $('#allEmployeeListTable').DataTable();
        });
    </script>
}

