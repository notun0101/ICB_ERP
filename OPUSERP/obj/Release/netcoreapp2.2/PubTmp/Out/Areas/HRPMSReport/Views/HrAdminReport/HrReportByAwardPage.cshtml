@model AllHrReportViewModel
@{
    ViewData["Title"] = "Award Wise Report";
    Layout = "~/Views/Shared/_PrintView.cshtml";
}
@section Style{
    <style>

        .print-card-body {
            width: 100%;
            padding-bottom: 10px;
        }

        .vartical-table th {
            width: 25%;
        }

        .vartical-table td {
            width: 25%;
        }

        .table td, .table th {
            padding: .3rem;
            font-size: 14px;
        }

        table {
            page-break-inside: auto;
        }

        tr {
            page-break-inside: avoid;
            page-break-after: auto;
        }

        thead {
            display: table-header-group;
        }

        tfoot {
            display: table-footer-group;
        }

        h6 {
            font-size: 14px;
            background-color: gray;
            color: white !important;
            padding: 3px;
        }
    </style>
}



<div class="print-card" style="width: 100%;">
    <div class="print-card-body">
        @*<div class="container-fluid">
            <div class="fa-pull-right">
                <p style="font-size:smaller;">Print at: @DateTime.Now.ToString("dd-MMM-yyyy HH:mm:ss")</p>
            </div>
            <div class="row" style="padding-top:0px;">
                <div class="col-2"></div>
                <div class="col-8">
                    <div style="color:black;text-align:center;">
                        <img src="/EmpImages/@Model.companies.FirstOrDefault().filePath" alt="OPUS ERP" style="height:80px;" />
                        <h3>@Model.companies.FirstOrDefault().companyName</h3>
                        <label>@Model.companies.FirstOrDefault().addressLine</label>
                        <h5>Award Wise Information</h5>
                        <br />
                    </div>
                </div>
                <div class="col-2"></div>
            </div>
        </div>*@

        <div class="container-fluid">
            <div class="fa-pull-right">
                <p style="font-size:smaller;">Print at: @DateTime.Now.ToString("dd-MMM-yyyy HH:mm:ss")</p>
            </div>
            <div class="row" style="padding-top:0px;">
                <div class="col-2">
                    <img src="/EmpImages/@Model.companies.FirstOrDefault().filePath" alt="OPUS ERP" style="height:80px;" />
                </div>
                <div class="col-10">
                    <div style="color:black;text-align:center;">
                        <h3 style="font-size:20px;">BANGLADESH DEVELOPMENT BANK LIMITED</h3>
                        <h3 style="font-size:20px;">HEAD OFFICE: DHAKA</h3>
                        <h3 style="font-size:20px;"><u>HUMAN RESOURCE MANAGEMENT DEPARTMENT</u></h3>
                        <h3 style="font-size:20px;"><u>Award Wise Information</u></h3>

                        <br />
                    </div>
                </div>
                @*<div class="col-2"></div>*@
            </div>
        </div>

        <div class="container-fluid" style="color:black;">
            @foreach (var item in Model.awardWiseEmployees)
            {
                @if (item.employeeInfos.Count() >0)
                {
                    <div class="row" style="padding: 0px 15px 0px 15px;color:black;text-align:left;">
                        <h5>Award Name:&nbsp;<span style="font-weight:600">@item.award?.awardName</span></h5>

                    </div>
                    <div class="row" style="padding: 0px 15px 0px 15px;">

                        <table class="table table-bordered">
                            <thead>
                                <tr style="background-color:lightgray;">
                                    <th style="text-align:center;width:5%;">Sl#</th>
                                    <th style="text-align:center;width:10%;">Employee ID</th>
                                    <th style="text-align:center;width:10%;">Name</th>
                                    <th style="text-align:center;width:8%;">Qualification</th>
                                    <th style="text-align:center;width:8%;">Date of Birth dd/mm/yy</th>
                                    <th style="text-align:center;width:10%;">Date of Joining dd/mm/yy</th>
                                    <th style="text-align:center;width:10%;">Last Promotion Date dd/mm/yy</th>
                                    <th style="text-align:center;width:10%;">Last Transfer Date dd/mm/yy</th>
                                    <th style="text-align:center;width:10%;">Retirement Date dd/mm/yy</th>
                                    <th style="text-align:center;width:10%;">Present Posting</th>
                                    <th style="text-align:center;width:10%;">Home District</th>

                                    @*<th style="text-align:center;width:10%;">Designation</th>
        <th style="text-align:center;width:10%;">Date of Birth</th>
         <th style="text-align:center;width:10%;">Email</th>
         <th style="text-align:center;width:10%;">Mobile</th>
         <th style="text-align:center;width:10%;">Blood Group</th>*@
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 1;

                                    @if (item.employeeInfos != null)
                                    {
                                        @foreach (var data in item.employeeInfos)
                                        {
                                <tr>
                                    <td style="text-align:center;">@i</td>
                                    <td>@data.employeeCode</td>
                                    <td>@data.nameEnglish</td>
                                    <td>@data.qualification</td>
                                    <td>@data.dateOfBirth?.ToString("dd/MM/yyyy")</td>
                                    <td>@data.joiningDateGovtService?.ToString("dd/MM/yyyy")</td>
                                    <td>@data.lastPromotionDate?.ToString("dd/MM/yyyy")</td>
                                    <td>@data.lastTransferDate?.ToString("dd/MM/yyyy")</td>
                                    <td>@data.DateOfRetirement?.ToString("dd/MM/yyyy")</td>
                                    <td>@data.presentPosting</td>
                                    <td>@data.homeDistrict</td>
                                    @*<td>@data.lastDesignation?.designationName</td>
        <td>@data.dateOfBirth?.ToString("dd-MMM-yyyy")</td>
        <td>@data.emailAddress</td>
        <td>@data.mobileNumberOffice</td>
        <td>@data.bloodGroup</td>*@
                                </tr>
                                            i++;
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="8">No Employee Found</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>

                }


                <br />
            }

        </div>
    </div>
</div>

@section Scripts{
}

