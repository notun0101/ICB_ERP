@section Scripts{
    <script>
        function convertEnToBnNum(num) {
            var en = "0123456789";
            var bn = "০১২৩৪৫৬৭৮৯";
            var result = "";
            for (var i = 0; i < num.length; i++) {
                var index = en.indexOf(num[i]);
                var bnNum = bn[index];
                result += bnNum;
            }
            return result;
        }
    </script>


