@model AllHrReportViewModel
@{
    ViewData["Title"] = "HR Report";
    Layout = "~/Views/Shared/_PrintView.cshtml";
}

@section Style{
    <style>

        .print-card-body {
            width: 100%;
            padding-bottom: 10px;
        }

        .vartical-table th {
            width: 25%;
        }

        .vartical-table td {
            width: 25%;
        }

        .table td, .table th {
            padding: .3rem;
            font-size: 14px;
        }

        table {
            page-break-inside: auto;
        }

        tr {
            page-break-inside: avoid;
            page-break-after: auto;
        }

        thead {
            display: table-header-group;
        }

        tfoot {
            display: table-footer-group;
        }

        h6 {
            font-size: 14px;
            background-color: gray;
            color: white !important;
            padding: 3px;
        }
    </style>
}

<div class="print-card" style="width: 100%;">
    <div class="print-card-body">
       

        <div class="container-fluid">
            <div class="fa-pull-right">
                <p style="font-size:smaller;">Print at: @DateTime.Now.ToString("dd-MMM-yyyy HH:mm:ss")</p>
            </div>
            <div class="row" style="padding-top:0px;">
                <div class="col-2">
                    <img src="/EmpImages/@Model.companies.FirstOrDefault().filePath" alt="OPUS ERP" style="height:80px;" />
                </div>
                <div class="col-8">
                    <div style="color:black;text-align:center;">
                        @*<h3>@Model.companies.FirstOrDefault().companyName</h3>*@
                        <h4 style="text-transform: uppercase;">Bangladesh Development Bank Limited</h4>
                        <h4 style="text-transform: uppercase;">Head office : dhaka</h4>
                        <h4 style="text-transform: uppercase;"><u>human resource management department</u></h4>
                       
                        <h5 style="border-bottom:solid 2px;width: 50%; margin-left: 25%;">Engineer List As on @ViewBag.date?.ToString("dd/MM/yyyy") (Officers)</h5>
                       
                        <br />
                    </div>
                </div>
                <div class="col-2"></div>
            </div>
        </div>

        <div class="container-fluid" style="color:black;">
            <table class="table" >
                <thead>
                    <tr style="background-color:lightgray;">

                        <th style="text-align:center;width:2%;">Sl. No</th>
                        <th style="text-align:center;">File No</th>
                        <th style="text-align:center;width:18%;">Name</th>
                        <th style="text-align:center;width: 12%;">Designation</th>
                        <th style="text-align:center;width:18%;">Qualification</th>
                        <th style="text-align:center;width:7%;">Date Of Birth dd/mm/yy</th>
                        <th style="text-align:center;width:7%;">Date Of joining dd/mm/yy</th>
                        <th style="text-align:center;width:7%;">last Promotion dd/mm/yy</th>
                        <th style="text-align:center;width:6%;"> last Transfer dd/mm/yy</th>
                        <th style="text-align:center;width:7%;">Retirement Date dd/mm/yy</th>
                        <th style="text-align:center;width:7%;">Present Posting</th>
                        <th style="text-align:center;width:7%;">Home District</th>
                    </tr>
                </thead>
                
                <tbody>

                   @{ 
                       var i = 0;
                   }
                    
                      
                        @foreach (var item in Model.educationalQualifications)
                        {
                            i++;
                            <tr>
                                <td style="text-align:center;">@i</td>
                                <td>@item.employee?.employeeCode</td>
                                <td>@item.employee?.nameEnglish <br /> @item.employee?.nameBangla  </td>
                                <td>@item.employee?.lastDesignation?.designationName</td>
                                <td>@item.reldegreesubject?.subject?.subjectName</td>
                                <td>@item.employee?.dateOfBirth?.ToString("dd/MM/yyyy")</td>
                                <td>@item.employee?.joiningDateGovtService?.ToString("dd/MM/yyyy")</td>
                                <td>@item.employee?.lastPromotionDate?.ToString("dd/MM/yyyy")</td>
                                <td>@item.employee?.lastTransferDate?.ToString("dd/MM/yyyy")</td>
                                <td>@item.employee?.DateOfRetirement?.ToString("dd/MM/yyyy")</td>
                                <td>@item.employee?.presentPosting</td>
                                <td>@item.employee?.homeDistrict</td>


                            </tr>
                        }

                    

                </tbody>
            </table>



            <br />


        </div>
    </div>
</div>



