        <div class="container-fluid">
            <div class="fa-pull-right">
                <p style="font-size:smaller;">Print at: @DateTime.Now.ToString("dd-MMM-yyyy HH:mm:ss")</p>
            </div>
            <div class="row" style="padding-top:0px;">
                <div class="col-2">
                    <img src="/EmpImages/@Model.companies.FirstOrDefault().filePath" alt="OPUS ERP" style="height:80px;" />
                </div>
                <div class="col-8">
                    <div style="color:black;text-align:center;">
                        @*<h3>@Model.companies.FirstOrDefault().companyName</h3>*@
                        <h3>Bangladesh Development Bank Ltd.</h3>
                        <label>@Model.companies.FirstOrDefault().addressLine</label>
                        <h5>Age Wise Emoloyee Report</h5>
                        <br />
                    </div>
                </div>
                <div class="col-2"></div>
            </div>
        </div>

        <div class="container-fluid" style="color:black;">
            <table class="table table-bordered">
                <thead>
                    <tr style="background-color:lightgray;">

                        <th style="text-align:center;width:10%;">Employee Name</th>
                        <th style="text-align:center;width:10%;">Employee Code</th>
                        <th style="text-align:center;width:10%;">Designation</th>
                        <th style="text-align:center;width:10%;">Joining Date GovtService</th>
                        <th style="text-align:center;width:10%;">Joining Date Workstation</th>
                        <th style="text-align:center;width:10%;">joining Location</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var data in Model.employeeInfos)
                    {
                      <tr>

                        <td>@data.nameEnglish</td>
                        <td>@data.employeeCode</td>
                        <td>@data.lastDesignation?.designationName</td>
                        <td>@data.joiningDateGovtService</td>
                        <td>@data.joiningDatePresentWorkstation</td>
                        <td>@data.joiningLocation</td>

                      </tr>
                    }

                </tbody>
            </table>



            <br />


        </div>
