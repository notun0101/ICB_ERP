                    </div>
                </div>
                @*<div class="col-2"></div>*@
            </div>
        </div>

                <div class="container-fluid" style="color:black;">
                    @foreach (var item in Model.employeeDivisions)
                    {
                        @if (item.division.divisionName != null)
                        {
                            <div class="row" style="padding: 0px 15px 0px 15px;color:black;text-align:left;">
                                <h5>Division Name:&nbsp;<span style="font-weight:600">@item.division?.divisionName</span></h5>

                            </div>
                            <div class="row" style="padding: 0px 15px 0px 15px;">

                                <table class="table table-bordered">
                                    <thead>
                                        <tr style="background-color:lightgray;">
                                            <th style="text-align:center;width:5%;">Sl#</th>
                                            <th style="text-align:center;width:10%;">Employee ID</th>
                                            <th style="text-align:center;width:10%;">Name</th>
                                            <th style="text-align:center;width:10%;">Designation</th>
                                            <th style="text-align:center;width:10%;">Division</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int i = 1;

                                            @foreach (var data in item.employeeInfos)
                                            {
                                                <tr>
                                                    <td style="text-align:center;">@i</td>
                                                    <td>@data.employeeCode</td>
                                                    <td>@data.nameEnglish</td>
                                                    <td>@data.lastDesignation?.designationName</td>
                                                    <td>@data.Division?.divisionName</td>

                                                </tr>
                                                i++;
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>

                        }


                        <br />
                    }

                </div>
            </div>
