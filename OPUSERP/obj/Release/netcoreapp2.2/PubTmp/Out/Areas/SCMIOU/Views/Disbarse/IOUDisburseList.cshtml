

@model IOUPaymentMasterViewModel
@{
    ViewData["Title"] = "IOU List";
}

<br />
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-6">
                <h6 class="m-0 font-weight-bold text-primary">NEW IOU Disbursement LIST</h6>
            </div>
            @*<div class="col-6">
                    <button type="button" class="btn btn-default btn-sm" style="width:100px;background-color:#024972;color:white;float:right;" onclick="location.href='@Url.Action("Index", "IOU")'">Create IOU</button>
                </div>*@
        </div>
    </div>

    <div class="card-body">
        <table class="table table-striped table-bordered" id="newIOUListTable">
            <thead>
                <tr>
                    <th>IOU Disburse Date</th>
                    <th>IOU Disburse No</th>
                    @*<th>Project</th>*@
                    <th>IOU Disburse Value</th>
                    @*<th>Disburse To</th>*@
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var data in Model.iOUPaymentMasters)
                {
                    <tr>
                        <td>@data.iouPaymentDate?.ToString("dd-MMM-yyyy")</td>
                        <td>@data.iouPaymentNo</td>
                        @*<td>@data.projectName</td>*@
                        <td>@data?.iouPaymentValue?.ToString("0.00")</td>
                        @*<td>@data.attentionTo</td>*@
                        <td>@data.iouPaymentCurrentStatus</td>
                        <td>
                            @if (data.iouPaymentStatus == 3)
                            {
                                <a class="btn btn-info" target="_blank" href="/SCMReport/ReportMaster/IOUDisburseViewPdf?iOUPaymentMasterId=@data.Id"><i class="fa fa-print"></i></a>
                            }

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<br />
<div class="card">

    <div class="card-header ">
        <h6 class="m-0 font-weight-bold text-primary">Issued IOU Disbursement LIST</h6>
    </div>

    <div class="card-body">
        <table class="table table-striped table-bordered" id="issuedIOUListTable">
            <thead>
                <tr>
                    <th>IOU Disburse Date</th>
                    <th>IOU Disburse No</th>
                    @*<th>Project</th>*@
                    <th>IOU Disburse Value</th>
                    @*<th>Disburse To</th>*@
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var data in Model.issuedIOUPaymentMasters)
                {
                <tr>
                    <td>@data.iouPaymentDate?.ToString("dd-MMM-yyyy")</td>
                    <td>@data.iouPaymentNo</td>
                    @*<td>@data.projectName</td>*@
                    <td>@data?.iouPaymentValue?.ToString("0.00")</td>
                    @*<td>@data.attentionTo</td>*@
                    <td>@data.iouPaymentCurrentStatus</td>
                    <td>
                        @if (data.iouPaymentStatus == 3)
                        {
                            <a class="btn btn-info" target="_blank" href="/SCMReport/ReportMaster/IOUDisburseViewPdf?iOUPaymentMasterId=@data.Id"><i class="fa fa-print"></i></a>
                        }

                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>





@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#newIOUListTable').DataTable();
            $('#issuedIOUListTable').DataTable();
            
        });
    </script>
}



