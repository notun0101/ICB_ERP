
@model StoreViewModel
@{
    ViewData["TitleMD"] = "Store List";
    Layout = "~/Areas/MasterData/Views/Shared/_CustomerDataForm.cshtml";
}

<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Store List</h6>
                @*<a class="btn btn-success" data-toggle="tooltip" title="New" href="@Url.Action("Index", "Customer")"><i class="fa fa-save"> Add Customer</i></a>*@
                <a href="/Purchase/Store/Index" class="btn btn-info btn-sm pull-right" style="background-color:#024972;">Add New</a>
            </div>
            <!-- Card Body -->
            @{
                int i = 1;

                <div class="card-body">
                    <table class="table table-striped table-bordered" id="storeTable">
                        <thead>
                            <tr>
                                <th>SL#</th>
                                <th>Store Name</th>
                                <th>Trade License Number</th>
                                <th>Contact Number</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var data in Model.stores)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@data.storeName</td>
                                    <td>@data.licenseNumber</td>
                                    <td>@data.mobile</td>

                                    <td>
                                        @*<a class="btn btn-success" href="@Url.Action("EditCustomer", "Customer", new { id = data.Id })"><i class="fa fa-edit"></i></a>*@
                                        <a class="btn btn-success" title="Edit Data" href="/Purchase/Store/Index?id=@data.Id&actionType=defaultOpen"><i class="fa fa-edit"></i></a>&nbsp;&nbsp;
                                        @*<a class="btn btn-success" title="View Details" href="/MasterData/Customer/CustomerDetails?id=@data.Id&actionType=defaultOpen"><i class="fa fa-eye"></i></a>*@
                                    </td>
                                </tr>
                                i++;
                            }

                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section ScriptsMD{
    <script>
        $(document).ready(function () {
            $("#education").addClass("active");
            $('#storeTable').DataTable();
        });

    </script>
}

@section StyleMD{
    <style>
        #educationalTable tbody tr {
            cursor: pointer;
        }
    </style>
}

















