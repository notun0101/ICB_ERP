@model RequeredDocumentViewModel
@{
    ViewData["Title"] = "Requered Document List";
}

<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <br />
            <div class="card-header row">
                <div class="col-md-10">
                    <h6 class="m-0 font-weight-bold text-primary">Requered Document List</h6>
                </div>
                <div class="col-md-2">
                    <a class="btn btn-sm btn-info" style="float:right;" href="/VEMSMasterData/RequiredDoc/Create/">Add New</a>
                </div>
            </div>

            <div class="card-body">
                <table class="table table-striped table-bordered" id="requiredDocTable">
                    <thead>
                        <tr>
                            <th>SL</th>
                            <th>Document</th>
                            <th>Action</th>
                    </thead>
                    <tbody>
                        @{
                            int sl = 1;
                            @foreach (var data in Model.requiredDocuments)
                            {
                                <tr>
                                    <td style="width:5%;">@sl</td>
                                    <td style="width:90%;">@data.description</td>
                                    <td style="width:5%;">
                                        <a class="btn btn-success" href="/VEMSMasterData/RequiredDoc/Create/@data.Id"><i class="fa fa-edit"></i></a>
                                    </td>
                                </tr>
                                sl++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#requiredDocTable').DataTable();
        });
    </script>
}