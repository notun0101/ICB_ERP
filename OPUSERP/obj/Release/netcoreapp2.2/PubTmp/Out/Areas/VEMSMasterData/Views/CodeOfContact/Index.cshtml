@model CodeOfContactViewModel
@{
    ViewData["Title"] = "Code of Contact List";
}

<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <br />
            <div class="card-header row">
                <div class="col-md-10">
                    <h6 class="m-0 font-weight-bold text-primary">Code of Contact List</h6>
                </div>
                <div class="col-md-2">
                    <a class="btn btn-sm btn-info" style="float:right;" href="/VEMSMasterData/CodeOfContact/Create/">Add New</a>
                </div>
            </div>

            <div class="card-body">
                <table class="table table-striped table-bordered" id="codeOfContactTable">
                    <thead>
                        <tr>
                            <th>SL</th>
                            <th>Code of Contact</th>
                            <th>Action</th>
                    </thead>
                    <tbody>
                        @{
                            int sl = 1;
                            @foreach (var data in Model.codeOfContacts)
                            {
                                <tr>
                                    <td style="width:5%;">@sl</td>
                                    <td style="width:90%;">@data.description</td>
                                    <td style="width:5%;">
                                        <a class="btn btn-success" href="/VEMSMasterData/CodeOfContact/Create/@data.Id"><i class="fa fa-edit"></i></a>
                                    </td>
                                </tr>
                                sl++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#codeOfContactTable').DataTable();
        });
    </script>
}