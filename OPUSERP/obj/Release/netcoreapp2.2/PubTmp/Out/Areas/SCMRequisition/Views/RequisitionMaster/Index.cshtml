							}
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>


@section Scripts{
	<script src="~/Assets/paginathing.js"></script>

	<script>


        $(document).ready(function () {
            $("#education").addClass("active");
            $('#requisitionListTable').DataTable({
                dom: "<'row'<'col-sm-12 col-md-2'l><'col-sm-12 col-md-3'B><'col-sm-12 col-md-7'f>>" +
                    "<'row'<'col-sm-12't>>" + "<'row'<'col-sm-12 col-md-6'i><'col-sm-12 col-md-6'pr>>",
                buttons: [
                    {
                        extend: 'excelHtml5',
                        text: '<i class="fa fa-file-excel"></i> Excel',
                        titleAttr: 'Excel',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4]
                        },
                        title: 'ERP',
                        messageTop: 'Status List',
                        class: 'btn btn-info'
                    },
                    {
                        extend: 'csvHtml5',
                        text: '<i class="fa fa-file-excel"></i> CSV',
                        titleAttr: 'CSV',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4]
                        },
                        title: 'ERP',
                        messageTop: 'Status List'
                    },
                    {
                        extend: 'print',
                        text: '<i class="fa fa-print"></i> Print',
                        titleAttr: 'Print',
                        title: 'ERP',
                        messageTop: 'Status List',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4]
                        },
                        customize: function (doc) {
                            $(doc.document.body).find('h1').css('font-size', '20pt');
                            $(doc.document.body).find('h1').css('font-family', "'Times New Roman', Times, serif");
                            $(doc.document.body).find('h1').css('text-align', 'center');
                        }
                    }
                ]
            }
            );

            $('#gridView').show();
            $('#listView').hide();

            $('.fas').removeClass('active');
            $('.fa-th').addClass('active');

            $("#myInput1").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $(".searchdiv").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });
        });

        $('.fa-list-alt').click(function () {
            $('#listView').show();
            $('#gridView').hide();

            $('.fas').removeClass('active');
            $('.fa-list-alt').addClass('active');
        })
        $('.fa-th').click(function () {
            $('#listView').hide();
            $('#gridView').show();

            $('.fas').removeClass('active');
            $('.fa-th').addClass('active');
        })

        var count = parseInt(@Model.requisitionMaster.Count());
        var remainder = 0;
        var limitPage = 0;

        if (count > 8) {
            remainder = parseInt(count % 8);
            if (remainder==0) {
                limitPage = parseInt(count / 8);
                if (limitPage > 6) {
                    limitPage = 6;
                }
                else
                {

                }
            }
            else {
                limitPage = parseInt(count / 8);
                limitPage = limitPage + 1;
                if (limitPage > 6) {
                    limitPage = 6;
                }
                else
                {

                }
            }
        }
        else {
            limitPage = 1;
        }

        $('#cards').paginathing({

            // Limites your pagination number
            // false or number
            limitPagination: limitPage,
            // limitPagination: false,

            // Pagination controls
            perPage: 8,
            prevNext: true,
            firstLast: true,
            prevText: '&laquo;',
            nextText: '&raquo;',
            firstText: 'First',
            lastText: 'Last',
            containerClass: 'pagination-container',
            ulClass: 'pagination',
            liClass: 'page',
            activeClass: 'active',
            disabledClass: 'disabled',
            pageNumbers: true,
            insertAfter: '#cards'
        })
	</script>
}




