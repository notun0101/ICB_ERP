
@model EmployeeExitInterviewViewModel

@{
    ViewData["Title"] = "ExitInterViewReport";
    //Layout = "/Views/Shared/_Layout.cshtml";
    Layout = "~/Views/Shared/_PrintView.cshtml";

    //int i= 1;
}


<style>
    .print-card-body {
        width: 100%;
        padding-bottom: 10px;
    }

    .vartical-table th {
        width: 25%;
    }

    .vartical-table td {
        width: 25%;
    }

    .horizontal-table {
        /*width: 100%;*/
    }

    .table td, .table th {
        padding: .3rem;
        font-size: 15px;
    }

    table {
        page-break-inside: auto
    }

    tr {
        page-break-inside: avoid;
        page-break-after: auto
    }

    thead {
        display: table-header-group
    }

    tfoot {
        display: table-footer-group
    }

    h6 {
        font-size: 14px;
        background-color: gray;
        color: white !important;
        padding: 3px;
    }

    /*custom css for this page*/

    #brand-title-id {
        margin-top: 10px;
    }

    .body-section {
        margin-top: 20px;
    }

    .heading-cls {
        text-align: center;
        color: black;
    }

    .signature-cls {
        text-align: center;
    }

    .card-footer {
        text-align: center;
    }


</style>



<section>
    <div class="employee-exit-interview-form-cls">
        <div class="top-section">
            <div class="container-fluid">
                <div class="row">
                    <img src="~/images/JasonLogo.png" height="70px" width="150px" />
                    <h5 id="brand-title-id"><b>International Federation <br /> of Red Cross and Red Crescent Societies</b></h5>
                </div>
            </div>
        </div>
        <div class="body-section">
            <div class="container-fluid">
                <div class="card">
                    <div class="card-header heading-cls">
                        <h4><b>EMPLOYEE EXIT INTERVIEW REPORT</b></h4>
                    </div>
                    <div class="card">
                        <div class="card-header">
                            <b>STAFF DETAILS</b>
                        </div>
                        <div class="card-body">

                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <td width="10%">Name :</td>
                                        <td width="25%">@Model.employeeInfo.nameEnglish</td>
                                        <td width="10%">Designation :</td>
                                        <td width="20%">@Model.employeeInfo.designation</td>
                                        <td width="10%">Unit :</td>
                                        <td width="25%">@Model.employeeProjectActivities?.FirstOrDefault()?.hRProject?.name</td>
                                    </tr>
                                    <tr>
                                        <td width="10%">Line manager :</td>
                                        <td width="25%">@Model.supervisor?.supervisor?.nameEnglish</td>
                                        <td width="10%">Last withdrawn salary :</td>
                                        <td width="20%">@Model.exitInterviewMaster.lastWithdrawnSalary</td>
                                        <td width="10%">Start date :</td>
                                        <td width="25%">@Model.exitInterviewMaster.startDate</td>
                                    </tr>
                                </tbody>
                            </table>
                            <br />
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header">
                            <b>REASON FOR LEAVING</b>
                        </div>
                        <div class="card-body">
                            @foreach (var item in Model.exitInterviewReasonOfLeaving)
                            {
                                <div class="row">
                                    <i class="fas fa-check-square"></i> &nbsp; &nbsp; @item.reasonForLeaving.reasonName
                                </div>
                            }
                        </div>
                        <div class="card-footer">
                            <b>Plans after leaving : SOHO</b>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-header">
                            <b>COMMENTS/SUGGESTION FOR IMPROVEMENT </b> (We are interested in what our employees have to say about their work experience with the Federation. Please complete this form.)
                        </div>
                        <div class="card-body">

                            @foreach (var item in Model.exitInterviewSuggestion)
                            {
                                <div class="form-group">
                                    <label class="col-form-label">Q. &nbsp;&nbsp; @item.commentORSuggestion.commentORSuggestionName</label>
                                    <br /><label>Ans: &nbsp; @item.suggestionText</label>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-header">
                            <b>How did you feel about the pay and benefits?</b>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered">
                                @foreach (var item in Model.exitInterviewPayNBenefits)
                                {
                                    <tr>
                                        <td width="50%">@item.payAndBenefits.payAndBenefitsName</td>
                                        <td width="50%"> @item.payAndBenefitsText</td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>


                    <div class="card">
                        <div class="card-header">
                            <b>How did you feel about the following:</b>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered">
                                @foreach (var item in Model.exitInterviewFeelAndFollowings)
                                {
                                    <tr>
                                        <td width="50%">@item.feelAboutTheFollowing.feelAboutTheFollowingName</td>
                                        <td width="50%">@item.feelAboutFollowinsText</td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>


                    <div class="card">
                        <div class="card-header">
                            <b>Comments :</b>
                        </div>
                        <div class="card-body">

                            @foreach (var item in Model.exitInterviewComment)
                            {
                                <div class="form-group">
                                    <label class="col-form-label">Q. &nbsp;&nbsp;@item.interviewComment.commentText</label>
                                    <br /><label>Ans: &nbsp; @item.commentText</label>
                                </div>
                            }

                        </div>
                    </div>
                    <br /><br /><br />
                    <div class="row">
                        <div class="container">
                            <p style="padding-left:50px; text-decoration: overline">Employee's signature</p>
                            <p style="padding-left: 600px;text-decoration: overline; margin-top:-40px; "> &nbsp; &nbsp; Date &nbsp; &nbsp; </p>
                        </div>
                    </div>
                    <hr />
                    <br /><br />
                    <div class="row">
                        <div class="container">
                            <p style="padding-left:50px; text-decoration: overline">Interviewer's signature </p>
                            <p style="padding-left: 600px;text-decoration: overline; margin-top:-40px; "> &nbsp; &nbsp; Date &nbsp; &nbsp; </p>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="container">
                            <p>Interviewer's comments : <hr /><hr /><hr /><hr /></p>
                            <br />
                        </div>
                    </div>
                    <div class="card-footer">
                        <p>APZHR - Exit Interview form - @DateTime.Now.Year</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

