@model DisciplinaryViewModel

@{
    ViewData["Title"] = "DisciplinaryAllEmployeeReport";
    Layout = "~/Views/Shared/_PrintView.cshtml";

}
@section Style{
    <style>
        body {
            font-family: sans-serif;
        }

        .print-card-body {
            width: 100%;
            padding-bottom: 10px;
        }

        .vartical-table th {
            width: 25%;
        }

        .vartical-table td {
            width: 25%;
        }

        .table td, .table th {
            padding: .3rem;
            font-size: 14px;
        }

        table {
            page-break-inside: auto;
        }

        tr {
            page-break-inside: avoid;
            page-break-after: auto;
        }

        thead {
            display: table-header-group;
        }

        tfoot {
            display: table-footer-group;
        }

        h6 {
            font-size: 14px;
            background-color: gray;
            color: white !important;
            padding: 3px;
        }
    </style>
}
<div class="print-card" style="width: 100%;">
    <div class="print-card-body">
        <div class="container-fluid">
            <div class="fa-pull-right">
                <p style="font-size:smaller;">Print at: @DateTime.Now.ToString("dd-MMM-yyyy HH:mm:ss")</p>
            </div>
            <div class="row" style="padding-top:0px;">
                <div class="col-2">
                    <img src="/EmpImages/@Model.companies.FirstOrDefault().filePath" alt="OPUS ERP" style="height:80px;" />
                </div>
                <div class="col-8">
                    <div style="color:black;text-align:center;">
                        <h3 style="font-size:20px;">BANGLADESH DEVELOPMENT BANK LIMITED</h3>
                        <h3 style="font-size:20px;">HEAD OFFICE: DHAKA</h3>
                        <h3 style="font-size:20px;"><u>HUMAN RESOURCE MANAGEMENT DEPARTMENT</u></h3>
                        <h3 style="font-size:20px;"><u>Disciplinary List As on @ViewBag.date?.ToString("dd/MM/yyyy")</u></h3>

                        <br />
                    </div>
                </div>
                <div class="col-2"></div>
            </div>
        </div>

        <div class="container-fluid" style="color:black;">
            <div class="row" style="padding: 0px 15px 0px 15px;">
                <table class="table table-bordered text-center">
                    <thead>
                        <tr style="background-color:lightgray;">
                         
                            <th style="text-align:center;width:5%;">Sl#</th>
                            <th>@Model.fLang.employeeName</th>
                            <th>@Model.fLang.designation</th>
                            <th>Department</th>
                            <th>@Model.fLang.offense</th>
                            <th>@Model.fLang.naturalPunishment</th>
                            <th>@Model.fLang.startFrom</th>
                            <th>@Model.fLang.endTo</th>
                            <th>@Model.fLang.goWithDate</th>
                            <th>@Model.fLang.punishmentDate</th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        @{
                                    int i = 1;
                            @foreach (var data in Model.disciplinaries)
                                {
                        <tr>
                            <td style="text-align:center;">@i</td>
                            <td>@data.employee.nameEnglish - @data.employee.employeeCode </td>
                            <td>@data.employee?.lastDesignation?.designationName</td>
                            <td>@data.employee?.department?.deptName</td>
                            <td>@data.offense.name</td>
                            <td>@data.naturalPunishment.name</td>
                            <td>@data.startingDate?.ToString("dd-MMM-yyyy")</td>
                            <td>@data.endDate?.ToString("dd-MMM-yyyy")</td>
                            <td>@data.goNumberWithDate</td>
                            <td>@data.punishmentDate?.ToString("dd-MMM-yyyy")</td>
                        
                        </tr>

                                        i++;
                                     }
                              }

                        </tbody>
                </table>
            </div>
            <br />
            <br />
            <br />


        </div>
    </div>
</div>
