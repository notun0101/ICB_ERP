                                    else if (item.memberRoleId == 2)
                                    {
                                        <span>সদস্য</span>
                                    }
                                    else if (item.memberRoleId == 3)
                                    {
                                        <span>সদস্য সচিব</span>
                                    }
                                </td>
                                <td>@item.designationEn</td>

                                <td>@item.departmentEn</td>
                                
