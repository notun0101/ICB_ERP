		function formatDateNew(date) {
			date = new Date(date);
			var dateNew = new Date(date.setMonth(date.getMonth() + 1));
			var m = '';
			var d = '';
			if (parseInt(dateNew.getMonth()) < 10) {
				m = '0' + dateNew.getMonth();
			}
			else {
				m = dateNew.getMonth();
			}
			if (parseInt(dateNew.getDate()) < 10) {
				d = '0' + dateNew.getDate();
			}
			else {
				d = dateNew.getDate();
			}
			return dateNew.getFullYear() + '-' + m + '-' + d;
		}




