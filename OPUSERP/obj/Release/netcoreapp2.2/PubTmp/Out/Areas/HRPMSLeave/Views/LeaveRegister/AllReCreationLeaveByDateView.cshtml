@model LeaveRegisterViewModel

@{
    ViewData["Title"] = "ReCreation Leave";
    Layout = "~/Views/Shared/_PrintView.cshtml";
}


@section Style{
<style>

   

    .print-card-body {
        width: 100%;
        padding-bottom: 10px;
    }

    .vartical-table th {
        width: 25%;
    }

    .vartical-table td {
        width: 25%;
    }

    .table td, .table th {
        padding: .3rem;
        font-size: 14px;
    }

    table {
        page-break-inside: auto;
    }

    tr {
        page-break-inside: avoid;
        page-break-after: auto;
    }

    thead {
        display: table-header-group;
    }

    tfoot {
        display: table-footer-group;
    }

    h6 {
        font-size: 14px;
        background-color: gray;
        color: white !important;
        padding: 3px;
    }
</style>
   
}





<div class="print-card" style="width: 100%;">
    <div class="print-card-body">
      

        <div class="container-fluid">
            <div class="fa-pull-right">
                <p style="font-size:smaller;">Print at: @DateTime.Now.ToString("dd-MMM-yyyy HH:mm:ss")</p>
            </div>
            <div class="row" style="padding-top:0px;">
                <div class="col-2">
                    <img src="/EmpImages/@Model.companies.FirstOrDefault().filePath" alt="OPUS ERP" style="height:80px;" />
                </div>
                <div class="col-8">
                    <div style="color:black;text-align:center;">
                        <h3 style="font-size:19px;">BANGLADESH DEVELOPMENT BANK LIMITED</h3>
                        <h3 style="font-size:19px;">HEAD OFFICE: DHAKA</h3>
                        <h3 style="font-size:19px;"><u>HUMAN RESOURCE MANAGEMENT DEPARTMENT</u></h3>
                        <h3 style="font-size:19px;"><u>All Re-Creation Leave List</u></h3>

                        <br />
                    </div>
                </div>
                <div class="col-2"></div>
            </div>
        </div>

        <div class="container-fluid" style="color:black;">

            <div class="row" style="padding: 0px 15px 0px 15px;">

                <table class="table table-striped table-bordered" id="requisitionListTable">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>From</th>
                            <th>To</th>
                            <th>Leave Type</th>
                            <th>Leave Remarks</th>
                            <th>Days</th>
                           
                    </thead>
                    <tbody id="tbody">
                        @foreach (var item in Model.leaveRegisterslist)
                        {
                            <tr>
                                <td>@item.employee?.nameEnglish</td>
                                <td>@item.leaveFrom?.ToString("dd MMM yyyy")</td>

                                <td>@item.leaveTo?.ToString("dd MMM yyyy")</td>
                                <td> @item.leaveType?.nameEn</td>
                                <td>@item.purposeOfLeave</td>
                                <td>@item.daysLeave</td>
                               
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>




@section Scripts{
}


