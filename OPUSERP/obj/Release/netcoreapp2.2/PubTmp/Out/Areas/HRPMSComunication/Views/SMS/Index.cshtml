
@{
    ViewData["Title"] = "SMS Gateway Setting";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Style{
    <style>
        .redStar {
            color: red;
        }
    </style>
}

<div class="card" style="width: 100%;">
    <div class="card-body">
        <div class="row">
            <div class="col-8">
                <h5 class="card-title" style="color: black">SMS Gateway Setting</h5>
            </div>
            <div class="col-4">
                @*<h6 class="identity-box">@Model.employeeNameCode</h6>*@
            </div>
        </div>
        <hr>
        <div class="container">
            <form method="post" data-parsley-validate="parsley">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row">
                    <div class="col-12">
                        <div class="form-group row">
                            <label for="smsTransport" class="col-sm-2 col-form-label">API<span style="float:right;" class="redStar">*</span></label>
                            <div class="col-sm-10">
                                <input class="form-control" id="smsTransport" value="" name="smsTransport" data-parsley-required="true">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <div class="form-group row">
                            <label for="smsKey" class="col-sm-2 col-form-label">Key<span style="float:right;" class="redStar">*</span></label>
                            <div class="col-sm-10">
                                <input class="form-control" id="smsKey" value="" name="smsKey" data-parsley-required="true">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <div class="form-group row">
                            <label for="activeSMSTransport" class="col-sm-2 col-form-label">Active SMS Transport <span style="float:right;" class="redStar">*</span></label>
                            <div class="col-sm-10">
                                <select class="form-control" id="activeSMSTransport" value="" name="activeSMSTransport" data-parsley-required="true">
                                    <option value="">Select</option>
                                    <option value="enable">Enable</option>
                                    <option value="disable">Disable</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <hr />
                <button type="submit" value="Submit" class="btn btn-success btn-lg" style="float:right; margin-top:5px;"><i class="fas fa-save"></i></button>

            </form>
        </div>
    </div>
</div>

