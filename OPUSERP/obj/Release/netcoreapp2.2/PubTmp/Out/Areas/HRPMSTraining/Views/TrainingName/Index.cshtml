@model TrainingNameViewModel
@{
    ViewData["Title"] = "Training Name";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Style{
}

<div class="card" style="width: 100%;">
    <div class="card-body">
        <h5 class="card-title" style="color: black">@Model.fLang.title</h5>
        <hr>
        <div class="container">
            <form asp-area="HRPMSTraining" asp-controller="TrainingName" asp-action="Index" method="post" data-parsley-validate="parsley">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group row">
                    <label for="name" class="col-sm-2 col-form-label">@Model.fLang.name</label>
                    <div class="col-sm-10">
                        <input type="text" data-parsley-required="true" data-parsley-trigger="keyup" class="form-control" name="name" id="name">
                        <input type="hidden" name="trainingNameId" id="trainingNameId" value="0" />
                    </div>
                </div>

                <div class="form-group row">
                    <label for="isMandatory" class="col-sm-2 col-form-label">@Model.fLang.isMandatory</label>
                    <div class="col-sm-4">
                        <select class="form-control" name="isMandatory" id="isMandatory">
                            <option value="No">No</option>
                            <option value="Yes">Yes</option>
                        </select>
                    </div>

                    <label for="type" class="col-sm-2 col-form-label">@Model.fLang.type</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" name="type" id="type">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="objective" class="col-sm-2 col-form-label">@Model.fLang.objective</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="objective" id="objective">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="description" class="col-sm-2 col-form-label">@Model.fLang.description</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="description" id="description">
                    </div>
                </div>
                <hr>
                <button type="submit" value="Submit" class="btn btn-success btn-lg" style="float:right; margin-top:5px;"><i class="fas fa-save"></i></button>
            </form>
        </div>
    </div>
</div>

<br />
<hr />
<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">@Model.fLang.title</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="trainingNameTable">
                    <thead>
                        <tr>
                            <th>@Model.fLang.name</th>
                            <th>@Model.fLang.isMandatory</th>
                            <th>@Model.fLang.type</th>
                            <th>@Model.fLang.objective</th>
                            <th>@Model.fLang.action</th>
                    </thead>
                    <tbody>
                        @*@foreach (var data in Model.awards)
                            {
                                <tr>
                                    <td>@data.name</td>
                                    <td>@data.isMandatory</td>
                                    <td>@data.type</td>
