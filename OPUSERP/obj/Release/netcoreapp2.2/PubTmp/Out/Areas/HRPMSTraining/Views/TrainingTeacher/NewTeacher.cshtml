@model IELTSTeacherViewModel
@{
    ViewData["Title"] = "NewTeacher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Style{
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans&family=Roboto&display=swap" rel="stylesheet">
    <style>

        * {
            margin: 0;
            padding: 0;
        }

        html {
            height: 100%;
            background: -webkit-linear-gradient(to left, #4F61F2, #2a0845);
        }

        body {
            font-family: 'Josefin Sans', sans-serif;
            background: transparent;
        }

        #teacherform {
            text-align: center;
            position: relative;
            margin-top: 30px;
        }

            #teacherform fieldset {
                background: white;
                border: 0 none;
                border-radius: 0px;
                box-shadow: 0 0 15px 1px rgba(0, 0, 0, 0.4);
                padding: 20px 30px;
                box-sizing: border-box;
                width: 80%;
                margin: 0 10%;
                position: relative;
            }

                #teacherform fieldset:not(:first-of-type) {
                    display: none;
                }

            #teacherform input, #teacherform textarea {
                padding: 15px;
                border: 1px solid #ccc;
                border-radius: 20px;
                margin-bottom: 10px;
                width: 100%;
                box-sizing: border-box;
                color: #2C3E50;
                font-size: 13px;
            }

            #teacherform select {
                border: 1px solid #ccc;
                border-radius: 20px;
                margin-bottom: 10px;
                width: 100%;
                box-sizing: border-box;
                font-size: 13px;
            }

            #teacherform input:focus, #teacherform textarea:focus {
                -moz-box-shadow: none !important;
                -webkit-box-shadow: none !important;
                box-shadow: none !important;
                border: 1px solid #ee0979;
                outline-width: 0;
                transition: All 0.5s ease-in;
                -webkit-transition: All 0.5s ease-in;
                -moz-transition: All 0.5s ease-in;
                -o-transition: All 0.5s ease-in;
            }

            #teacherform .action-button {
                width: 100px;
                background: #ee0979;
                font-weight: bold;
                color: white;
                border: 0 none;
                border-radius: 25px;
                cursor: pointer;
                padding: 10px 5px;
                margin: 10px 5px;
            }

                #teacherform .action-button:hover, #teacherform .action-button:focus {
                    box-shadow: 0 0 0 2px white, 0 0 0 3px #ee0979;
                }

            #teacherform .action-button-previous {
                width: 100px;
                background: #C5C5F1;
                font-weight: bold;
                color: white;
                border: 0 none;
                border-radius: 25px;
                cursor: pointer;
                padding: 10px 5px;
                margin: 10px 5px;
            }

                #teacherform .action-button-previous:hover, #teacherform .action-button-previous:focus {
                    box-shadow: 0 0 0 2px white, 0 0 0 3px #C5C5F1;
                }

        .fs-title {
            font-size: 18px;
            text-transform: uppercase;
            color: #2C3E50;
            margin-bottom: 10px;
            letter-spacing: 2px;
            font-weight: bold;
        }

        .fs-subtitle {
            font-weight: normal;
            font-size: 13px;
            color: #666;
            margin-bottom: 20px;
        }

        #progressbar {
            margin-bottom: 5px;
            margin-top: 5px;
            overflow: hidden;
            counter-reset: step;
        }

            #progressbar li {
                list-style-type: none;
                color: white;
                text-transform: uppercase;
                font-size: 9px;
                width: 20%;
                float: left;
                position: relative;
                letter-spacing: 1px;
            }

                #progressbar li:before {
                    content: counter(step);
                    counter-increment: step;
                    width: 24px;
                    height: 24px;
                    line-height: 26px;
                    display: block;
                    font-size: 12px;
                    color: #333;
                    background: white;
                    border-radius: 25px;
                    margin: 0 auto 10px auto;
                }

                #progressbar li:after {
                    content: '';
                    width: 100%;
                    height: 2px;
                    background: white;
                    position: absolute;
                    left: -50%;
                    top: 9px;
                    z-index: -1;
                }

                #progressbar li:first-child:after {
                    content: none;
                }

                #progressbar li.active:before, #progressbar li.active:after {
                    background: #4F61F2;
                    color: white;
                }


        .dme_link {
            margin-top: 30px;
            text-align: center;
        }

            .dme_link a {
                background: #FFF;
                font-weight: bold;
                color: #ee0979;
                border: 0 none;
                border-radius: 25px;
                cursor: pointer;
                padding: 5px 25px;
                font-size: 12px;
            }

                .dme_link a:hover, .dme_link a:focus {
                    background: #C5C5F1;
                    text-decoration: none;
                }
        #tExpertice::-webkit-scrollbar {
            display: none;
        }

        #sotbl::-webkit-scrollbar {
            display: none;
        }
    </style>
}
<div class="card">
    <div class="card-header">
        <div class="col-12" style="text-align:center">
            <h4 style="display:inline">New Teacher</h4>
            <a class="btn btn-info float-right" href="/HRPMSTraining/TrainingTeacher/AllTeacher" style="color:aqua"><i class="fa fa-fast-backward fa-2x"></i></a>
        </div>
        <div class="col-12 row">
            <div class="col-1"></div>
            <ul id="progressbar" class="col-10 row" style="background:#3CACF4; border-radius:20px;margin-left:15px">
                <li class="active col-2 btn">Basic</li>
                <li class="col-2 btn">Social Media</li>
                <li class="col-2 btn">Career</li>
                <li class="col-2 btn">Education</li>
                <li class="col-2 btn">Expertice</li>
                <li class="col-2 btn">Final</li>
            </ul>
        </div>
    </div>
    <div class="card-body" style="height: 900px !important">
        <form asp-area="HRPMSTraining" asp-controller="TrainingTeacher" asp-action="NewTeacher" id="teacherform" enctype="multipart/form-data" data-parsley-validate="parsley" method="post">
            <div class="col-12" style="margin-top:-20px;">
                <fieldset>
                    <h2 class="fs-title">Teacher Basic</h2>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <hr />
                    <div class="row" style="text-align:left">
                        <div class="col-6">
                            <div class="form-group row">
                                <label for="teacherCode" class="col-sm-4 col-form-label">Teacher Code</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="teacherCode" value="@Model?.teacher?.teacherCode" name="teacherCode" data-parsley-required="true">
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group row">
                                <label for="nameEnglish" class="col-sm-4 col-form-label">Name</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="nameEnglish" value="@Model?.teacher?.nameEnglish" name="nameEnglish" data-parsley-required="true">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="text-align:left">
                        <div class="col-6">
                            <div class="form-group row">
                                <label for="maritalStatus" class="col-sm-4 col-form-label">Marital Status</label>
                                <div class="col-sm-8">
                                    <select class="form-control" name="maritalStatus" id="maritalStatus" data-parsley-required="true">
                                        @if (@Model?.teacher?.maritalStatus != null)
                                        {
                                            <option value="@Model?.teacher?.maritalStatus">@Model?.teacher?.maritalStatus</option>
                                        }
                                        else
                                        {
                                            <option value="">--Select One--</option>
                                        }
                                        <option value="Married">Married</option>
                                        <option value="Unmarried">Unmarried</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group row">
                                <label for="addressPresent" class="col-sm-4 col-form-label">Present Address</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="addressPresent" value="@Model?.teacher?.addressPresent" name="addressPresent" data-parsley-required="true">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="text-align:left">
                        <div class="col-6">
                            <div class="form-group row">
                                <label for="addressPermanant" class="col-sm-4 col-form-label">Permanant Address</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="addressPermanant" value="@Model?.teacher?.addressPermanant" name="addressPermanant" data-parsley-required="true">
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group row">
                                <label for="bloodGroup" class="col-sm-4 col-form-label">Blood Group</label>
                                <div class="col-sm-8">
                                    <select class="form-control" name="bloodGroup" id="bloodGroup">
                                        @if (@Model?.teacher?.bloodGroup != null)
                                        {
                                            <option value="@Model?.teacher?.bloodGroup">@Model?.teacher?.bloodGroup</option>
                                        }
                                        else
                                        {
                                            <option value="">--Select One--</option>
                                        }
                                        <option value="A+">A+</option>
                                        <option value="A-">A-</option>
                                        <option value="B+">B+</option>
                                        <option value="B-">B-</option>
                                        <option value="O+">O+</option>
                                        <option value="O-">O-</option>
                                        <option value="AB+">AB+</option>
                                        <option value="AB-">AB-</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="text-align:left">
                        <div class="col-6">
                            <div class="form-group row">
                                <label for="mobilePersonal" class="col-sm-4 col-form-label">Mobile Number</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="mobilePersonal" onkeypress="return validateNumber(event)" value="@Model?.teacher?.mobilePersonal" name="mobilePersonal" data-parsley-required="true">
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group row">
                                <label for="mobileOffice" class="col-sm-4 col-form-label">Office Number</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="mobileOffice" onkeypress="return validateNumber(event)" value="@Model?.teacher?.mobileOffice" name="mobileOffice">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="text-align:left">
                        <div class="col-6">
                            <div class="form-group row">
                                <label for="emailPersonal" class="col-sm-4 col-form-label">Email</label>
                                <div class="col-sm-8">
                                    <input type="email" class="form-control" id="emailPersonal" value="@Model?.teacher?.emailPersonal" name="emailPersonal" data-parsley-required="true">
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group row">
                                <label for="dateOfBirth" class="col-sm-4 col-form-label">Date Of Birth</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="dateOfBirth" value="@Model?.teacher?.dateOfBirth?.ToString("dd-MMM-yyyy")" name="dateOfBirth" readonly data-parsley-required="true">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="text-align:left">
                        <div class="col-6">
                            <div class="form-group row">
                                <label for="eTin" class="col-sm-4 col-form-label">E-TIN</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="eTin" value="@Model?.teacher?.eTin" name="eTin">
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group row">
                                <label for="nid" class="col-sm-4 col-form-label">NID</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="nid" value="@Model?.teacher?.nid" name="nid">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="text-align:left">
                        <div class="col-6">
                            <div class="form-group row">
                                <label for="heightCm" class="col-sm-4 col-form-label">Height(cm)</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="heightCm" value="@Model?.teacher?.heightCm" name="heightCm">
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group row">
                                <label for="weightKg" class="col-sm-4 col-form-label">Weight(Kg)</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="weightKg" value="@Model?.teacher?.weightKg" name="weightKg">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="text-align:left">
                        <div class="col-6">
                            <div class="form-group row">
                                <label for="gender" class="col-sm-4 col-form-label">Gender</label>
                                <div class="col-sm-8">
                                    <select class="form-control" name="gender" id="gender" data-parsley-required="true">
                                        @if (@Model?.teacher?.gender != null)
                                        {
                                            <option value="@Model?.teacher?.gender">@Model?.teacher?.gender</option>
                                        }
                                        else
                                        {
                                            <option value="">--Select One--</option>
                                        }
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group row">
                                <label for="religion" class="col-sm-4 col-form-label">Religion</label>
                                <div class="col-sm-8">
                                    <select class="form-control" name="religion" id="religion">
                                        @if (Model?.teacher?.religion != null)
                                        {
                                            <option value="@Model?.teacher?.religion?.Id">@Model?.teacher?.religion?.name</option>
                                        }
                                        else
                                        {
                                            <option value="">--Select One--</option>
                                        }
                                        @foreach (var item in Model?.religions)
                                        {
                                            <option value="@item?.Id">@item?.name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group row" style="text-align:left">
                                <label for="about" class="col-sm-4 col-form-label">About</label>
                                <div class="col-sm-8">
                                    <textarea class="form-control col-12" style="height:200px" id="about" name="about" data-parsley-required="true">@Model?.teacher?.about</textarea>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group row" style="text-align:left">
                                <label for="photo" class="col-sm-4 col-form-label">Photo</label>
                                <div class="col-sm-8">
                                    @if (Model?.teacher?.photoUrl != null)
                                    {
                                        <img id="user_img" style="width:200px;height:200px" src="~/@Model?.teacher?.photoUrl" alt="" class="img-thumbnail float-left">
                                    }
                                    else
                                    {
                                        <img id="user_img" style="width:200px;height:200px" src="~/images/user.png" alt="" class="img-thumbnail float-left">
                                    }
                                    <input type="file" title="Photo Upload" id="teacherPhotoUrl" name="teacherPhotoUrl" class="img-thumbnail float-left" />

                                </div>
                            </div>
                        </div>
                    </div>
                    <input type="button" style="background-color:#4F61F2" name="next" class="next action-button" value="Next" />
                </fieldset>
                <fieldset>
                    <h2 class="fs-title" style="display:inline">Teacher Social Media</h2>
                    <i class="fa fa-plus fa-2x float-right" style="color:#3cacf4" data-toggle="modal" data-target="#socailModal"></i>
                    <hr />
                    <div class="row" style="text-align:left">
                        <div class="col-12" style="text-align:left">
                            <table class="table table-bordered" id="socialTbl" style="width:100%">
                                <thead style="text-align:center">
                                    <tr>
                                        <th width="30%">Name</th>
                                        <th width="30%">User Name</th>
                                        <th width="30%">Link</th>
                                        <th width="10%"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ 
                                        var i = 100;
                                        @foreach (var item in Model?.teacherSocialMeadias)
                                        {
                                            <tr id="so@(i)">
                                                <td>@item?.name<input type="hidden" name="socialNameArr" value="@item?.name" data-parsley-required="true" /></td>
                                                <td>@item?.username<input type="hidden" name="socialUserNameArr" value="@item?.username"  data-parsley-required="true"/></td>
                                                <td>@item?.url<input type="hidden" name="socialLinkArr" value="@item?.url" /></td>
                                                <td><i onclick="removeSocial(@i)" class="fa fa-trash" style="color:red"></i></td>
                                            </tr>
                                            i++;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <input type="button" name="previous" style="background-color:#2AB7F8" class="previous action-button-previous" value="Previous" />
                    <input type="button" name="next" style="background-color:#4F61F2" class="next action-button" value="Next" />
                </fieldset>
                <fieldset>
                    <div class="col-12" style="margin:20px">
                        <h2 class="fs-title" style="display:inline">Teacher Career</h2>
                        <i class="fa fa-plus fa-2x float-right" style="color:#3cacf4" data-toggle="modal" data-target="#careerModal"></i>
                    </div>
                    <hr />
                    <input type="hidden" class="form-control" id="teacherId" value="@Model?.teacher?.Id" name="teacherId">
                    <div class="col-12" style="text-align:left">
                        <table class="table table-bordered" id="careerTbl" style="width:100%">
                            <thead style="text-align:center">
                                <tr>
                                    <th width="25%">Company Name</th>
                                    <th width="20%">Role</th>
                                    <th width="13%">Start Year</th>
                                    <th width="13%">End Year</th>
                                    <th width="19%">Description</th>
                                    <th width="10%"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var j = 100;
                                    @foreach (var item in Model?.teacherCareers)
                                    {
                                        <tr id="cr@(j)">
                                            <td>@item?.companyName<input type="hidden" name="companyNameArr" value="@item?.companyName"  data-parsley-required="true"/></td>
                                            <td>@item?.role<input type="hidden" name="roleArr" value="@item?.role"  data-parsley-required="true"/></td>
                                            <td>@item?.startYear<input type="hidden" name="startYearArr" value="@item?.startYear"  data-parsley-required="true"/></td>
                                            <td>@item?.endYear<input type="hidden" name="endYearArr" value="@item?.endYear"  data-parsley-required="true"/></td>
                                            <td>@item?.description<input type="hidden" name="descriptionArr" value="@item?.description"  data-parsley-required="true"/></td>
                                            <td><i onclick="removeCareer(@j)" class="fa fa-trash" style="color:red"></i></td>
                                        </tr>
                                        j++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <input type="button" name="previous" style="background-color:#2AB7F8" class="previous action-button-previous" value="Previous" />
                    <input type="button" name="next" style="background-color:#4F61F2" class="next action-button" value="Next" />
                </fieldset>
                <fieldset>
                    <div class="col-12" style="margin:20px">
                        <h2 class="fs-title" style="display:inline">Teacher Education</h2>
                        <i class="fa fa-plus fa-2x float-right" style="color:#3cacf4" data-toggle="modal" data-target="#educationModal"></i>
                    </div>
                    <div class="col-12" style="text-align:left">
                        <table class="table table-bordered" id="degreeTbl" style="width:100%">
                            <thead style="text-align:center">
                                <tr>
                                    <th width="25%">University</th>
                                    <th width="20%">Degree</th>
                                    <th width="20%">Session</th>
                                    <th width="25%">Description</th>
                                    <th width="10%"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var k = 100;
                                    @foreach (var item in Model?.teacherEducations)
                                    {
                                        <tr id="dg@(k)">
                                            <td>@item?.universityName<input type="hidden" name="universityArr" value="@item?.universityName"  data-parsley-required="true"/></td>
                                            <td>@item?.degree<input type="hidden" name="degreeArr" value="@item?.degree"  data-parsley-required="true"/></td>
                                            <td>@item?.session<input type="hidden" name="sessionArr" value="@item?.session"  data-parsley-required="true"/></td>
                                            <td>@item?.description<input type="hidden" name="desEduArr" value="@item?.description" /></td>
                                            <td><i onclick="removeCareer(@k)" class="fa fa-trash" style="color:red"></i></td>
                                        </tr>
                                        k++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <input type="button" name="previous" style="background-color:#2AB7F8" class="previous action-button-previous" value="Previous" />
                    <input type="button" name="next" style="background-color:#4F61F2" class="next action-button" value="Next" />
                </fieldset>
                <fieldset>
                    <input type="hidden" class="form-control" id="index" value="1">
                    <div class="col-12" style="margin:20px">
                        <h2 class="fs-title" style="text-align:center;display:inline">Teacher Expertice</h2>
                        <i class="fa fa-plus fa-2x float-right" style="color:#3cacf4" data-toggle="modal" data-target="#experticeModal"></i>
                    </div>
                    <div class="col-12">
                        <table class="table table-bordered" id="experticeTbl" style="width:100%">
                            <thead style="text-align:center">
                                <tr>
                                    <th width="45%">Title</th>
                                    <th width="45%">Subtitle</th>
                                    <th width="10%"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var l = 100;
                                    @foreach (var item in Model?.teacherExpertises)
                                    {
                                        <tr id="ex@(l)">
                                            <td>@item?.title<input type="hidden" name="titleArr" value="@item?.title"  data-parsley-required="true"/></td>
                                            <td>@item?.subtitle<input type="hidden" name="subtitleArr" value="@item?.subtitle" /></td>
                                            <td><i onclick="removeExpertice(@l)" class="fa fa-trash" style="color:red"></i></td>
                                        </tr>
                                        l++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <input type="button" name="previous" style="background-color:#2AB7F8" class="previous action-button-previous" value="Previous" />
                    <input type="button" name="next" style="background-color:#4F61F2" class="next action-button" value="Next" />
                </fieldset>
                <fieldset>
                    <h2 class="fs-title">Final</h2>
                    <input type="button" name="previous" style="background-color:#2AB7F8" class="previous action-button-previous" value="Previous" />
