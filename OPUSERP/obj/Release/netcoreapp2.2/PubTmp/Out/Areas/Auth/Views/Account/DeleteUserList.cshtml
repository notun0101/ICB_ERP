@model UserListViewModel
@{
    ViewData["Title"] = "Delete User List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold">Deleted User List</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="NomineeTable">
                    <thead>
                        <tr>
                            <th>User Id</th>
                            <th>Employee Name</th>
                            <th>Employee ID</th>
                            <th>Designation</th>
                            <th>Delete Date and Time</th>
                            <th>Deleted By</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var data in Model.userBackUpViewModels)
                        {
                            <tr>
                                <td>@data.userBackup.userName</td>
                                <td>@data?.employeeInfo?.nameEnglish</td>
                                <td>@data?.employeeInfo?.employeeCode</td>
                                <td>@data?.employeeInfo?.designation</td>
                                <td>@data.userBackup.createdAt?.ToString("dd-MMM-yyyy h:mm tt")</td>
                                <td>@data.userBackup.deleteBy</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#NomineeTable').DataTable();
        });
    </script>
}

