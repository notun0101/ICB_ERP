
@model BOMViewModel
@{
    ViewData["Title"] = "Trade List";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h4 class="m-0 font-weight-bold text-primary">Trade List</h4>
                <a href="/Production/Trade/Index?id=0" style="background-color:#024972;" class="btn btn-info btn-sm pull-right">Add New</a>
            </div>

            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="TradeList">
                    <thead>
                        <tr>
                            <th width="5%">SL#</th>
                            <th width="15%">Trade No</th>
                            <th width="10%">Trade Item Name</th>
                            <th width="25%">Trade Item Description</th>
                            <th width="10%">Action</th>
                    </thead>
                    <tbody>
                        @{
                            int i = 1;


                            @foreach (var data in Model.bOMMasters.Where(x => x.operationType == "Trade"))
                            {
                                <tr>
                                    <td>@i</td>
                                    <td><span style="display:none">-@data.Id-</span>@data.bomNo</td>
                                    <td>@data.itemSpecification.Item.itemName</td>
                                    <td>@data.bomItemDescription</td>
                                    <td>
                                        <a class="btn btn-success" href="/Production/Trade/Index?id=@data.Id" title="Edit"><i class="fa fa-edit"></i></a>
                                        @*<a class="btn btn-success" href="/Purchase/PurchaseOrder/PurchaseOrderPdfAction?MasterId=@data.Id" target="_blank" title="Purchase Invoice"><i class="fa fa-print"></i></a>*@
                                    </td>
                                </tr>
                                i++;
                            }

                        }

                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>


