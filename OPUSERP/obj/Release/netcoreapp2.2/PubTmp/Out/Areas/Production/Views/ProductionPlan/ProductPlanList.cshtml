@model ProductionPlanViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header row">
                <div class="col-md-10">
                    <h6 class="m-0 font-weight-bold text-primary">List of Production Plan</h6>
                </div>
                <div class="col-md-2">
                    <button type="button" class="btn btn-default btn-sm" style="width:100px;background-color:#024972;color:white;float:right;" onclick="location.href='@Url.Action("Index", "ProductionPlan", new { id = 0})'">Add New</button>
                </div>
            </div>

            <div class="card-body">
                <table class="table table-striped table-bordered" id="productionTable">
                    <thead>
                        <tr>
                            <th style="width:15%">Plan No</th>
                            <th style="width:15%">Plan Date</th>
                            <th style="width:15%">BOM Item</th>
                            <th style="width:10%">Qty</th>
                            <th style="width:20%">Plan Target Date</th>
                            <th style="width:10%">Action</th>
                    </thead>
                    <tbody>
                        @foreach (var data in Model.productionPlans)
                        {
                            <tr>
                                <td>@data.planNumber</td>
                                <td>@data.planDate?.ToString("dd-MMM-yyyy")</td>
                                <td>@data.bOMMaster.itemSpecification.specificationName</td>
                                <td>@data.quantity</td>
                                <td>@data.targetDate?.ToString("dd-MMM-yyyy")</td>
                                <td>
                                    <a class="btn btn-success" title="Edit" href="/Production/ProductionPlan/Index?id=@data.Id"><i class="fa fa-edit"></i></a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script type="text/javascript">

        $(document).ready(function () {
            $('#productionTable').DataTable();

        });
    </script>
}