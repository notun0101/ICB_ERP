<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">@Model.fLang.title</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="loeTable">
                    <thead>
                        <tr>
                            <th>@Model.fLang.levelOfEducation</th>
                            <th>@Model.fLang.levelOfEducationBn</th>
                            <th>Sort Order</th>

                            <th>@Model.fLang.action</th>
                    </thead>
                    <tbody>
                        @foreach (var data in Model.levelofEducations)
                        {
                        <tr>

                            <td>@data.levelofeducationName</td>
                            <td>@data.levelofeducationNameBn</td>
                            @if (data.sortOrder > 0)
                            {
                                <td>@data.sortOrder</td>

                            }
                            else
                            {
                                <td></td>
                            }
                            <td>
                                <a class="btn btn-success" onclick="Edit(@data.Id, '@data.levelofeducationName', '@data.levelofeducationNameBn','@data.sortOrder')" href="#"><i class="fa fa-edit"></i></a>&nbsp;&nbsp;
                                <a class="btn btn-danger" href="javascript:void(0)" onclick="DeleteMaster(@data.Id)"><i class="fa fa-trash-alt"></i></a>
                            </td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

