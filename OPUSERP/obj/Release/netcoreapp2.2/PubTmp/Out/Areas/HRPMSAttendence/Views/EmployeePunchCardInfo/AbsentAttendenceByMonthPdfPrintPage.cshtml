@model AllEmployeeLate
@{
    ViewData["Title"] = "AbsentAttendenceByMonthPdfPrintPage";
    Layout = "~/Views/Shared/_PrintView.cshtml";


}


<div class="card" style="width: 100%;">
    <div class="card-header row" style="background-color:#EAF6FA;">
        <div class="col-12">
            <h5 class="card-title" style="color: black">Absent Report</h5>
        </div>
    </div>
    <img src="~/Assets/processing.gif" id="loader" style="display: none; width: 400px; margin: 0 auto;" />
    <div class="card-body">
        <div class="row">
            <div class="col-sm-12 row">
                <div class="col-7" style="color: black; font-size: 17px; padding-top: 24px;">
                    <table style="border:none">
                        @if (Model.departmentName != null)
                        {
                            <tr>
                                <td><span style="font-weight:bold;">Department  </span></td>
                                <td>: @Model.departmentName</td>
                            </tr>
                        }
                        @if (Model.designationName != null)
                        {
                            <tr>
                                <td><span style="font-weight:bold;">Designation  </span></td>
                                <td>: @Model.designationName</td>
                            </tr>
                        }
                        <tr>
                            <td><span style="font-weight:bold;">Date </span></td>
                            <td>: @ViewBag.month, @ViewBag.year</td>
                        </tr>
                        @if (Model.shiftName != null)
                        {
                            <tr>
                                <td><span style="font-weight:bold;">Shift  </span></td>
                                <td>: @Model.shiftName</td>
                            </tr>
                        }



                    </table>
                </div>
                <div class="col-5">

                    <div class="card-body">
                        <table class="table table-striped  table-bordered" id="particularTable">
                            <thead>
                                <tr style="background-color:#A8D1F7">
                                    <th>Particular</th>
                                    <th>Days</th>
                                </tr>
                            </thead>
                            <tbody>

                                <tr>
                                    <td>Total Active Employees</td>
                                    <td id="tPresent">@Model.allActive</td>
                                </tr>
                                <tr>
                                    <td>Total Absent Employees</td>
                                    <td id="tAbsent">@Model.allAbsent</td>
                                </tr>

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>


    </div>
</div>
<hr />

<div class="row clearfix">
    <div class="col-12">
        <div class="card">
            @*<div class="card-header py-3 d-flex flex-row align-items-center justify-content-between" style="background-color: #EAF6FA;">
                    <h6 class="m-0 font-weight-bold">Attendence List</h6>
                </div>*@
            <div class="card-body">
                <table class="table  table-striped table-bordered nowrap" id="attendenceTable">
                    <thead>

                        <tr style="background-color: #CCCCCC">
                            <th>Employee Name</th>
                            <th>Employee Id</th>
                            <th>Total Works Days</th>
                            <th>Total Late</th>

                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model.employeeLates)
                        {
                            <tr>
                                <td>@item.employee?.nameEnglish</td>                                
                                <td>@item.employee?.employeeCode</td>
                                <td>@item.totalPresent</td>
                                <td>@item.totalAbsent</td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Assets/paginathing.js"></script>
    <script>
        $(document).ready(function () {
        });
    </script>
}