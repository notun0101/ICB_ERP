@model CustomerViewModel
@{
    ViewData["TitleMD"] = "Customer List";
    Layout = "~/Areas/MasterData/Views/Shared/_CustomerDataForm.cshtml";
}

<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Customer List</h6>
                @*<a class="btn btn-success" data-toggle="tooltip" title="New" href="@Url.Action("Index", "Customer")"><i class="fa fa-save"> Add Customer</i></a>*@
                <a href="/Distribution/Distributor/Index" class="btn btn-info btn-sm pull-right" style="background-color:#024972;">Add New</a>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="educationalTable">
                    <thead>
                        <tr>
                            <th>SL#</th>
                            <th>Distributor Name</th>
                            <th>Trade License Number</th>
                            <th>Contact Number</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int i = 1;
                            @foreach (var data in Model.relSupplierCustomerResourses.Where(x=>x.distributorTypeId!=null))
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@data.resource?.nameEnglish</td>
                                    <td>@data.resource?.LicenseNumber</td>
                                    <td>@data.resource?.mobile</td>
                                    <td>
                                        @*<a class="btn btn-success" href="@Url.Action("EditCustomer", "Customer", new { id = data.Id })"><i class="fa fa-edit"></i></a>*@
                                        <a class="btn btn-success" title="Edit Data" href="/Distribution/Distributor/Index?id=@data.resourceId&actionType=defaultOpen"><i class="fa fa-edit"></i></a>&nbsp;&nbsp;
                                        @*<a class="btn btn-success" title="View Details" href="/OtherSales/Customer/CustomerDetails?id=@data.Id&actionType=defaultOpen"><i class="fa fa-eye"></i></a>*@
                                    </td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

