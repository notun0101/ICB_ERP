@section ScriptsDMS{

    <script type="text/javascript">

        $(document).ready(function () {

            Common.Ajax('GET', '/global/api/GetAllEmployess', [], 'json', ajaxGetEmployees);
            Common.Ajax('GET', '/global/api/GetAllEmployess', [], 'json', ajaxGetEmployeesForAssign);
            //$('#divEmployee').hide();

            $(document).on('change', 'input[type=radio][name=hasEmployee]', function (event) {
                switch ($(this).val()) {
                    case 'Public':
                        $('#divEmployee').hide();
                        $("#hasEmployee").val('Public');
                        break;
                    case 'Private':
                        $('#divEmployee').show();
                        $("#hasEmployee").val('Private');
                        break;
                }

            });

            $('#tblDocDetails').DataTable();
            $('#ulComments').DataTable();
            $('#ulDoc').DataTable();
            $('#ulPhoto').DataTable();
            $('#tblLog').DataTable();

            $('#btnDocumentCancel').click(function (e) {
                location.reload();
            });
            $('#btnPhotoCancel').click(function (e) {
                location.reload();
            });

             let masterId = parseInt(@ViewBag.masterId) ? parseInt(@ViewBag.masterId) : 0;
            if (masterId != 0) {
                Common.Ajax('GET', '/DMS/DocumentUpload/GetDocumentMasterById/?id=' + masterId, [], 'json', ajaxGetDocumentMasterById);
                Common.Ajax('GET', '/global/api/DocumentUploadController/GetDocumentDetailByMasterId/' + masterId, [], 'json', ajaxGetDocumentDetailByMasterId);
            }

        });

        function show(input) {
            if (input.files && input.files[0]) {
                var filerdr = new FileReader();
                filerdr.onload = function (e) {
                    $('#user_img').attr('src', e.target.result);
                }
                filerdr.readAsDataURL(input.files[0]);
            }
        }
        function showdoc(input) {
            if (input.files && input.files[0]) {
                var filerdr = new FileReader();
                filerdr.onload = function (e) {
                    $('#user_doc').attr('src', e.target.result);
                }
                filerdr.readAsDataURL(input.files[0]);
            }
        }
        function DeleteComment(Id, actionTypeId) {
            swal({
                title: 'Are you sure?', text: 'Do you want to delete this record!', type: 'warning', showCancelButton: true, confirmButtonColor: '#3085d6', cancelButtonColor: '#d33', confirmButtonText: 'Yes, delete it!'
            }).then(function () {
                window.location.href = "/DMS/DocumentUpload/DeleteComments?Id=" + Id + '&actionId=' + actionTypeId;

                swal('', 'Deleted Successfully!', 'success')
            });
        }
        function DeletePhoto(actionTypeId, Id) {
            swal({
                title: 'Are you sure?', text: 'Do you want to delete this record!', type: 'warning', showCancelButton: true, confirmButtonColor: '#3085d6', cancelButtonColor: '#d33', confirmButtonText: 'Yes, delete it!'
            }).then(function () {
                window.location.href = "/DMS/DocumentUpload/DeletePhoto?actionId=" + actionTypeId + '&photoId=' + Id;
                swal('', 'Deleted Successfully!', 'success')
            });
        }

        function AddGroupFollower() {
            var id = $('#employeeInfoIdAssign').val();
            if (id == null || id == "") {
                swal('Warning', 'Incorrect Employee Please Try Correct Employee!!', 'warning');
                return false;
