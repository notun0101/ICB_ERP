@model JobRequisitionViewModel
@{
    ViewData["Title"] = "Apply";
    Layout = "~/Areas/Recruitment/Views/Shared/_RecruitmentForm.cshtml";
}

<div class="card" style="width: 100%;">
    <div class="card-body">
        <h5 class="card-title" style="color: #4e73df;">Job Requisition</h5>
        <hr>
        <div class="container">
            <div class="row">
                @*<input type="hidden" id="jobReqId" name="jobReqId" value="0" />*@
                <div class="col-8">
                    <div class="form-group row">
                        <label for="jobNo" class="col-sm-4 col-form-label">Job No</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="jobNo" name="jobNo" value="@Model.JobRequisition.jobNo" readonly />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="requisitionDate" class="col-sm-4 col-form-label">Requisition Date</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="requisitionDate" name="requisitionDate" value="@Model.JobRequisition.requisitionDate" readonly />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="appointmentDate" class="col-sm-4 col-form-label">Target Appointment Date</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="appointmentDate" name="appointmentDate" value="@Model.JobRequisition.appointmentDate" readonly />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="justification" class="col-sm-4 col-form-label">Job Justification</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="justification" name="justification" value="@Model.JobRequisition.justification" readonly />
                        </div>
                    </div>

                </div>
            </div><br />
            <div class="row">
                @*<input type="hidden" id="jobReqId" name="jobReqId" value="0" />*@
                <div class="col-6">
                    <div class="form-group row">
                        <label for="designation" class="col-sm-4 col-form-label">Job Designation</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="designation" name="designation" value="@Model.JobRequisition.designation" readonly />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="department" class="col-sm-4 col-form-label">Department</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="department" name="department" value="@Model.JobRequisition.departmentId" readonly />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="vacancy" class="col-sm-4 col-form-label">Vacancy No</label>
                        <div class="col-sm-8">
                            <input type="number" class="form-control" id="vacancy" name="vacancy" value="@Model.JobRequisition.vacancy" readonly />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="employmentStatus" class="col-sm-4 col-form-label">Employment Status</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="employmentStatus" name="employmentStatus" value="@Model.JobRequisition.employmentStatus" readonly />
                        </div>
                    </div>
                </div>

                <div class="col-6">
                    <div class="form-group row">
                        <label for="reqExperience" class="col-sm-4 col-form-label">Required Experience<span style="color:red;">*</span></label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="reqExperience" name="reqExperience" value="@Model.JobRequisition.reqExperience" readonly />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="jobLocation" class="col-sm-4 col-form-label">Job Location<span style="color:red;">*</span></label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="jobLocation" name="jobLocation" value="@Model.JobRequisition.jobLocation" readonly />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="salary" class="col-sm-4 col-form-label">Salary</label>
                        <div class="col-sm-8">
                            <input type="number" class="form-control" id="salary" name="salary" value="@Model.JobRequisition.salary" readonly />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="jobSource" class="col-sm-4 col-form-label">Job Source</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="jobSource" name="jobSource" value="@Model.JobRequisition.jobSource" readonly />
                        </div>
                    </div>
                </div>
            </div><br />
            <div class="row">
                @*<input type="hidden" id="jobReqId" name="jobReqId" value="0" />*@
                <div class="col-12">
                    <div class="form-group row">
                        <label for="jobContext" class="col-sm-4 col-form-label">Job Context</label>
                        <div class="col-sm-8">
                            <textarea class="form-control" id="jobContext" name="jobContext" readonly>@Model.JobRequisition.jobContext</textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="reqEducationalQ" class="col-sm-4 col-form-label">Educational Requirements</label>
                        <div class="col-sm-8">
                            <textarea class="form-control" id="reqEducationalQ" name="reqEducationalQ" readonly>@Model.JobRequisition.reqEducationalQ</textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="jobResponsibility" class="col-sm-4 col-form-label">Job Responsibilities</label>
                        <div class="col-sm-8">
                            <textarea class="form-control" id="jobResponsibility" name="jobResponsibility" readonly>@Model.JobRequisition.jobResponsibility</textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="addRequirements" class="col-sm-4 col-form-label">Additional Requirements</label>
                        <div class="col-sm-8">
                            <textarea class="form-control" id="addRequirements" name="addRequirements" readonly>@Model.JobRequisition.addRequirements</textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="compensationOthers" class="col-sm-4 col-form-label">Compensation &amp; Other Benifits</label>
                        <div class="col-sm-8">
                            <textarea class="form-control" id="compensationOthers" name="compensationOthers" readonly>@Model.JobRequisition.compensationOthers</textarea>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <a href="~/Recruitment/CVCollection/Create/@Model.JobRequisition.Id" id="btnApply" class="btn-primary btn-sm">Apply Now</a>
                    </div>
                </div>
            </div><br />

        </div>
    </div>
</div>



