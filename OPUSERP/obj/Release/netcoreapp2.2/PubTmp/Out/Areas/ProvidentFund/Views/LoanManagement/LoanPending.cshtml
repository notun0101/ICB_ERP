@model LoanApplicationViewModel
@{
    ViewData["Title"] = "LoanPending";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4 bg-light">

            <div class="card">
                <div class="card-body">
                    <h5 class="m-0 font-weight-bold text-primary"><b>Pending Application List</b></h5>
                    <hr />
                    <table class="table table-bordered table-striped" id="tblList" data-parsley-required="true">
                        <thead style="width:100%;background-color:lightgray">
                            <tr>
                                <th>
                                    Emp ID
                                </th> 
                                <th>
                                    Member ID
                                </th>
                                <th>
                                    Member Name
                                </th>
                                <th>
                                    Mobile
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Contribution
                                </th>
                                <th>
                                    Total fund
                                </th>
                                <th>
                                    Loan Amount
                                </th>
                                <th>
                                    Manage
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var data in Model.pFLoanManagements)
                                {
                                    <tr>
                                        <td>@data.EmployeeInfo?.employeeCode</td>
                                        <td>@data.pfmember?.memberCode</td>
                                    <td>@data.pfmember?.memberName</td>
                                    <td>@data.EmployeeInfo?.mobileNumberOffice</td>
                                    <td>@data.EmployeeInfo?.emailAddress</td>
                                        <td></td>
                                        <td></td>
                                        <td>@data.loanAmount</td>
                                        <td><a href="/ProvidentFund/LoanManagement/EditAppliedLoan?id=@data.Id"><i class="fas fa-eye" style="color:green"></i></a></td>
                                    </tr>
                                }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script>
        $(document).ready(function () {

            $('#tblList').DataTable();

        });
    </script>
}

