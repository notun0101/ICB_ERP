<script>
    $(document).ready(function () {
        $("#settlemtntDate").datepicker({ dateFormat: "dd-M-yy", showAnim: "scale", changeMonth: true, changeYear: true, yearRange: "2010:2030" }).datepicker("setDate", new Date());
        $("#expectedSettlemtntDate").datepicker({ dateFormat: "dd-M-yy", showAnim: "scale", changeMonth: true, changeYear: true, yearRange: "2010:2030" }).datepicker("setDate", new Date());
        $("#applicationDate").datepicker({ dateFormat: "dd-M-yy", showAnim: "scale", changeMonth: true, changeYear: true, yearRange: "2010:2030" }).datepicker("setDate", new Date());

    });

    function LoanApplicationApprove(id) {
        console.log($('#FormId').serializeArray());
        //var data = $('#FormId').serializeArray();

        //console.log(data[0].value)
        swal({
            title: 'Are you sure?', text: 'Do you want to submit this record!', type: 'warning', showCancelButton: true, confirmButtonColor: '#3085d6', cancelButtonColor: '#d33', confirmButtonText: 'Yes, submit it!'
        }).then(function () {
            $.ajax({
                url: '/ProvidentFund/LoanManagement/UpdateLoanStatus',
                type: 'POST',
                data: { id: id, status: 2 }
            }).done(function () {
                //if (data[0].value == 0) {
                swal('success', 'Approve Successfully!', 'success').then(function () {
                    // location.reload();
                    window.location.href = '/ProvidentFund/LoanManagement/LoanPending';
                });
                //}
                //else {
                //    swal('success', 'Updated Successfully!', 'success').then(function () {
                //        location.reload();
                //    });;
                //}
            }).fail(function () {
                swal('warning', 'Failed!', 'warning');
            })
        });
    };

    function LoanApplicationReject(id) {
        console.log($('#FormId').serializeArray());
        //var data = $('#FormId').serializeArray();

        //console.log(data[0].value)
        swal({
            title: 'Are you sure?', text: 'Do you want to submit this record!', type: 'warning', showCancelButton: true, confirmButtonColor: '#3085d6', cancelButtonColor: '#d33', confirmButtonText: 'Yes, submit it!'
        }).then(function () {
            $.ajax({
                url: '/ProvidentFund/LoanManagement/UpdateLoanStatus',
                type: 'POST',
                data: { id: id, status: 1 }
            }).done(function () {
                //if (data[0].value == 0) {
                swal('success', 'Reject Successfully!', 'success').then(function () {
                    //location.reload();
                    window.location.href = '/ProvidentFund/LoanManagement/LoanPending';
                });
                //}
                //else {
                //    swal('success', 'Updated Successfully!', 'success').then(function () {
                //        location.reload();
                //    });;
                //}
            }).fail(function () {
                swal('warning', 'Failed!', 'warning');
            })
        });
    };



    function Remove(Id) {

        if (Id == "") {
            swal('Warning', 'please try again', 'warning');
            return false;
        }
        swal({
            title: 'Are you sure?', text: 'Do you want to Reject this record!', type: 'warning', showCancelButton: true, confirmButtonColor: '#3085d6', cancelButtonColor: '#d33', confirmButtonText: 'Yes, Reject it!'
        }).then(function () {
            $.get("/ProvidentFund/Member/DeleteMember?id=" + Id, function (data) {
                if (data.Success) {
                    swal('', data.Message, 'success').then(function () {
                        location.reload();
                    })
                } else {
                    swal('Warning', data.Message, 'warning');
                }


            });

        })

    }

</script>
