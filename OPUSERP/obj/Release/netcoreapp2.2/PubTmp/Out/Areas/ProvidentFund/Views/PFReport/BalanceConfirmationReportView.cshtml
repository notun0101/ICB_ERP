@model OPUSERP.ProvidentFund.VMS.PFReportViewModel
@{
    ViewData["Title"] = "ReportCenter";
    Layout = "~/Views/Shared/_PrintView.cshtml";
}
@section Style{
    <style>
        .print-card-body {
            width: 100%;
            padding-bottom: 10px;
        }

        .vartical-table th {
            width: 25%;
        }

        .vartical-table td {
            width: 25%;
        }

        .horizontal-table {
            /*width: 100%;*/
        }

        .table td, .table th {
            padding: .3rem;
            font-size: 15px;
        }

        table {
            page-break-inside: auto
        }

        tr {
            page-break-inside: avoid;
            page-break-after: auto
        }

        thead {
            display: table-header-group
        }

        tfoot {
            display: table-footer-group
        }

        h6 {
            font-size: 14px;
            background-color: gray;
            color: white !important;
            padding: 3px;
        }
    </style>
}
<div style="page-break-after: always;"></div>
<div class="print-card">
    <div class="print-card-body">
        <div class="container-fluid">
            
            <div class="row" style="padding-top:0px;font-size:20px;">
                <div class="col-2">
                    <img src="/EmpImages/@Model.companies.FirstOrDefault().filePath" alt="OPUS ERP" style="height:80px; margin-left:30PX;    margin-top: 16px;" />
                </div>
                <div class="col-8">
                    <div style="color:black;text-align:center;">
                        <h3>Uttara Bank PLC.</h3>
                        <h3>Head Office , Dhaka</h3>
                        <h4><u></u></h4>
                    </div>
                </div>
                <div class="col-2"></div>
            </div>
            <div class="row" style="color:black">
                <div class="col-4" style="margin-top: 44px;">
                    <p>
                        <span style="color:black;font-size:18px">
                            <span> HO/CAD/ACCTTS/PF/</Span>
                        </span>
                    </p>
                </div>
                <div class="col-1"></div>
                <div class="col-3"></div>
                <div class="col-4 row text-center">
                    <table class="table mt-2" style="border:none; width: 85%;">
                        <tr>
                            <td style="font-size:18px;border:none;text-align:right;">
                                <p style="margin: 0">@DateTime.Now.ToString("dd/MM/yyyy")</p>
                               
                            </td>
                        </tr>
                       
                    </table>
                </div>
                <br/>
                <br/>
                <br/>
				<div class="col-4 row text-center">
					<b style="font-size:18px;color:black"> <u>TO WHOM IT MAY CONCERN</u></b>
				</div>
            </div>
            <br/>
            <br/>
            <div style=" padding-right:0px; padding-left:0px; color:black;font-size:18px">
					<p style="text-align: justify;">
						This is to certify that the balance in the Provident Fund of Uttara Bank Limited Employees' Provident 
                        Fund on account of Mr./Mrs. @Model.BalanceConfirmationVM?.nameEnglish, @Model.BalanceConfirmationVM.designationName, UBL ID: @Model.BalanceConfirmationVM.employeeCode, 
                       @Model.BalanceConfirmationVM.deptName, Head Office, Uttara Bank Bhaban, 47,Shahid Bir Uttam Asfaqus 
                        Samad Sarak, Motijheel C/A, Dhaka-1000 as on 30.06.2023 was Tk. 1,210,674.00 (Taka Twelve Lac 
                        Ten Thousand Six Hundred Seventy Four) only, out of which Tk. @Model.BalanceConfirmationVM.BankContribution represents the contribution 
                        of the bank and the balance Tk. @Model.BalanceConfirmationVM.ownContribution is his/her own contribution. Other related informations are as
                        under:
					</p>
				</div>
                 <br /><br /><br />

		<div class="container-fluid">
				<div class="col-12">
                    <div class="col-6">
                        <h3 style="font-size:20px;color:black;">
						
				     Outstanding Balance of Loan against EPF A/C as on 30.06.2023  <br/> <br/>@Model.BalanceConfirmationVM?.OutstandingBalance
						
					</h3>
					<h3 style="font-size:20px;color:black;">
						Interest charged on Loan against EPF A/c for the period from 01.07.2022 to 30.06.2023
					</h3>
                    <h3 style="font-size:20px;color:black;">
						Provident Fund Bank contribution for the period from 01.07.2022 to 30.06.2023
					</h3>

                    <h3 style="font-size:20px;color:black;">
						Provident Fund Own contribution for the period from 01.07.2022 to 30.06.2023
					</h3>
                    <h3 style="font-size:20px;color:black;">
					Interest accrued on EPF A/c for the period from 01.07.2022 to 30.06.2023
					</h3>

                    </div>
					<div class="col-6">
                        <h4>@Model.BalanceConfirmationVM?.OutstandingBalance</h4>
                        <h4>@Model.BalanceConfirmationVM?.InterestCharge</h4>
                        <h4>@Model.BalanceConfirmationVM?.BankContribution</h4>
                         <h4>@Model.BalanceConfirmationVM?.ownContribution</h4>
                         <h4>@Model.BalanceConfirmationVM?.distributedInterest</h4>
                    </div>
				
				</div>
			</div>
            <br/>
            <br/>
            <br/>
            <br/>
            <br/>
            <br/>
            
       
         </div>
    </div>
   </div>
   <div>
   <div class="fa-pull-left">
				<p style="border-top: 1px solid;font-size:18px;color:black;">Print at: @DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")</p>
</div>
 <div class="fa-pull-right">
				<p style="border-top: 1px solid;font-size:18px;color:black;">User: @Model.BalanceConfirmationVM.employeeCode</p>
</div>
 </div>
           

