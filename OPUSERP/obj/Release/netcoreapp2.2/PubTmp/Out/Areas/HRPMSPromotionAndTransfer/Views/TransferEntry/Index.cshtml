@model TransferEntryViewModel
@{
    ViewData["Title"] = "Transfer Entry";
}

<style>
    .redStar {
        color: red;
    }
</style>

<div class="card" style="width: 100%;">
    <div class="card-body">
        <h5 class="card-title" style="color: black">@Model.fLang.title</h5>
        <hr>
        <div class="container">
            <form asp-area="HRPMSPromotionAndTransfer" asp-controller="TransferEntry" asp-action="Index" method="post" data-parsley-validate="parsley">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="card" style="padding: 2%">
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group row">
                                <label for="employeeId" class="col-sm-2 col-form-label">@Model.fLang.employeeId <span style="float:right;" class="redStar">*</span></label>
                                <div class="col-sm-10">
                                    <div class="input-group mb-3">
                                        <input type="text" class="form-control" data-parsley-required="true" placeholder="Search" id="employeeId" name="employeeId" aria-label="Search" aria-describedby="basic-addon2">
                                        <input type="hidden" id="id" name="id" />
                                        <input type="hidden" id="transfarId" name="transfarId" value="0" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary form-control" type="button" onclick="getEmployee();"><i class="fa fa-search"></i></button>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="col-6">

                            <div class="form-group row">
                                <label for="designation" class="col-sm-4 col-form-label">@Model.fLang.designation</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" name="designation" id="designation" readonly>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group row">
                                <label for="employeeName" class="col-sm-4 col-form-label">@Model.fLang.employeeName</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" name="employeeName" id="employeeName" readonly>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <br />

                <b class="text-primary">Current Information</b>

                <div class="card" style="padding: 2%">

                    <div class="form-group row">
                        <label for="currentDesignation" class="col-sm-2 col-form-label">@Model.fLang.currentDesignation <span style="float:right;" class="redStar">*</span></label>
                        <div class="col-sm-4">
                            <input type="text" data-parsley-required="true" class="form-control" id="currentDesignation" value=" " name="currentDesignation">
                        </div>

                        <label for="currentPlace" class="col-sm-2 col-form-label">@Model.fLang.currentWorkingPlace</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="currentPlace" value=" " name="currentPlace">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="currentGrade" class="col-sm-2 col-form-label">@Model.fLang.grade</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="currentGrade" value=" " name="currentGrade">
                        </div>
                    </div>
                </div>
                <br />
                <b class="text-primary">Transfer Information</b>

                <div class="card" style="padding: 2%">

                    <div class="form-group row">
                        <label for="newDesignation" class="col-sm-2 col-form-label">@Model.fLang.newDesignation <span style="float:right;" class="redStar">*</span></label>
                        <div class="col-sm-4">
                            <input type="text" data-parsley-required="true" class="form-control" id="newDesignation" value=" " name="newDesignation">
                        </div>

                        <label for="newPlace" class="col-sm-2 col-form-label">@Model.fLang.transferWorkingPlace</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="newPlace" value=" " name="newPlace">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="newGrade" class="col-sm-2 col-form-label">@Model.fLang.newGrade</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="newGrade" value=" " name="newGrade">
                        </div>
                    </div>
                </div>
                <br />
                <div class="form-group row">
                    <label for="orderDate" class="col-sm-2 col-form-label">@Model.fLang.officeOrderDate</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="orderDate" value=" " name="orderDate">
                    </div>

                    <label for="effectDate" class="col-sm-2 col-form-label">@Model.fLang.effectDate</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="effectDate" value=" " name="effectDate">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="joiningDate" class="col-sm-2 col-form-label">@Model.fLang.joiningDate <span style="float:right;" class="redStar">*</span></label>
                    <div class="col-sm-10">
                        <input type="text" data-parsley-required="true" class="form-control" id="joiningDate" value=" " name="joiningDate">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="remark" class="col-sm-2 col-form-label">@Model.fLang.remarks</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" id="remark" value="" name="remark" rows="3"></textarea>
                    </div>
                </div>

                <button data-toggle="tooltip" title="Add" type="submit" value="Submit" class="btn btn-success btn-lg" style="float:right; margin-top:5px;"><i class="fas fa-save"></i></button>

            </form>
        </div>
    </div>
</div>
<br />
<hr />

<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">@Model.fLang.title</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="transferTable">
                    <thead>
                        <tr>
                            <th>@Model.fLang.employeeId</th>
                            <th>@Model.fLang.employeeName</th>
                            <th>@Model.fLang.currentWorkingPlace</th>
                            <th>@Model.fLang.effectDate</th>
                            <th>@Model.fLang.joiningDate</th>
                            <th>@Model.fLang.newGrade</th>
                            <th>@Model.fLang.newDesignation</th>
                            <th>@Model.fLang.status</th>
                            <th>@Model.fLang.action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var data in Model.transferEntries)
                        {
                            <tr>
                                <td>@data.employee.employeeCode</td>
                                <td>@data.employee.nameEnglish</td>
                                <td>@data.currentPlace</td>
                                <td>@data.effectDate</td>
                                <td>@data.joiningDate</td>
                                <td>@data.newGrade</td>
                                <td>@data.newDesignation</td>
                                <td>@data.status</td>
                                <td>

                                    @if (data.status == "approved")
                                    {
                                        <a class="btn btn-info" data-toggle="tooltip" title="Details" href="TransferEntry/Details/@data.Id"><i class="fa fa-eye"></i></a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-success" onclick="Edit(@data.Id, @data.employeeId, '@data.currentDesignation', '@data.currentPlace', '@data.currentGrade', '@data.newDesignation', '@data.newPlace', '@data.newGrade', '@data.orderDate', '@data.joiningDate', '@data.effectDate', '@data.remark', '@data.employee.nameEnglish', '@data.employee.employeeCode')" href="#"><i class="fa fa-edit"></i></a>
                                        @*<a class="btn btn-danger" href="#"><i class="fa fa-trash-alt"></i></a>*@
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#orderDate').datepicker({ uiLibrary: 'bootstrap4' });
            $('#effectDate').datepicker({ uiLibrary: 'bootstrap4' });
            $('#joiningDate').datepicker({ uiLibrary: 'bootstrap4' });
            $('#transferTable').DataTable();
        });

        function getEmployee() {
            var id = $("#employeeId").val();
            if (id == "") {
                alert("Please Enter Employee Id !!");
            } else {
                Common.Ajax('GET', '/global/api/employeeByCode/' + id, [], 'json', ajaxEmployee);
            }
        }

        function ajaxEmployee(response) {
            if (response) {
                $("#employeeName").val(response.nameEnglish);
                $("#id").val(response.Id);
                $("#designation").val(response.designation);
            } else {
                alert("Please Enter Correct Employee Id");
            }
        }

        function Edit(Id, employeeId, currentDesignation, currentPlace, currentGrade, newDesignation, newPlace, newGrade, orderDate, joiningDate,
            effectDate, remark, nameEnglish, employeeCode) {
            $("#transfarId").val(Id);
            $("#id").val(employeeId);
            $("#employeeName").val(nameEnglish);
            $("#employeeId").val(employeeCode);
            $("#currentDesignation").val(currentDesignation);
            $("#currentPlace").val(currentPlace);
            $("#currentGrade").val(currentGrade);
            $("#newDesignation").val(newDesignation);
            $("#newPlace").val(newPlace);
            $("#newGrade").val(newGrade);
            $("#orderDate").val(orderDate);
            $("#effectDate").val(effectDate);
            $("#joiningDate").val(joiningDate);
            $("#remark").val(remark);
        }

    </script>
}