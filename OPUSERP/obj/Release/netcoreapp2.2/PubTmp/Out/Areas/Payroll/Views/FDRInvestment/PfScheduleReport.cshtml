@model PFLoanViewModel
@{
    ViewData["Title"] = "PF Account Schedule Report";
    Layout = "~/Views/Shared/_PrintView.cshtml";
}

@section Style{
    <style>

        .print-card-body {
            width: 100%;
            padding-bottom: 10px;
        }

        .vartical-table th {
            width: 25%;
        }

        .vartical-table td {
            width: 25%;
        }

        .table td, .table th {
            padding: .3rem;
            font-size: 14px;
        }

        table {
            page-break-inside: auto;
            border-collapse: collapse;
        }

        tr {
            page-break-inside: avoid;
            page-break-after: auto;
        }

        thead {
            display: table-header-group;
        }

        tfoot {
            display: table-footer-group;
        }

        h6 {
            font-size: 14px;
            background-color: gray;
            color: white !important;
            padding: 3px;
        }
    </style>
}

<div class="print-card" style="width: 100%;">
    <div class="print-card-body">

        <div class="container-fluid">
            <div class="fa-pull-right">
                <p style="font-size:smaller;">Print at: @DateTime.Now.ToString("dd-MMM-yyyy HH:mm:ss")</p>
            </div>
            <div class="row" style="padding-top:0px;">
                <div class="col-2">
                    <img src="/EmpImages/@Model.companies.FirstOrDefault().filePath" alt="BDBL Logo" style="height:80px;" />
                </div>
                <div class="col-8">
                    <div style="color:black;text-align:center;">
                        <h3 style="font-size:20px;">BANGLADESH DEVELOPMENT BANK LIMITED</h3>
                        <h3 style="font-size:20px;">HEAD OFFICE: DHAKA</h3>
                        <h3 style="font-size:18px;">Central Accounts Depertment</h3>
                        <h3 style="font-size:15px;">PF Account Schedule Report</h3>
                        <h3 style="font-size:15px;">For the Year Ended @Model.rptDate</h3>
                        <br />
                    </div>
                </div>
                <div class="col-2"></div>
            </div>
        </div>

        <div class="container-fluid" style="color:black;">
            <table class="table table-bordered text-center">
                <thead>
                    <tr>
                        <th style="border-bottom:1px solid black !important;" rowspan="2">Sl No.</th>
                        <th style="border-bottom:1px solid black !important;"  rowspan="2">PF Id</th>
                        <th style="border-bottom:1px solid black !important;"  rowspan="2">Name</th>
                        <th style="border-bottom:1px solid black !important;"  rowspan="2">Desig.</th>
                        <th style="border-bottom:1px solid black !important;"  rowspan="2">Opening</th>
                        <th style="border-bottom:1px solid black !important;" colspan="12">Month</th> 
                        <th style="border-bottom:1px solid black !important;" rowspan="2">Interest</th>
                        <th style="border-bottom:1px solid black !important;" rowspan="2">Total</th>
                    </tr>
                    <tr>                      
                        <th style="border-bottom:1px solid black !important;">January</th>
                        <th style="border-bottom:1px solid black !important;">February</th>
                        <th style="border-bottom:1px solid black !important;">March</th>
                        <th style="border-bottom:1px solid black !important;">April</th>
                        <th style="border-bottom:1px solid black !important;">May</th>
                        <th style="border-bottom:1px solid black !important;">June</th>
                        <th style="border-bottom:1px solid black !important;">July</th>
                        <th style="border-bottom:1px solid black !important;">August</th>
                        <th style="border-bottom:1px solid black !important;">September</th>
                        <th style="border-bottom:1px solid black !important;">October</th>
                        <th style="border-bottom:1px solid black !important;">November</th>
                        <th style="border-bottom:1px solid black !important;">December</th>
                    </tr>
                </thead>
                <tbody>
                    @{ 
                        int i = 1;
                    }
                    @foreach (var item in Model.pfAccountsSchedules)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@item.pfMember?.memberCode</td>
                            <td>@item.employee?.nameEnglish</td>
                            <td>@item.employee?.lastDesignation?.shortName</td>
                            <td>@item.openingBalance</td>
                            <td>@item.january</td>
                            <td>@item.february</td>
                            <td>@item.march</td>
                            <td>@item.april</td>
                            <td>@item.may</td>
                            <td>@item.june</td>
                            <td>@item.july</td>
                            <td>@item.august</td>
                            <td>@item.september</td>
                            <td>@item.october</td>
                            <td>@item.november</td>
                            <td>@item.december</td>
                            <td>@item.interest</td>
                            <td>@item.total</td>
                        </tr>
                        i++;
                    }
                </tbody>
            </table>


        </div>



    </div>
</div>

@section Scripts{
    <script>

    </script>


}