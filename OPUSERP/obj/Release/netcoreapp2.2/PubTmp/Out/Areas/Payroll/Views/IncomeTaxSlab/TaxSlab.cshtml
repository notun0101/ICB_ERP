@model TaxSlabViewModel
@{
    ViewData["Title"] = "SalarySlab";
    Layout = "~/Areas/Payroll/Views/Shared/_TaxMasterForm.cshtml";
}

@section StyleMD{
}

<div class="card" style="width: 100%;">
    <div class="card-body">
        <h5 class="card-title" style="color: black">Salary Slab</h5>
        <hr>
        <div class="container">
            <form asp-area="Payroll" asp-controller="IncomeTaxSlab" asp-action="TaxSlab" method="post" data-parsley-validate="parsley">

                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row">
                    <input type="hidden" id="slabId" name="slabId" value=0>
                    <div class="col-sm-6">
                      

                        <div class="form-group row">
                            <label for="slabName" class="col-sm-3 col-form-label">Slab Name <span style="color:red;">*</span></label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="slabTypeName" value="" name="slabTypeName" data-parsley-required="true">
                            </div>
                        </div>

                      
                    </div>                   
                </div>
                <hr>
                <button type="submit" value="Submit" class="btn btn-success btn-lg" style="float:right; margin-top:5px;"><i class="fas fa-save"></i></button>
            </form>
        </div>
    </div>
</div>

<br />
<hr />
<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Tax Slab List</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="educationalTable">
                    <thead>
                        <tr>
                          
                            <th>Slab Name</th>
                       
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var data in Model.slabTypes)
                        {
                            <tr>
                          
                                <td>@data.slabTypeName</td>
                             
                                <td>
                                    <a class="btn btn-success" onclick="Edit(@data.Id,'@data.slabTypeName')" href="javascript:void(0)"><i class="fa fa-edit"></i></a>
                                   
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section ScriptsMD{
    <script>
        $(document).ready(function () {
         
            $("#slabType").addClass("active");
            $("#educationalTable").DataTable();
          
        });


        function Edit(Id, slabName) {
            $('#slabId').val(Id);
         
            $('#slabTypeName').val(slabName);
                 
        }

        function Delete(Id) {

        }

    </script>
}









