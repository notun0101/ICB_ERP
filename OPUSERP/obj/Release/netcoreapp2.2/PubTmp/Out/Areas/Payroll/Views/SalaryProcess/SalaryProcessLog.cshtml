@model ProcessSalaryRemarksViewModel
@{
    ViewData["Title"] = "Salary Process Log";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Style{
}

<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Salary Process Log List</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="educationalTable">
                    <thead>
                        <tr>
                            <th>SL#</th>
                            <th>Period Name</th>
                            <th>Process Type</th>
                            <th>Process By</th>
                            <th>Process At</th>
                            <th>IP Address</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 1;
                            @foreach (var data in Model.salaryProcessLogs)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@data?.salaryPeriod?.periodName</td>
                                    <td>@data.processType</td>
                                    <td>@data.createdBy</td>
                                    <td>@data.createdAt?.ToString("dd-MMM-yyyy hh:MM:ss tt")</td>
                                    <td>@data.ipAddress</td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {

            $('#educationalTable').DataTable();

        });



    </script>
}



