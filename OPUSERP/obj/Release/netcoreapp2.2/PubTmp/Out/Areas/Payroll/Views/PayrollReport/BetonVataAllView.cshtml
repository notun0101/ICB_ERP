@model PayrollReportViewModel
@{
	ViewData["Title"] = "Beton Vata";
	Layout = "~/Views/Shared/_PrintView.cshtml";
}

<div class="print-card" style="width: 100%;">
	<div class="print-card-body">

		<div class="container-fluid">
			<div class="row" style="padding-top:0px;">
				<div class="col-2">
					<img src="/EmpImages/@Model.companies.FirstOrDefault().filePath" alt="BDBL Logo" style="height:80px;" />
				</div>
				<div class="col-8">
					<div style="color:black;text-align:center;">
						<h3 style="font-size:22px;">@Model.companies.FirstOrDefault()?.companyName</h3>
						<h3 style="font-size:20px;">_________________________ ডিপার্টমেন্ট</h3>
						<h4 style="font-size:22px;"> <u>বেতন ভাতাদির (কোড-৬৩৯/৬৪০) বিস্তারিত বিবরণী</u> </h4>
						<h4 style="font-size:20px;"> (@OPUSERP.Helpers.AmountInWordBn.ConvertEnToBnNumber(Model.betonVataViewModel.FromDate?.ToString("dd/MM/yyyy")) থেকে @OPUSERP.Helpers.AmountInWordBn.ConvertEnToBnNumber(Model.betonVataViewModel.ToDate?.ToString("dd/MM/yyyy")) পর্যন্ত) </h4>
						<br />
					</div>
				</div>
				<div class="col-2">

				</div>
			</div>
		</div>
		<div class="container-fluid ">
			<div class="col-12">
				<h3 style="font-size:18px;color:black"> </h3>
			</div>
		</div>
		<br />
		<div class="container-fluid" style="color:black;">
			<table class="table table border" style="border:1px solid black !important">
				<thead>
					<tr>
						<th style="width:80%; text-align: center;">বিবরণ</th>
						<th style="width:20%; text-align: center;">টাকা</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>১। অফিসারদের মূল বেতন</td>
						<td style="text-align: right;">@OPUSERP.Helpers.AmountInWordBn.ConvertEnToBnNumber(Model.betonVataViewModel?.OfficerBasic?.ToString("0,0.00"))</td>
					</tr>
					<tr>
						<td>২। কর্মচারীদের মূল বেতন</td>
						<td style="text-align: right;">@OPUSERP.Helpers.AmountInWordBn.ConvertEnToBnNumber(Model.betonVataViewModel?.StaffBasic?.ToString("0,0.00"))</td>
					</tr>
					<tr>
						<td colspan="2">৩। ভাতা ও অন্যান্য সুযোগ সুবিধাঃ . . . . . . . . . . . . . . . . . . . . </td>
					</tr>
					<tr>
						<td>&nbsp; ক) আপ্যায়ন ভাতা (সামচ্যুয়ারী)</td>
						<td style="text-align: right;">@OPUSERP.Helpers.AmountInWordBn.ConvertEnToBnNumber(Model.betonVataViewModel?.SumptuaryTotal?.ToString("0,0.00"))</td>
					</tr>
					<tr>
						<td>&nbsp; খ) বাড়ী ভাড়া ভাতা</td>
						<td style="text-align: right;">@OPUSERP.Helpers.AmountInWordBn.ConvertEnToBnNumber(Model.betonVataViewModel?.HouseRentTotal?.ToString("0,0.00"))</td>
					</tr>
					<tr>
						<td>&nbsp; গ) শিক্ষা সংক্রান্ত ভাতা</td>
						<td style="text-align: right;">@OPUSERP.Helpers.AmountInWordBn.ConvertEnToBnNumber(Model.betonVataViewModel?.EducationTotal?.ToString("0,0.00"))</td>
					</tr>
					<tr>
						<td>&nbsp; ঘ) চার্জ ভাতা</td>
						<td style="text-align: right;">@OPUSERP.Helpers.AmountInWordBn.ConvertEnToBnNumber(Model.betonVataViewModel?.ChargeTotal?.ToString("0,0.00"))</td>
					</tr>
					<tr>
						<td>&nbsp; ঙ) যাতায়াত ভাতা</td>
						<td style="text-align: right;">@OPUSERP.Helpers.AmountInWordBn.ConvertEnToBnNumber(Model.betonVataViewModel?.ConveyanceTotal?.ToString("0,0.00"))</td>
					</tr>
					<tr>
						<td>&nbsp; চ) ধোলাই ভাতা</td>
						<td style="text-align: right;">@OPUSERP.Helpers.AmountInWordBn.ConvertEnToBnNumber(Model.betonVataViewModel?.WashingTotal?.ToString("0,0.00"))</td>
					</tr>
					<tr>
						<td>&nbsp; ছ) বিনোদন ভাতা</td>
						<td style="text-align: right;">@OPUSERP.Helpers.AmountInWordBn.ConvertEnToBnNumber(Model.betonVataViewModel?.EntertainmentTotal?.ToString("0,0.00"))</td>
					</tr>
					<tr>
						<td>&nbsp; জ) টেলিফোন ভাতা</td>
						<td style="text-align: right;">@OPUSERP.Helpers.AmountInWordBn.ConvertEnToBnNumber(Model.betonVataViewModel?.TelephoneTotal?.ToString("0,0.00"))</td>
					</tr>
					<tr>
						<td>&nbsp; ঝ) হাউজ হোল্ড ভাতা</td>
						<td style="text-align: right;">@OPUSERP.Helpers.AmountInWordBn.ConvertEnToBnNumber(Model.betonVataViewModel?.HouseHoldTotal?.ToString("0,0.00"))</td>
					</tr>
					<tr>
						<td>&nbsp; ঞ) অন্যান্য ভাতা</td>
						<td style="text-align: right;">@OPUSERP.Helpers.AmountInWordBn.ConvertEnToBnNumber(Model.betonVataViewModel?.OtherTotal?.ToString("0,0.00"))</td>
					</tr>
					<tr>
						<td>&nbsp; ট) এরিয়ার</td>
						<td style="text-align: right;">@OPUSERP.Helpers.AmountInWordBn.ConvertEnToBnNumber(Model.betonVataViewModel?.ArrearAdditionTotal?.ToString("0,0.00"))</td>
					</tr>
					<tr>
						<td>&nbsp; ঠ) চিকিৎসা ভাতা</td>
						<td style="text-align: right;">@OPUSERP.Helpers.AmountInWordBn.ConvertEnToBnNumber(Model.betonVataViewModel?.MedicalTotal?.ToString("0,0.00"))</td>
					</tr>
					<tr>
						<td style="text-align: right;">মোট=৬৩৯/৬৪০</td>
						<td style="text-align: right;">
							@OPUSERP.Helpers.AmountInWordBn.ConvertEnToBnNumber((Model.betonVataViewModel?.OfficerBasic +
																				Model.betonVataViewModel?.StaffBasic +
																				Model.betonVataViewModel?.SumptuaryTotal +
																				Model.betonVataViewModel?.HouseRentTotal +
																				Model.betonVataViewModel?.EducationTotal +
																				Model.betonVataViewModel?.ChargeTotal +
																				Model.betonVataViewModel?.ConveyanceTotal +
																				Model.betonVataViewModel?.WashingTotal +
																				Model.betonVataViewModel?.EntertainmentTotal +
																				Model.betonVataViewModel?.TelephoneTotal +
																				Model.betonVataViewModel?.HouseHoldTotal +
																				Model.betonVataViewModel?.OtherTotal +
																				Model.betonVataViewModel?.ArrearAdditionTotal +
																				Model.betonVataViewModel?.MedicalTotal)?.ToString("0,0.00"))
						</td>
					</tr>
				</tbody>
			</table>
		</div>



	</div>
</div>
<style>

	.print-card-body {
		width: 100%;
		padding-bottom: 10px;
	}

	.vartical-table th {
		width: 25%;
	}

	.vartical-table td {
		width: 25%;
	}

	.table td, .table th {
		padding: .3rem;
		font-size: 24px;
		border: 1px solid black !important;
	}

	table {
		page-break-inside: auto;
		border-collapse: collapse;
		border: 1px solid black !important;
	}

	tr {
		page-break-inside: avoid;
		page-break-after: auto;
		border: 1px solid black !important;
	}

	thead {
		display: table-header-group;
		border: 1px solid black !important;
	}

	tfoot {
		display: table-footer-group;
		border: 1px solid black !important;
	}

	h6 {
		font-size: 14px;
		background-color: gray;
		color: white !important;
		padding: 3px;
	}

</style>

