										<a class='btn btn-success ml-1' data-toggle='tooltip' title='Print' target='_blank' href='/HRPMSEmployee/InfoView/pdspdf/@data.Id'><i class='fa fa-print'></i></a>
									</div>
								</div>
							</a> <br />

						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>


@section Scripts{
	<script src="~/Assets/paginathing.js"></script>

	<script>


		$(document).ready(function () {
			var count = @Model?.employeesSalaryStructuresList.Count();
			var limit = (count / 8) > (8 * 3) ? 3 : (count / 8);

			$("#education").addClass("active");


			$('#gridView').show();
			$('#listView').hide();

			$('.fas').removeClass('active');
			$('.fa-th').addClass('active');

			$("#myInput1").on("keyup", function () {
				var value = $(this).val().toLowerCase();
				$(".searchdiv").filter(function () {
					$(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
				});
			});

            if ($("#cards").length != null) {

                $('#cards').paginathing({

                    // Limites your pagination number
                    // false or number
                    limitPagination: limit,
                    // limitPagination: false,

                    // Pagination controls
                    perPage: 8,
                    prevNext: true,
                    firstLast: true,
                    prevText: '&laquo;',
                    nextText: '&raquo;',
                    firstText: 'First',
                    lastText: 'Last',
                    containerClass: 'pagination-container',
                    ulClass: 'pagination',
                    liClass: 'page',
                    activeClass: 'active',
                    disabledClass: 'disabled',
                    pageNumbers: true,
                    insertAfter: '#cards'
                })
            }




			$('#requisitionListTable').DataTable().destroy();
			$('#requisitionListTable').DataTable({
				"pageLength": 10,

				buttons: [{
					extend: 'excel',
					text: 'Export to Excel',
					titleAttr: 'Click to Export',
					//title: 'Click to Export',
					exportOptions: {
						columns: ':not(:last-child)'
					}
				},
				{
					extend: 'pdf',
					text: 'Export to Pdf',
					titleAttr: 'Click to Export',
					customize: function (doc) {
						doc.content[1].table.widths = [50, 150, 180, 50, 50];
						doc['styles'] = {
							userTable: {
								margin: [0, 15, 0, 15]
							},
							tableHeader: {
								bold: !0,
								fontSize: 11,
								color: 'black',
								fillColor: '#F0F8FF',
								alignment: 'middle',
							}
						};
					}
				}]
			});

		});

		$('.fa-list-alt').click(function () {
			$('#listView').show();
			$('#gridView').hide();

			$('.fas').removeClass('active');
			$('.fa-list-alt').addClass('active');
		})
		$('.fa-th').click(function () {
			$('#listView').hide();
			$('#gridView').show();

			$('.fas').removeClass('active');
			$('.fa-th').addClass('active');
		})




	</script>
}