									}
								</td>*@
								<td>@data.salaryHead.salaryHeadName</td>
								<td>@data.amount</td>
								<td>@data.isActive</td>
								@*<td></td>*@
								@*<td>data.emailAddress</td>*@
								<td>
									<a class='btn btn-success' data-toggle='tooltip' title='Edit' target='_blank' href='/HRPMSEmployee/Photograph/EditGrid/@data.Id'><i class='fa fa-edit'></i></a> <a class='btn btn-success' data-toggle='tooltip' title='Preview' target='_blank' href='/HRPMSEmployee/InfoView/Index/@data.Id'><i class='fas fa-eye'></i></a> <a class='btn btn-info' data-toggle='tooltip' title='Print' target='_blank' href='/HRPMSEmployee/InfoView/pdspdf/@data.Id'><i class='fa fa-print'></i></a>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

<div class="row clearfix" id="gridView">
	<div class="col-12">
		<div class="card mb-4" id="requisitionListTable">
			<!-- Card Header - Dropdown -->
			<div class="card-header py-3 d-flex flex-row align-items-center">
				<h6 class="m-0 font-weight-bold text-primary">title</h6>
				<input type="text" class="form-control" placeholder="Search here..." id="myInput1" />
			</div>
			<!-- Card Body -->
			<div class="card-body">
				<div class="row" id="cards">
					@foreach (var data in Model?.employeesSalaryStructuresList)
					{
						<div class="col-md-3 mb-1 searchdiv">
							<a href="javascript:void(0)" style="text-decoration: none; color: black; cursor: default;">

								<div class="card c " style="font-size: 16px;">

									@*if (data.imageUrl != null)
									{
										<img src="~/@data.imageUrl" width="100" height="100" style="border-radius: 50%; border: 2px solid lightgray; padding: 5px" class="card-img-top center mt-2" alt="profile Image" />
									}
									else
									{
										<img src="~/images/user-icon-png.png" width="100" height="100" style="border-radius: 50%; border: 2px solid lightgray; padding: 5px" class="card-img-top center mt-2" alt="profile Image" />
									}*@


									<div class="card-body cb text-center">
										<p>@data.salaryHead.salaryHeadName</p>
										<p>@data.amount</p>
										<p>@data.isActive</p>
										@*<p>data.designation</p>*@
									</div>
									<div class="card-footer text-center font-weight-bold">
										<a class='btn btn-success' data-toggle='tooltip' title='Edit' target='_blank' href='/HRPMSEmployee/Photograph/EditGrid/@data.Id'><i class='fa fa-edit'></i></a>
