						</tr>
					</thead>
					<tbody>
						@foreach (var data in Model?.employeesSalaryStructuresList)
						{
							<tr>
								@*<td>
									if (data.imageUrl != null)
									{
										<img src="~/@data.imageUrl" height="50" width="50" style="border-radius: 50%" alt="profile Image" />
									}
