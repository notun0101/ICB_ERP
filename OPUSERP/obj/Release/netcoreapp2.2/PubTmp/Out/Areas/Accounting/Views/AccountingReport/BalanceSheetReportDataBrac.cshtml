                            {

                                if (data.Status == "G")
                                {
                                    //decimal? TotalCL = @data.Balance + @AbsNetProfit_net;
                                    decimal? TotalCL = @data.Balance;
                                    <tr>
                                        <td style="border:none"><b>@data.AccountName</b></td>
                                        <td style="text-align:right;border:none"><b>@TotalCL</b></td>
                                    </tr>

                                }
                                else
