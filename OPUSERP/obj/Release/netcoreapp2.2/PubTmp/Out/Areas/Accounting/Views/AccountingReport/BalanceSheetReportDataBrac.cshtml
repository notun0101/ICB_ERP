                                    //decimal? MFA = @data.Balance + @AbsNetProfit_net;
                                    decimal? MFA = @data.Balance;

                                    <tr>
                                        <td style="padding-left:20px;border:none">@data.AccountName</td>
                                        <td style="padding-right:25px; text-align:right;border:none">@MFA</td>
                                    </tr>

