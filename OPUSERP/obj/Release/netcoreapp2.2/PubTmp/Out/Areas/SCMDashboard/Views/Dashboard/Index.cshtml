@section Scripts{
    <script type="text/javascript">
        function GetPRData(response) {
            var datapoint = new Array();
            $.each(response, function (key, value) {
                var obj = new Object();
                obj.x = new Date(value.requisitionMaster.reqDate);
                obj.y = value.totalValue;
                obj.title = value.requisitionMaster.reqNo
                datapoint[datapoint.length] = obj;
            });

            var sales = new CanvasJS.Chart("MonthlyPR", {
                animationEnabled: true,
                theme: "light2",
                title: {
                    text: "PR",
                    fontColor: "black",
                    fontSize: 20,
                },
                axisY: {
                    title: "PR",
                },
                legend: {
                    cursor: "pointer"
                },
                data: [{
                    type: "line",
                    name: "PR",
                    showInLegend: true,
                    toolTipContent: "{title}<br>PR Value: {y}",
                    click: onClickSales,
                    dataPoints: datapoint,
                }]
            });

            sales.render();
            console.log(datapoint);
        }

        function onClickSales() {
            console.log('Sales');
        }

        $(document).ready(function () {
            $('#tblRequisition').DataTable();
            $('#tblApprovalStage').DataTable();
            $('#tblPurchaseStage').DataTable();
            $('#tblPurchaseOrder').DataTable();

            Common.Ajax('GET', '/api/dashoard/GetCurrentMonthPRStatus/', [], 'json', GetPRData);
        });
    </script>
}

