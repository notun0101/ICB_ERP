@model AssetAssignViewModel
@{
    ViewData["Title"] = "Asset UnAssigned List";
}


@section Style{
    <style>
        #assetUnassignTable tbody tr {
            cursor: pointer;
        }
    </style>
}

<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h4 class="m-0 font-weight-bold text-primary">Asset UnAssigned List</h4>
                <a href="/FAMSAssetRegister/AssetAssign/AssetAssignList?Id=0" class="btn btn-success btn-sm pull-right">Back To Assign List</a>
            </div>

            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="assetUnassignTable">
                    <thead>
                        <tr>
                            <th>Purchase No</th>
                            <th>Receive Date</th>
                            <th>Purchase Date</th>
                            <th>Supplier Name</th>
                            <th>Asset No</th>
                            <th>Asset Value</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var data in Model.assetRegistrations)
                        {
                            <tr>

                                <td><span style="display:none">-@data.Id-</span>@data.purchaseInfo.purchaseNo</td>
                                <td>@data.purchaseInfo.receiveDate?.ToString("dd-MMM-yyyy")</td>
                                <td>@data.purchaseInfo.purchaseDate?.ToString("dd-MMM-yyyy")</td>
                                <td>@data.purchaseInfo.supplier.organizationName</td>
                                <td>@data.assetNo</td>
                                <td>@data.assetValue</td>
                                <td>
                                    <a class="btn btn-success" data-toggle="tooltip" title="Edit" href="/FAMSAssetRegister/AssetAssign/AssetAssign/?id=0&assetId=@data.Id"><i class="fa fa-edit"></i></a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

