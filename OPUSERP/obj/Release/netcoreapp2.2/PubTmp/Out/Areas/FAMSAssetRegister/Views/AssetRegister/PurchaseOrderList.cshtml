@section Style{
    <style>
        #assetTable tbody tr {
            cursor: pointer;
        }
    </style>
}

<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->

           

            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="assetTable">
                    <thead>
                        <tr>
                            <th>PO No</th>
                            <th>PO Date</th>
                            <th>Supplier Name</th>
                            
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var data in Model.purchaseOrderViewModels)
                        {
                        <tr>

                            <td><span style="display:none">-@data.purchaseId-</span>@data.PONO</td>
                            <td>@data.purchaseDate</td>
                            <td>@data.supplierName</td>
                           
                            <td>
                                <a class="btn btn-success" data-toggle="tooltip" title="Edit" href="/FAMSAssetRegister/AssetRegister/AssetRegisterfromPOS/?id=@data.purchaseId"><i class="fa fa-edit"></i></a>

                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

