@model LeadViewModel
@{
    ViewData["Title"] = "Lead Detail";

}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="row" style="padding-top:5px;padding-bottom:0px;">
                <span style="color:black;" class="col-sm-9 m-1"><a href="/CRMLead/LeadManagement/AllLeadList">Lead List</a>/@Model.GetLeadDetailsById.leadNumber</span>
                <a href="/CRMLead/LeadManagement/LeadInfo/?Id=0"  class="btn btn-success btn-sm pull-right">Add New Lead</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;


                <a href="/CRMLead/LeadManagement/AllLeadList" style="background-color:#024972;" class="btn btn-info btn-sm pull-right">Back to List</a>
            </div>

            <div style="height:5px;"></div>
        </div>
    </div>
</div>
<br />

<div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
    <h6 class="m-0  text-primary">Lead Info</h6>
    <a href="/CRMLead/LeadManagement/LeadInfo/?Id=@ViewBag.masterId &leadName=@Model.GetLeadDetailsById.leadName" style="background-color:#024972;" class="btn-info btn-sm pull-right">Edit Lead Info</a>
    
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="card-body">
            <div class="container" style="background:white">
                <div style="margin-bottom:30px;color:black">

                    <span style="color:black;float:left;margin-left: -22px;"><span style="font-weight:700;color:black">Lead Name:</span>&nbsp; &nbsp;@Model.GetLeadDetailsById.leadName</span>
                    <span style="color:black;text-align:right;float:right"><span style="font-weight:700;color:black">Short Name:</span>&nbsp; &nbsp;@Model.GetLeadDetailsById.leadShortName</span>
                    <br />
                    <span style="color:black;float:left;margin-left: -22px;"><span style="font-weight:700;color:black">Lead No.:</span>&nbsp; &nbsp;@Model.GetLeadDetailsById.leadNumber</span>
                    <span style="color:black;text-align:right;float:right"><span style="font-weight:700;color:black">Sector Name:</span>&nbsp; &nbsp;@Model.GetLeadDetailsById.sector.sectorName</span>

                </div>
            </div>

        </div>
    </div>

</div>

<div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
    <h6 class="m-0  text-primary">Address Info</h6>
    <a href="/CRMLead/Address/Index/?Id=@ViewBag.masterId &leadName=@Model.GetLeadDetailsById.leadName" style="background-color:#024972;" class="btn btn-info btn-sm pull-right">Add Address</a>
</div>

<div class="row">
    <div class="col-sm-12">

        <table class="table table-striped table-bordered" id="Addresses" style="margin-left: 0px;">
            <thead style="border:1px solid;border-color:grey">
                <tr style="border:1px solid;border-color:grey">
                    <th width="40%" style="border:1px solid;border-color:grey">Mailing Address</th>
                    <th width="20%" style="border:1px solid;border-color:grey;">Division</th>
                    <th width="20%" style="border:1px solid;border-color:grey;">District</th>
                    <th width="40%" style="border:1px solid;border-color:grey">Thana</th>
                    <th width="20%" style="border:1px solid;border-color:grey;">Email</th>
                    <th width="20%" style="border:1px solid;border-color:grey;">Phone</th>

            </thead>
            <tbody style="color:black;border:1px solid;border-color:grey">
                @foreach (var data in Model.Addresses)
                {
                    <tr>

                        <td>@data.maillingAddress</td>
                        <td>@data.division.divisionName</td>
                        <td>@data.district.districtName</td>
                        <td>@data.thana.thanaName</td>
                        <td>@data.email</td>
                        <td>@data.phone</td>

                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
<div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
    <h6 class="m-0  text-primary">Contacts</h6>
    <a href="/CRMLead/LeadManagement/Contacts/?Id=@ViewBag.masterId &leadName=@Model.GetLeadDetailsById.leadName" style="background-color:#024972;" class="btn btn-info btn-sm pull-right">Add Contacts</a>
</div>

<div class="row">
    <div class="col-sm-12">

        <table class="table table-striped table-bordered" id="Contacts" style="margin-left: 0px;">
            <thead style="border:1px solid;border-color:grey">
                <tr style="border:1px solid;border-color:grey">
                    <th width="40%" style="border:1px solid;border-color:grey">Contact Owner</th>
                    <th width="20%" style="border:1px solid;border-color:grey;">Resource Name</th>
                    <th width="20%" style="border:1px solid;border-color:grey;">Phone</th>
                    <th width="40%" style="border:1px solid;border-color:grey">Mobile</th>
                    <th width="20%" style="border:1px solid;border-color:grey;">Email</th>
                    

            </thead>
            <tbody style="color:black;border:1px solid;border-color:grey">
                @foreach (var data in Model.contacts)
                {
                <tr>

                    <td>@data.contactOwner</td>
                    <td>@data.resource.resourceName</td>
                    <td>@data.resource.phone</td>
                    <td>@data.resource.mobile</td>
                    <td>@data.resource.email</td>

                </tr>
                }

            </tbody>
        </table>
    </div>
</div>
<div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
    <h6 class="m-0  text-primary">Activities</h6>
    <a href="/CRMLead/Activity/ActivityMaster/?Id=@ViewBag.masterId &leadName=@Model.GetLeadDetailsById.leadName" style="background-color:#024972;" class="btn btn-info btn-sm pull-right">Add Activities</a>
</div>

<div class="row">
    <div class="col-sm-12">

        <table class="table table-striped table-bordered" id="Activities" style="margin-left: 0px;">
            <thead style="border:1px solid;border-color:grey">
                <tr style="border:1px solid;border-color:grey">
                    <th width="40%" style="border:1px solid;border-color:grey">Lead Name</th>
                    <th width="20%" style="border:1px solid;border-color:grey;">Subject</th>
                    <th width="20%" style="border:1px solid;border-color:grey;">Category</th>
                    <th width="40%" style="border:1px solid;border-color:grey">Priority</th>
                    <th width="20%" style="border:1px solid;border-color:grey;">Description</th>
                    
            </thead>
            <tbody style="color:black;border:1px solid;border-color:grey">
                @foreach (var data in Model.activityMasters)
                {
                <tr>
                    <td>@data.leads.leadName</td>
                    <td>@data.subject</td>
                    <td>@data.activityCategory.activityCategoryName</td>
                    <td>@data.priority</td>
                    <td>@data.description</td>

                </tr>
                }

            </tbody>
        </table>
    </div>
</div>

<div class="row" style="padding-left:35px;padding-right:55px">
    <div class="col-sm-4" style="border:1px solid">
        <div class="card-header" style="padding:6px 0px 5px 3px;background:white">
            <label style="padding:0px 0px 0px 46px;font-size:16px;font-weight:600" class="col-sm-7 pull-left">Comments <span id="cmntCount" class="dot">@Model.comments.Count()</span></label>
            <label style="padding:0px 0px 0px 0px;" class="pull-right col-sm-4"><a href="#" class="btn-sm pull-right" style="color:deepskyblue" data-toggle="modal" data-target="#commentsModal" data-whatever="0"><i class="fa fa-plus fa-sm"></i> Add Comment</a></label>
        </div>

        <div class="card-body">

            <ul id="ulComments" class="list-group list-group-flush" style="font-size:14px;color: black;">
                <li class="list-group-item">
                    <span class="col-sm-2" style="border-width:1px 0px 1px 1px;border-style:solid">
                        Title
                    </span>
                    <span class="col-sm-8" style="border-width:1px 0px 1px 1px;border-style:solid">
                        Comments
                    </span>
                    <span class="col-sm-2" style="border-width:1px 1px 1px 1px;border-style:solid">
                        Action
                    </span>
                </li>
                @foreach (var data in Model.comments)
                {

                    <li class="list-group-item">
                        <span class="col-sm-2" style="border-width:1px 0px 1px 1px;border-style:solid">
                            @data.title
                        </span>
                        <span class="col-sm-8" style="border-width:1px 0px 1px 1px;border-style:solid">
                            @data.comment
                        </span>
                        <span class="col-sm-2" style="border-width:1px 1px 1px 1px;border-style:solid">
                            <a title="Delete" onclick="DeleteComment(@data.Id ,@data.actionTypeId)"><i class="fa fa-trash fa-fw"></i></a>
                        </span>
                    </li>
                }
            </ul>
        </div>
    </div>
    <div class="col-sm-4" style="border-width:1px 0px 1px 0px; border-style: solid;">
        <div class="card-header" style="padding:6px 0px 5px 3px;">
            <label style="padding:0px 0px 0px 0px;font-size:16px;font-weight:600" class="col-sm-7 pull-left">Photo <span style="color:white" class="photoDot">@Model.photoes.Count()</span></label>
            <label style="padding:0px 0px 0px 0px;" class="pull-right col-sm-4"><a href="#" class="btn-sm pull-right" style="color:deepskyblue" data-toggle="modal" data-target="#photoModal" data-whatever="@ViewBag.masterId"><i class="fa fa-plus fa-sm"></i> Add Photo</a></label>
        </div>
        <div class="card-body">
            <ul id="ulPhoto" class="list-group list-group-flush" style="max-height:250px;overflow-y:scroll;color:black;">
                @foreach (var data in Model.photoes)
                {

                    <li class="list-group-item">
                        <span class="col-sm-8">
                            <img src="@data.filePath" style="width:220px;height:100px;" />
                        </span>
                        <span class="col-sm-4">
                            <a title="View" href="@data.filePath" target="_blank"><i class="fa fa-eye fa-fw"></i></a>
                            <a title="Delete" onclick="DeletePhoto (@data.actionTypeId,@data.Id)"><i class="fa fa-trash fa-fw"></i></a>


                        </span>
                    </li>
                }
            </ul>
        </div>
    </div>
    <div class="col-sm-4" style="border:1px solid">
        <div class="card-header" style="padding:6px 0px 5px 3px;">
            <label style="padding:0px 0px 0px 0px;font-size:16px;font-weight:600" class="col-sm-7 pull-left">Documents <span style="color:white" class="photoDot">@Model.documents.Count()</span></label>
            <label style="padding:0px 0px 0px 0px;" class="pull-right col-sm-4"><a href="#" class="btn-sm pull-right" style="color:deepskyblue" data-toggle="modal" data-target="#docModal" data-whatever="@ViewBag.masterId"><i class="fa fa-plus fa-sm"></i> Add Documents</a></label>
        </div>
        <div class="card-body">
            <ul id="ulPhoto" class="list-group list-group-flush" style="max-height:250px;overflow-y:scroll;color:black;">
                @foreach (var data in Model.documents)
                {

                    <li class="list-group-item">
                        <span class="col-sm-8">
                            <label class="col-form-label">@data.fileName</label>
                        </span>
                        <span class="col-sm-4">
                            <a title="Download" href="@data.filePath" target="_blank"><i class="fa fa-eye fa-fw"></i></a>
                            <a title="Delete" onclick="DeletePhoto (@data.actionTypeId,@data.Id)"><i class="fa fa-trash fa-fw"></i></a>


                        </span>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="photoModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Photo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="frmPhoto" asp-area="CRMLead" asp-controller="LeadManagement" asp-action="SavePhoto" method="post" enctype="multipart/form-data" data-parsley-validate="parsley">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="modal-body">

                    <div class="form-group" enctype="multipart/form-data">

                        <label for="formFile" style="height:200px;width:100%">
                            <img id="user_img" src="~/images/upload.jpg" style="border:solid;height:200px; width:100%" />
                        </label>
                        or <input class="form-control input-sm" type="file" id="formFile" name="formFile" onchange="show(this)" />
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Name :</label>
                        <input type="text" class="form-control" id="subject" name="subject">
                        <input type="hidden" id="actionTypeId" name="actionTypeId" value="@ViewBag.masterId" />
                        <input type="hidden" id="documentId" name="documentId" value="0" />
                        <input type="hidden" id="actionType" name="actionType" value="Lead" />
                    </div>
                    <div class="form-group">
                        <label for="description" class="col-form-label">Description :</label>
                        <textarea class="form-control" rows="4" id="description" name="description"></textarea>
                    </div>

                </div>
                <div class="modal-footer">
                    <a href="javascript:void(0)" style="color:deepskyblue" data-dismiss="modal" id="btnPhotoCancel">Cancel</a>&nbsp;
                    <button type="submit" style="background-color:#024972;" class="btn-primary btn-sm">Upload</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal fade" id="docModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Document</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="frmDoc" asp-area="CRMLead" asp-controller="LeadManagement" asp-action="SaveDoc" method="post" enctype="multipart/form-data" data-parsley-validate="parsley">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="modal-body">

                    <div class="form-group" enctype="multipart/form-data">

                        <label for="docformFile" style="height:200px;width:100%">
                            <img id="user_doc" src="~/images/uploaddoc.jpg" style="border:solid;height:200px; width:100%" />
                        </label>
                        or <input class="form-control input-sm" type="file" id="docformFile" name="docformFile" onchange="showdoc(this)" />
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Name :</label>
                        <input type="text" class="form-control" id="subjectdoc" name="subject">
                        <input type="hidden" id="actionTypeIddoc" name="actionTypeId" value="@ViewBag.masterId" />
                        <input type="hidden" id="documentIddoc" name="documentId" value="0" />
                        <input type="hidden" id="actionTypedoc" name="actionType" value="Lead" />
                    </div>
                    <div class="form-group">
                        <label for="description" class="col-form-label">Description :</label>
                        <textarea class="form-control" rows="4" id="descriptiondoc" name="description"></textarea>
                    </div>

                </div>
                <div class="modal-footer">
                    <a href="javascript:void(0)" style="color:deepskyblue" data-dismiss="modal" id="btnDocumentCancel">Cancel</a>&nbsp;
                    <button type="submit" style="background-color:#024972;" class="btn-primary btn-sm">Upload</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal fade" id="commentsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">New  Comment</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frmComments" asp-area="CRMLead" asp-controller="LeadManagement" asp-action="SaveComment" method="post" enctype="multipart/form-data" data-parsley-validate="parsley">
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Title:</label>
                        <input type="text" class="form-control" id="title" name="title">
                        <input type="hidden" id="actionTypeId" name="actionTypeId" value="@ViewBag.masterId" />
                        @*<input type="hidden" id="leadsId" name="leadsId" value="@ViewBag.leadId">*@
                        <input type="hidden" id="commentsId" name="commentsId" value="0" />
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Comments<i style="color:red">*</i>:</label>
                        <textarea class="form-control" rows="4" maxlength="150" id="comment" name="comment" data-parsley-required="true"></textarea>
                    </div>
                    <div class="modal-footer">
                        <a href="javascript:void(0)" style="color:deepskyblue" data-dismiss="modal">Cancel</a>&nbsp;
                        <button type="submit" style="background-color:#024972;" class="btn-primary btn-sm">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script type="text/javascript">

        $(document).ready(function () {
            $('#btnDocumentCancel').click(function (e) {
                location.reload();
            });
            $('#btnPhotoCancel').click(function (e) {
                location.reload();
            });
        });
        function show(input) {
            if (input.files && input.files[0]) {
                var filerdr = new FileReader();
                filerdr.onload = function (e) {
                    $('#user_img').attr('src', e.target.result);
                }
                filerdr.readAsDataURL(input.files[0]);
            }
        }
        function showdoc(input) {
            if (input.files && input.files[0]) {
                var filerdr = new FileReader();
                filerdr.onload = function (e) {
                    $('#user_doc').attr('src', e.target.result);
                }
                filerdr.readAsDataURL(input.files[0]);
            }
        }
        function DeleteComment(Id, actionTypeId) {
            swal({
                title: 'Are you sure?', text: 'Do you want to delete this record!', type: 'warning', showCancelButton: true, confirmButtonColor: '#3085d6', cancelButtonColor: '#d33', confirmButtonText: 'Yes, delete it!'
            }).then(function () {
                window.location.href = "/CRMLead/LeadManagement/DeleteComments?Id=" + Id + '&actionId=' + actionTypeId;;

                swal('', 'Deleted Successfully!', 'success')
            });
        }
        function DeletePhoto(actionTypeId, Id) {
            swal({
                title: 'Are you sure?', text: 'Do you want to delete this record!', type: 'warning', showCancelButton: true, confirmButtonColor: '#3085d6', cancelButtonColor: '#d33', confirmButtonText: 'Yes, delete it!'
            }).then(function () {
                window.location.href = "/CRMLead/LeadManagement/DeletePhoto?actionId=" + actionTypeId + '&photoId=' + Id;
                swal('', 'Deleted Successfully!', 'success')
            });
        }


    </script>
}
