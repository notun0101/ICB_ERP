                                </div>*@
                            @*<div class="col-md-12">
                                    <table>

                                    </table>
                                </div>*@
                        </div>
                    </div>
                </div>

                <br />
                <div class="card">
                    <div class="card-header">
                        <h5 style="color: black;">Experience : </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <table class="table table-bordered" id="ExpTbl">
                                <thead>
                                    <tr>
                                        <th>Name of Office </th>
                                        <th>Position</th>
                                        <th>Joining Date</th>
                                        <th>Resigning Date </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var data in Model.ApplicationExp)
