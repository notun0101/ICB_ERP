
@{
    ViewData["Title"] = "Select Candidate for Recruitment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Style{
}

<div class="card" style="width: 100%;">
    <div class="card-body">
        <h5 class="card-title" style="color: black">Select Candidate For Recruitment</h5>
        <hr>
        <div class="container">
            <form asp-area="HRPMSMasterData" asp-controller="SelectCandidateForRecruitment" asp-action="Index" method="post">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="row">
                    <div class="col-sm-3"></div>

                    <div class="col-sm-6">
                        <div class="form-group row">
                            <label for="jobCircularReference" class="col-sm-4 col-form-label">Job Circular Reference</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="jobCircularReference" id="jobCircularReference">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="quota" class="col-sm-4 col-form-label">Quota</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="quota" id="quota">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-info btn-sm" style="float:right; margin-top:5px;"><i class="fas fa-search"></i> Search</button>
                    </div>

                    <div class="col-sm-3"></div>
                </div>
                <hr />

                <div class="row">
                    <div class="col-sm-12">
                        <table class="table table-striped table-bordered" id="candidateTable">
                            <thead>
                                <tr>
                                    <th>Applicant ID</th>
                                    <th>Applicant Name</th>
                                    <th>Written</th>
                                    <th>Viva</th>
                                    <th>Total</th>
                                    <th>Qualification</th>
                                    <th>Photo</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>123456987</td>
                                    <td>Faisal Ahmed</td>
                                    <td>78</td>
                                    <td>44</td>
                                    <td>122</td>
                                    <td>MBA</td>
                                    <td>
                                        <img src="~/images/user.png" style="height:50%;" />
                                    </td>
                                    <td>
                                        <input type="checkbox" class="form-control" name="isSelect" id="isSelect" />
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>                    
                </div>
                <hr />
                <button type="button" class="btn btn-success btn-sm" style="float:right; margin-top:5px;"><i class="fas fa-save"></i> Submit</button>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#candidateTable').DataTable();
        });
    </script>
}