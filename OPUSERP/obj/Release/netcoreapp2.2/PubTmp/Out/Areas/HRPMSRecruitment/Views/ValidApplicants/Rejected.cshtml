@model ApplicationFormViewModel
@{
    ViewData["Title"] = "Rejected Applicants";
}
<br />
<h4 class="text text-center" style="color:black">List of Rejected Applicants</h4><br />
<br />

<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">List of Rejected Applicants</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="validApplicantsTable">
                    <thead>
                        <tr>
                            <th>SN</th>
                            <th>Name</th>
                            <th>Mobile No.</th>
                            <th>District</th>
                            <th>NID No</th>
                            <th>Date of Birth</th>
                            <th>Occupation</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ var Count = 1;
                            @foreach (var data in Model.applicationForms.Where(x => x.status == 3))
                               {
                                <tr>
                                    <td>@Count</td>
                                    <td>@data.nameEN</td>
                                    <td>@data.mobile</td>
                                    <td>@data.birtPlace</td>
                                    <td>@data.nidNO</td>
                                    <td>@data.birthDate</td>
                                    <td>@data.occupation</td>
                                </tr>
                                Count++;
                            }
                            
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $("#language").addClass("active");
            $('#validApplicantsTable').DataTable();
        });

    </script>
}

