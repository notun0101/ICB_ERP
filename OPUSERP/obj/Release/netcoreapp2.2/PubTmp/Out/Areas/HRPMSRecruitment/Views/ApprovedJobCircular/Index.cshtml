@model CreateJobCircularViewModel
@{
    ViewData["Title"] = "Approved Job Circuler";
}
<br />
<h4 class="text text-center" style="color:black">@Model.fLang.title</h4><br />

<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">@Model.fLang.title</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="approvalTable">
                    <thead>
                        <tr>
                            <th>@Model.fLang.vacancyName</th>
                            <th>@Model.fLang.applicationDeadline</th>
                            <th>@Model.fLang.circularDate</th>
                            <th>@Model.fLang.requestedVacancy</th>
                            <th>@Model.fLang.action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var data in Model.jobCirculars)
                        {
                            <tr>
                                <td>@data.positionName</td>
                                <td>@data.applicationDeadLine</td>
                                <td>@data.applicationDeadLine</td>
                                <td>@data.noOfPosition</td>
                                <td>
                                    <a class="btn btn-success" href="ApplicationForm/Index">Apply</a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $("#language").addClass("active");
            $('#approvalTable').DataTable();
        });

    </script>
}

