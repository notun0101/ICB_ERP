@model ContentViewModel
@{
    ViewData["Title"] = Model.fLang.imageGallery;
}

@section Style{
    <style>
        p {
            color: black;
        }

        h6 {
            color: black;
        }
        
        h5 {
            color: black;
            font-weight:bold;
        }

        b {
            color: black;
        }
        .folder{
            height:200px;
            width:200px;
        }
    </style>
}


<div class="container-fluid">
    <div class="col-12">
        <div class="row card-header">
            <div class="col-10">
                <h4 class="m-0 font-weight-bold text-primary">@Model.fLang.imageGallery</h4>
            </div>
        </div>
        <div class="row">
            @foreach (var data in Model.galleryTitles)
            {
                <!-- Blog Post -->
                <div class="col-3">
                    <a href="~/Gallery/Gallery/GalleryDetails/@data.Id" style="text-decoration:none">
                        <center><img class="card-img-top folder" src="~/images/folder-icon.png" alt="Card image cap"></center>
                        <h5 class="card-title text-center">@data.title</h5>
                    </a>
                </div>
            }
        </div>
    </div>
</div>

