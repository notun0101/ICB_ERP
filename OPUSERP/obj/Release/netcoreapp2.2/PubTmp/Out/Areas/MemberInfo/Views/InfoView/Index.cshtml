                    </div>
                    <!-- Card Body -->
                    <div class="card-body">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>@Model.fLang.licenseLn.licenseNumber</th>
                                    <th>@Model.fLang.licenseLn.licenseCategory</th>
                                    <th>@Model.fLang.licenseLn.place</th>
                                    <th>@Model.fLang.licenseLn.dateOfIssue</th>
                                    <th>@Model.fLang.licenseLn.dateOfExpair</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var data in Model.drivingLicenses)
                                {
                                    <tr>
                                        <td>@data.licenseNumber</td>
                                        <td>@data.category</td>
