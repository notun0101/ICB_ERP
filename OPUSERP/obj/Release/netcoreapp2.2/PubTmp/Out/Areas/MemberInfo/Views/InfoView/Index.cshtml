                                        <td>@data.dateOfIssue?.ToString("yyyy-MM-dd")</td>
                                        <td>@data.dateOfExpair?.ToString("yyyy-MM-dd")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>*@

            <!--Service/Transfar-->
            <div class="row clearfix">
                <div class="col-12">
                    <h6 class="m-0 font-weight-bold text-primary">@Model.fLang.transferLogLn.title</h6>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                    <table class="table table-striped table-bordered" id="transferTable">
                        <thead>
                            <tr>
                                <th>@Model.fLang.transferLogLn.organization</th>
                                <th>@Model.fLang.transferLogLn.fromDate</th>
                                <th>@Model.fLang.transferLogLn.toDate</th>
                                <th>@Model.fLang.transferLogLn.designation</th>
                                <th>@Model.fLang.transferLogLn.address</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var data in Model.transferLogs)
                            {
                                <tr>
                                    <td>@data.workStation</td>
                                    <td>@data.from?.ToString("yyyy-MM-dd")</td>
                                    <td>@data.to?.ToString("yyyy-MM-dd")</td>
                                    <td>@data.designation</td>
                                    <td>@data.department</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!--Training-->
            <div class="row clearfix">
                <div class="col-12">
                    <h6 class="m-0 font-weight-bold text-primary">@Model.fLang.trainingLn.title</h6>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                    <table class="table table-striped table-bordered" id="trainingTable">
                        <thead>
                            <tr>
                                <th>@Model.fLang.trainingLn.trainingType</th>
                                <th>@Model.fLang.trainingLn.country</th>
                                <th>@Model.fLang.trainingLn.trainingTitle</th>
                                <th>@Model.fLang.trainingLn.institute</th>
                                @*<th>@Model.fLang.trainingLn.country</th>*@
                                <th>@Model.fLang.trainingLn.trFromDate</th>
                                <th>@Model.fLang.trainingLn.trToDate</th>
                                <th>@Model.fLang.trainingLn.remarks</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var data in Model.traningLogs)
                            {
                                <tr>
                                    <td>@data.trainingCategory.trainingCategoryName</td>
                                    @if (data.country != null)
                                    {
                                        <td>@data.country.countryName</td>
                                    }
                                    else
                                    {
                                        <td></td>
                                    }

                                    <td>@data.trainingTitle</td>
                                    <td>@data.trainingInstitute.trainingInstituteName</td>
                                    @*<td>@data.country.countryName</td>*@
                                    <td>@data.fromDate?.ToString("yyyy-MM-dd")</td>
                                    <td>@data.toDate?.ToString("yyyy-MM-dd")</td>
                                    <td>@data.remarks</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



