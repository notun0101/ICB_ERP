@model SpouseViewModel

@{
    ViewData["Title"] = Model.fLang.title;
    Layout = "~/Areas/MemberInfo/Views/Shared/_EmployeeForm.cshtml";
}

@section StyleEmp{
    <link rel="stylesheet" href="https://unpkg.com/multiple-select@1.3.1/dist/multiple-select.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <style>
        .redStar {
            color: red;
        }
        #skills{
            width:30%;
        }
    </style>
}

<div class="card" style="width: 100%;">
    <div class="card-body">
        <div class="row">
            <div class="col-8">
                <h5 class="card-title" style="color: black">@Model.fLang.title</h5>
            </div>
            <div class="col-4">
                <h6 class="identity-box">@Model.employeeNameCode</h6>
            </div>
        </div>
        <hr>
        <div class="container">
            <form asp-area="MemberInfo" asp-controller="Spouse" asp-action="Index" method="post" data-parsley-validate="parsley">

                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group row">
                            <label for="spouseName" class="col-sm-4 col-form-label">@Model.fLang.spouseName <span class="redStar">*</span></label>
                            <div class="col-sm-8">
                                <input data-parsley-pattern="^[a-z A-Z ]+$" data-parsley-trigger="keyup" type="text" class="form-control" id="spouseName" value="" name="spouseName" data-parsley-required="true">
                                <input type="hidden" id="employeeID" name="employeeID" value="@Model.employeeID">
                                <input type="hidden" id="spouseID" name="spouseID" value="0">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="homeDistrict" class="col-sm-4 col-form-label">@Model.fLang.homeDistrict</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="homeDistrict" value="" name="homeDistrict">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="dateOfBirth" class="col-sm-4 col-form-label">@Model.fLang.dateOfBirth <span class=""></span></label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="dateOfBirth" value="" name="dateOfBirth">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="occupation" class="col-sm-4 col-form-label">@Model.fLang.occupation <span class=""></span></label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="occupation" value="" name="occupation">
                            </div>
                        </div>

                        <div class="form-group row" style="display:none;">
                            <label for="designation" class="col-sm-4 col-form-label">@Model.fLang.designation </label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="designation" value="" name="designation">
                            </div>
                        </div>
                        <div class="form-group row" style="display:none;">
                            <label for="bin" class="col-sm-4 col-form-label">@Model.fLang.bin </label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="bin" value="" name="bin">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="bloodGroup" class="col-sm-4 col-form-label">@Model.fLang.bloodGroup</label>
                            <div class="col-sm-8">
                                <select class="form-control" name="bloodGroup" id="bloodGroup">
                                    <option value="">Select</option>
                                    <option value="O-">O-</option>
                                    <option value="O+">O+</option>
                                    <option value="A-">A-</option>
                                    <option value="A+">A+</option>
                                    <option value="B-">B-</option>
                                    <option value="B+">B+</option>
                                    <option value="AB-">AB-</option>
                                    <option value="AB+">AB+</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row" style="display:none;">
                            <label for="higherEducation" class="col-sm-4 col-form-label">@Model.fLang.higherEducation </label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="higherEducation" value="" name="higherEducation">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="skills" class="col-sm-4 col-form-label">@Model.fLang.skill</label>
                            <div class="col-sm-8">
                                <select class="multiple-select" multiple="multiple" name="skills" id="skills">
                                    @foreach (var data in Model.specialSkills)
                                    {
                                        <option value="@data.Id">@data.skilName</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group row">
                            <label for="spouseNameBN" class="col-sm-4 col-form-label">@Model.fLang.spouseNameBN</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="spouseNameBN" value="" name="spouseNameBN">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="emailAddress" class="col-sm-4 col-form-label">@Model.fLang.emailAddress</label>
                            <div class="col-sm-8">
                                <input type="text" data-parsley-type="email" data-parsley-trigger="keyup" class="form-control" id="emailAddress" value="" name="emailAddress">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="dateOfMarriage" class="col-sm-4 col-form-label">@Model.fLang.dateOfMarriage <span class=""></span></label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="dateOfMarriage" value="" name="dateOfMarriage">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="gender" class="col-sm-4 col-form-label">@Model.fLang.gender </label>
                            <div class="col-sm-8">
                                <select class="form-control" name="gender" id="gender">
                                    <option>Male</option>
                                    <option>Female</option>
                                    <option>Others</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row" style="display:none;">
                            <label for="organization" class="col-sm-4 col-form-label">@Model.fLang.organization </label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="organization" value="" name="organization">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="nid" class="col-sm-4 col-form-label">@Model.fLang.nid </label>
                            <div class="col-sm-8">
                                <input type="number" class="form-control" id="nid" value="" name="nid">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="contact" class="col-sm-4 col-form-label">@Model.fLang.contact <span class=""></span></label>
                            <div class="col-sm-8">
                                <input type="number" class="form-control" id="contact" value="" name="contact">
                            </div>
                        </div>

                    </div>
                </div>


















                <hr>
                <button type="submit" value="Submit" class="btn btn-success btn-lg" style="float:right; margin-top:5px;"><i class="fas fa-save"></i></button>

            </form>
        </div>
    </div>
</div>

<br />
<hr />
<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">@Model.fLang.title</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="childrenTable">
                    <thead>
                        <tr>
                            <th>@Model.fLang.spouseName</th>
                            <th>@Model.fLang.dateOfBirth</th>
                            <th>@Model.fLang.gender</th>
                            <th>@Model.fLang.bloodGroup</th>
                            <th>@Model.fLang.skill</th>
                            <th>@Model.fLang.action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var data in Model.spouses)
                        {
                            <tr>
                                <td>@data.spouseName</td>
                                <td>@data.dateOfBirth?.ToString("MM/dd/yyyy")</td>
                                <td>@data.gender</td>
                                <td>@data.bloodGroup</td>
                                <td>@data.spacialSkills</td>
                                <td>
                                    <a class="btn btn-success" onclick="Edit(@data.Id,'@data.employeeId','@data.spouseName','@data.spouseNameBN','@data.email','@data.dateOfBirth?.ToString("MM/dd/yyyy")','@data.dateOfMarriage?.ToString("MM/dd/yyyy")','@data.gender','@data.occupation','@data.designation','@data.organization','@data.bin','@data.nid','@data.bloodGroup','@data.contact','@data.highestEducation','@data.homeDistrict','@data.spacialSkillIds')" href="#"><i class="fa fa-edit"></i></a>
                                    <a class="btn btn-danger" onclick="Remove(@data.Id,@data.employeeId)" href="#"><i class="fa fa-trash-alt"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section ScriptsEmp{
    <script src="https://unpkg.com/multiple-select@1.3.1/dist/multiple-select.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        $(document).ready(function () {
            $("#spouse").addClass("active");
            $("#childrenTable").DataTable();
            $('#skills').multipleSelect({
                onDropdownShow: function (event) {
                    $(this).closest('select').css('width', '50px')
                //    var menu = $(event.currentTarget).find(".dropdown-menu");
                //    var original = $(event.currentTarget).prev("select").attr("id");

                    
                //    if (original === "flavour") menu.css("width", 20%);
                //    //if (original === "flavour2") menu.css("background", "red");

                }
            });
            $(function () {
                $('#dateOfBirth').flatpickr({ dateFormat: "m/d/Y", maxDate: "@DateTime.Now.ToString("MM/dd/yyyy")" });
                $('#dateOfMarriage').flatpickr({ dateFormat: "m/d/Y", maxDate: "@DateTime.Now.ToString("MM/dd/yyyy")" });
            });
        });

        function Edit(Id, employeeId, spouseName, spouseNameBN, email, dateOfBirth, dateOfMarriage, gender, occupation, designation, organization, bin, nid, bloodGroup, contact, highestEducation, homeDistrict, spacialSkillIds) {
            $('#employeeID').val(employeeId);
            $('#spouseID').val(Id);
            $('#spouseName').val(spouseName);
            $('#spouseNameBN').val(spouseNameBN);
            $('#emailAddress').val(email);
            $('#dateOfBirth').val(dateOfBirth);
            $('#dateOfMarriage').val(dateOfMarriage);
            $('#gender').val(gender);
            $('#occupation').val(occupation);
            $('#designation').val(designation);
            $('#organization').val(organization);
            $('#bin').val(bin);
            $('#nid').val(nid);
            $('#bloodGroup').val(bloodGroup);
            $('#contact').val(contact);
            $('#higherEducation').val(highestEducation);
            $('#homeDistrict').val(homeDistrict);
            $("#skills").multipleSelect('setSelects', spacialSkillIds.split(","));
        }

        function Remove(Id, employeeId) {
            chk = confirm('Do you want to delete this?');
            if (chk) {
                //return true;
                location.replace("/Employee/Spouse/Delete/" + Id + "?empId=" + employeeId);
            } else {
                return false;
            }
        }
    </script>
}

