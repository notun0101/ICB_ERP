@model IEnumerable<TrainingWithPerticipantVm>
@{
    ViewData["Title"] = "GetAllTrainingRegisterView";
    Layout = "~/Views/Shared/_PrintView.cshtml";
}
<div class="container mt-5">

    <h3 class="text-center" style="color:black " >Training Register Report</h3>
	<hr />

    @foreach (var item in Model)
    {<br />
        <section class="border-bottom" style="color:black; background-color: lightgray; padding: 5px;">
            <h4 style="color:black;  font-family: arial, sans-serif;font-size:150% ">Course Title: @item.training?.course</h4>
            <h4 style="color:black;  font-family: arial, sans-serif; font-size:150% ">Trainer Name: @item.training?.trainer?.name</h4>
        </section>
        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Attendance</th>
                        <th>Marks</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var data in item.trainees)
                    {
                        <tr>
                            <td>@data.name</td>
                            @if (data.isPresent == 0)
                            {
                                <td>Absent</td>
                            }
                            else
                            {
                                <td><b>Present</b></td>
                            }
                            <td>
                                @data.marks
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
