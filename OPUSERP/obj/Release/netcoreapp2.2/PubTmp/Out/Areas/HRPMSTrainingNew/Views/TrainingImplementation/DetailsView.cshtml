@model TrainingEnrollViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/HRPMSEmployee/Views/Shared/_EmployeeForm.cshtml";
}


<div class="card" style="width: 100%;">
    <div class="card-body">
        <div class="container-fluid">
            <div class="row">
                <div class="col-3">
                    @*<img src="/images/Bangladesh-Govt-Logo.jpg" style="height:85px" />*@
                </div>
                <div class="col-6 text-center">
                    <h3 class="card-title" style="color: black;margin-top: 25px;">@Model.fLang.titleDet</h3>
                </div>
                <div class="col-3">
                    <button href="javascript:void(0)" onclick="location.href='/HRPMSTrainingNew/TrainingImplementation/GenerateTrainingDetailsPdf?idr=@Model.trainingInfoNew?.Id'" data-toggle="tooltip" title="Print" class="btn btn-info" style="float:right;margin-top: 25px;"><i class="fa fa-print"></i></button>
                    @*"/HRPMSTrainingNew/TrainingImplementation/TrainingDetailsView?idr=" + idr*@
                    @*<a  onclick="location.href='/HRPMSRecruitment/ApplicationForm/AppointmentLetterPdf?ida=@item.Id'"><i class="fa fa-print"></i></a>*@

                </div>
            </div>
        </div>
        <hr>
        <div class="container">

            <div class="row clearfix">
                <!-- Card Body -->
                <div class="card-body">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>@Model.fLang.course</th>
                                <td>@Model.trainingInfoNew?.course</td>
                            </tr>
                            <tr>
                                <th>@Model.fLang.courseObjective</th>
                                <td>@Model.trainingInfoNew?.courseObjective</td>
                            </tr>
                            <tr>
                                <th>@Model.fLang.amount</th>
                                <td>@Model.trainingInfoNew?.amount</td>
                            </tr>
                            <tr>
                                <th>@Model.fLang.planeStartDate</th>
                                <td>@Model.trainingInfoNew.startDate?.ToString("MM/dd/yy")</td>
                            </tr>
                            <tr>
                                <th>@Model.fLang.planeEndDate</th>
                                <td>@Model.trainingInfoNew.endDate?.ToString("MM/dd/yy")</td>
                            </tr>
                            <tr>
                                <th>@Model.fLang.participant</th>
                                <td>@Model.trainingInfoNew?.noOfParticipants</td>
                            </tr>
                            @if (@Model.trainingInfoNew.trainingType == 2)
                            {
                                <tr>
                                    <th>@Model.fLang.country</th>
                                    <td>@Model.trainingInfoNew.country?.countryName</td>
                                </tr>
                                <tr>
                                    <th>@Model.fLang.location</th>
                                    <td>@Model.trainingInfoNew?.location</td>
                                </tr>
                            }
                            <tr>
                                <th>@Model.fLang.startDateActual</th>
                                <td>@Model.trainingInfoNew.startDateActual?.ToString("MM/dd/yy")</td>
                            </tr>
                            <tr>
                                <th>@Model.fLang.endDateActual</th>
                                <td>@Model.trainingInfoNew.endDateActual?.ToString("MM/dd/yy")</td>
                            </tr>
                            <tr>
                                <th>@Model.fLang.noOfParticipantsActual</th>
                                <td>@Model.trainingInfoNew?.noOfParticipantsActual</td>
                            </tr>

                            <tr>
                                <th>@Model.fLang.employeeType</th>
                                <td>@Model.trainingInfoNew?.employeeTypeNames</td>
                            </tr>

                            <tr>
                                <th>@Model.fLang.year</th>
                                <td>@Model.trainingInfoNew?.year</td>
                            </tr>
                            <tr>
                                <th>@Model.fLang.budget</th>
                                <td>@Model.trainingInfoNew?.budget</td>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="card" style="width: 100%;">
    <div class="card-body">
        <div class="row clearfix">
            <div class="col-12">
                <div class="card mb-4">
                    <!-- Card Header - Dropdown -->
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Participants</h6>
                    </div>
                    <!-- Card Body -->
                    <div class="card-body">
                        <table class="table table-striped table-bordered" id="participantTable">
                            <thead>
                                <tr>
                                    <th>@Model.fLang.employeeName</th>
                                    <th>Designation</th>
                                    <th>@Model.fLang.mobile</th>
                                    <th>@Model.fLang.email</th>
                                    <th>@Model.fLang.completionStatus</th>
                                    <th>@Model.fLang.remark</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var data in Model.enrolledTrainees)
                                {
                                    <tr>
                                        <td>@data.name</td>
                                        <td>@data.designation</td>
                                        <td>@data.mobile</td>
                                        <td>@data.email</td>
                                        <td>@data.completionStatus</td>
                                        <td>@data.remarks</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

