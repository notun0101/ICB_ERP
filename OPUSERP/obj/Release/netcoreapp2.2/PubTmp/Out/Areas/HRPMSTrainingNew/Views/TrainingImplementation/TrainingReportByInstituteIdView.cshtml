@model TrainingEnrollViewModel
@{
    ViewData["Title"] = "Yearly Training Report";
    Layout = "~/Views/Shared/_PrintView.cshtml";
}

<style>
    body {
        color: black !important;
		font-family:'Times New Roman';
    }



    #footertbl tr td p {
        margin: 0;
    }
</style>
<div class="text-center p-1">
    <h5 style="font-weight: 900">Bangladesh Development Bank Limited</h5>
    <h6 style="text-decoration: underline">BDBL Bhaban-2 (Level-16), 12, Karwan Bazar, Dhaka-1215</h6>
    <h6 style="text-decoration: underline">Training Institute</h6>
    <h6 style="text-decoration: underline">Training Course/Workshop Arranged in the Year @Model.instituteTrainingReportViewModels?.FirstOrDefault()?.startDate?.Year</h6>
</div>
<br />
@foreach (var inst in Model.instituteTrainingReportViewModels.Select(x => x.trainingInstituteName).Distinct())
{
    @if (inst == "Bangladesh Bank")
    {
        <h5><u>@inst</u></h5>
        <table class="report-table-1" border="1" cellpadding="3"cellspacing="0" id="participantTable">
            <thead>
                <tr>
                    <th>SL No.</th>
					<th>
						Name of The
						Participants
					</th>
                    <th>Designation</th>
                    <th>ID No.</th>
                    <th>Present Posting Place</th>
                    <th>Name Of The Course</th>
                    <th>Date</th>
                    <th>Duration</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                }
                @foreach (var item in Model.instituteTrainingReportViewModels.Where(x => x.trainingInstituteName == inst))
                {
                    <tr>
                        <td style="text-align:center;">@i</td>
                        <td>@item.participantName</td>
                        <td>@item.designation</td>
                        <td  style="text-align:center;">@item.employeeCode</td>
                        <td>@item.placeOfPosting</td>
                        <td>@item.course</td>
                        <td>@item.startDate?.ToString("dd MMM yyyy") to @item.endDate?.ToString("dd MMM yyyy")</td>
                        <td  style="text-align:center;">@item.durationDays</td>
                    </tr>
                    i++;
                }

            </tbody>
        </table>
    }

    else if (inst == "BDBL Training Institute")
    {
        <h5><u>@inst</u></h5>
        <table class="report-table-1" border="1" cellpadding="3"cellspacing="0" id="participantTable">
            <thead>
                <tr>
                    <th>SL No.</th>
					<th>
						Name of The
						Participants
					</th>
                    <th>Designation</th>
                    <th>ID No.</th>
                    <th>Present Posting Place</th>
                    <th>Name Of The Course</th>
                    <th>Date</th>
                    <th>Duration</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                }
                @foreach (var item in Model.instituteTrainingReportViewModels.Where(x => x.trainingInstituteName == inst))
                {
                    <tr>
                        <td  style="text-align:center;">@i</td>
                        <td>@item.participantName</td>
                        <td>@item.designation</td>
                        <td  style="text-align:center;">@item.employeeCode</td>
                        <td>@item.placeOfPosting</td>
                        <td>@item.course</td>
                        <td>@item.startDate?.ToString("dd MMM yyyy") to @item.endDate?.ToString("dd MMM yyyy")</td>
                        <td  style="text-align:center;">@item.durationDays</td>
                    </tr>
                    i++;
                }

            </tbody>
        </table>
    }
    else if((inst != "BDBL Training Institute") || (inst != "Bangladesh Bank"))
     {
        <h5><u>Other Organizations</u></h5>
                <table class="report-table-1" border="1" cellpadding="3"cellspacing="0" id="participantTable">
                    <thead>
                        <tr>
                            <th>SL No.</th>
                            <th>Name of The Participants</th>
                            <th>Designation</th>
                            <th>ID No.</th>
                            <th>Present Place of Posting</th>
                            <th>Organized By</th>
                            <th>Name of The Course</th>
                            <th>Date</th>
                            <th>Duration</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 1;
                        }
                        @foreach (var item in Model.instituteTrainingReportViewModels.Where(x => x.trainingInstituteName == inst))
                        {
                            <tr>
                                <td>@i</td>
                                <td>@item.participantName</td>
                                <td>@item.designation</td>
                                <td>@item.employeeCode</td>
                                <td>@item.placeOfPosting</td>
                                <td>@item.trainingInstituteName</td>
                                <td>@item.course</td>
                                <td>@item.startDate?.ToString("dd MMM yyyy") to @item.endDate?.ToString("dd MMM yyyy")</td>
                                <td>@item.durationDays</td>
                            </tr>
                            i++;
                        }

                    </tbody>
                </table>
         
    }



}

