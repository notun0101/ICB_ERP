        function DeleteRow(index, rowCount) {
            var Count = $("#tblMatrix tbody tr").length;
            for (i = 1; i <= Count; i++) {
                var apUer = $("#txtSequence" + i).val();
                if (apUer > rowCount) {
                    $("#txtSequence" + i).val(apUer - 1)
                }
            }

            $("#" + index).remove();
            return false;
        }

