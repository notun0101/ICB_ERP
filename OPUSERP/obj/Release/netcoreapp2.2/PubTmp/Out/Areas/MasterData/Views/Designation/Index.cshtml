@model DesignationViewModel
@{
    ViewData["Title"] = "Designation Information";
    Layout = "~/Areas/MasterData/Views/Shared/_MasterDataForm.cshtml";
}

@section StyleMD{
}

<div class="card" style="width: 100%;">
    <div class="card-body">
        <h5 class="card-title" style="color: #4e73df!important;">Designation Info</h5>
        <hr>
        <div class="container">
            <form asp-area="MasterData" asp-controller="DesignationInfo" asp-action="Index" method="post">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group row">
                    <input type="hidden" name="designationId" id="designationId" value="0" />

                    <label for="designationCode" class="col-sm-4 col-form-label">Designation Code</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" name="designationCode" id="designationCode">
                        <input type="hidden" value="0" class="form-control" name="designationId" id="designationId">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="designationName" class="col-sm-4 col-form-label">Designation Name</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" name="designationName" id="designationName">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="designationNameBn" class="col-sm-4 col-form-label">Designation Name (Bangla)</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" name="designationNameBn" id="designationNameBn">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="shortName" class="col-sm-4 col-form-label">Short Name</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" name="shortName" id="shortName">
                    </div>
                </div>
                <hr>
                <button type="submit" value="Submit" class="btn btn-success btn-lg" style="float:right; margin-top:5px;"><i class="fas fa-save"></i></button>
            </form>
        </div>
    </div>
</div>

<br />
<hr />
<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Designation Info</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="designationTable">
                    <thead>
                        <tr>
                            <th>Designation Code</th>
                            <th>Designation Name</th>
                            <th>Designation Name Bn</th>
                            <th>Short Name</th>
                            <th>Action</th>
                    </thead>
                    <tbody>
                        @foreach (var data in Model.designations)
                        {
                            <tr>
                                <td>@data.designationCode</td>
                                <td>@data.designationName</td>
                                <td>@data.designationNameBN</td>
                                <td>@data.shortName</td>
                                <td>
                                    <a class="btn btn-outline-primary" onclick="Edit('@data.Id','@data.designationCode','@data.designationName','@data.designationNameBN','@data.shortName')" href="#"><i class="fa fa-edit"></i></a>
                                    <a class="btn btn-danger" href="#"><i class="fa fa-trash-alt"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section ScriptsMD{
    <script>
        $(document).ready(function () {
            $("#designation").addClass("active");
            $('#designationTable').DataTable();
        });

        function Edit(Id, code, name, nameBn, shortName) {
            $("#designationId").val(Id);
            $("#designationCode").val(code);
            $("#designationName").val(name);
            $("#designationNameBn").val(nameBn);
            $("#shortName").val(shortName);
        }


    </script>
}
