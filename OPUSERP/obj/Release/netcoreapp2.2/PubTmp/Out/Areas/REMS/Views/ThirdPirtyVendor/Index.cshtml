
@{
    ViewData["Title"] = "Third Pirty Vendor";
}

@section Style{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
}

<br />
<div class="col-sm-12">
    <div class="card">
        <div class="card-header" style="padding:6px 0px 5px 3px;">
            <label style="padding:0px 0px 0px 10px;font-size:16px;font-weight:600" class="col-sm-10 pull-left"><i class="fa fa-th-list fa-sm"></i>&nbsp;&nbsp; Third Pirty Vendor </label>
        </div>
        <div class="card-body p-3 m-0" style="padding-bottom:0px;">
            <table class="table table-striped table-bordered" id="thirdPirtyVendorListTable">
                <thead>
                    <tr>
                        <th>Action</th>
                        <th>Claim Description</th>
                        <th>Problem Description</th>
                        <th>Remarks</th>
                        <th>Purchased Date</th>
                        <th>Claim Date</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
        <form asp-area="" asp-controller="" asp-action="Index" method="post" enctype="multipart/form-data" data-parsley-validate="parsley">

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="card-body p-3 m-0" style="padding-bottom:0px;">
                <div class="container">
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group row">
                                <label for="claimDescription" class="col-sm-4 col-form-label">Claim Description</label>
                                <div class="col-sm-8">
                                    <textarea rows="4" class="form-control" id="claimDescription" name="claimDescription" readonly></textarea>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="isObsolete" class="col-sm-4 col-form-label">Is Obsolete</label>
                                <div class="col-sm-8">
                                    <input type="checkbox" class="form-control" id="isObsolete" name="isObsolete" />
                                </div>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="form-group row">
                                <label for="problemDescription" class="col-sm-4 col-form-label">Problem Description</label>
                                <div class="col-sm-8">
                                    <textarea rows="4" class="form-control" id="problemDescription" name="problemDescription" readonly></textarea>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="returnDate" class="col-sm-4 col-form-label">Return Date</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="returnDate" name="returnDate" />
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="" class="col-sm-8 col-form-label"></label>
                                <div class="col-sm-4">
                                    <input type="submit" class="btn btn-success btn-block" value="Save">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#thirdPirtyVendorListTable').DataTable();
            $('#returnDate').flatpickr({ dateFormat: "d-M-Y" });
        });
    </script>
}

