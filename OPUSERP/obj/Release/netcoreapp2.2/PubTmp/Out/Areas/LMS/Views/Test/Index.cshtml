    @section Scripts{

        <script>
            $(document).ready(function () {
                $('#dptTable').DataTable();
                btnSaveHide();
            })
            
            function btnSaveHide() {
                if ($.trim($('#result_table tbody').text()) == "") {
                    $("#btnSave").hide();
                }
            }

            function AddResult() {
               var name= $("#name").val();
                var start = $("#start").val();
                var end = $("#end").val();
                //if ($("#result_table tbody").length == 0) {
                //    $("result_table").append("<tbody></tbody>")
                //}
                if (name != null ) {
                    alert("please insert");
                    return false;
                }
                $("#result_table tbody").append(
                    "<tr>" + "<td>" + $("#name").val() + "</td>" +
                    "<td>" + $("#start").val() + "</td>" +
                    "<td>" + $("#end").val() + "</td>" +
                    "<td style='text-align:center;'>" + "<button type='button' class='btn btn-danger' onclick='deleteMe(this)'>" +
                    "Delete" + "</button>" + "</td>"
                    +
                    "</tr>"
                );
                formClear();
                $("#btnSave").show();
            }

            function formClear() {
                $("#name").val("");
                $("#start").val("");
                $("#end").val("");
            }
            function deleteMe(ctl) {
                $(ctl).parents("tr").remove();
                btnSaveHide();
            }
        </script>

    }



