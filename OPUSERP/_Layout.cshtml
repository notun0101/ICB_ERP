    <script>
		$(".arlo_tm_resize").click(function () {
			var existBtnClass = $(this).attr('class');
			var existDrawerClass = $('.arlo_tm_leftpart_wrap').attr('class');
			if (existBtnClass == 'arlo_tm_resize' && existDrawerClass == 'arlo_tm_leftpart_wrap') {
