			}
        })

        function show(input) {
            if (input.files && input.files[0]) {
                var filerdr = new FileReader();
                filerdr.onload = function (e) {
                    console.log(input.value)
                    $('#imagePath').text(input.value);
                    $('#user_img').attr('src', e.target.result);
                    imgfile.src = event.target.result;
                }
                filerdr.readAsDataURL(input.files[0]);
            }
        }

        function uploadPhoto() {
            var imgfile = document.getElementById('imagePath');
            var formData = new FormData();
            formData.append('employeeID', $("#employeeID").val());
            formData.append('photographID', $("#photographID").val());
            formData.append('empPhoto', $('input[type=file]')[0].files[0]);
            console.log(formData)
            console.log($("#employeeID").val())
            console.log($("#photographID").val())
            swal({
                title: 'Are you sure?',
                text: 'Do you want to update this photo!',
                type: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, Update it!'
            }).then(function () {
                $.ajax({
                    url: '@Url.Action("ProfilePictureSave", "Photograph", new { area= "HRPMSEmployee" })',
                    data: formData,
                    type: 'POST',
                    dataType: 'json',
                    contentType: false,
                    processData: false,
                }).done(function (response) {
                        if (response == "success") {
                            swal('', 'Update Successfully!', 'success').
                                then(function () {
                                    location.reload();
                                })
                        }
                        else {
                            swal('', 'Unable to Update! Something went wrong.', 'warning');
                        }
                    })
                    .fail(function () {
                        swal('', 'Unable to Update! Please choose photo.', 'warning');
                    });
			});
        }
