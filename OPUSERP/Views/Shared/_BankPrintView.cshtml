@using OPUSERP.ERPServices.MasterData.Interfaces
@using OPUSERP.ERPService.AuthService.Interfaces
@using System
@inject IERPCompanyService eRPCompanyService

@{
    var companies = await eRPCompanyService.GetAllCompany();
    var companyImage = companies.FirstOrDefault()?.filePath;
}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewData["Title"]</title>
    <link rel="shortcut icon" href="@Url.Content("~/images/bnbico.jpg")" type="image/x-icon" />
    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
    @RenderSection("Style", required: false)

    <style>
        body {
            font-size: 11pt !important;
        }

        table .btn {
            font-size: 8pt !important;
            padding: 3px 5px 3px 5px !important;
        }

        table th, table td {
            /*padding: 2px 2px 2px 2px !important;*/
            color: black !important;
        }

        .col-form-label {
            color: #606066 !important;
            font-weight: bold;
            padding: 0 0 0 0;
        }

        .form-control {
            color: #606066 !important;
            font-size: 10pt !important;
            padding: 1px 4px 1px 8px;
            border: 1px solid #606066;
            height: 30px;
        }

        .form-group {
            margin-bottom: 6px !important;
        }

        .gj-datepicker-bootstrap [role=right-icon] button {
            border: 1px solid #606066 !important;
        }

            .gj-datepicker-bootstrap [role=right-icon] button .gj-icon {
                top: 5px !important;
            }

        .nav .nav-item {
            background: #30994c !important;
            border-radius: 3px !important;
        }

        /*Parsly  Section*/
        input.parsley-success,
        select.parsley-success,
        textarea.parsley-success {
            color: #468847;
            background-color: #DFF0D8;
            border: 1px solid #D6E9C6;
        }

        input.parsley-error,
        select.parsley-error,
        textarea.parsley-error {
            color: #B94A48;
            background-color: #F2DEDE;
            border: 1px solid #EED3D7;
        }

        .parsley-errors-list {
            margin: 2px 0 3px;
            padding: 0;
            list-style-type: none;
            font-size: 0.9em;
            line-height: 0.9em;
            opacity: 0;
            transition: all .3s ease-in;
            -o-transition: all .3s ease-in;
            -moz-transition: all .3s ease-in;
            -webkit-transition: all .3s ease-in;
        }

            .parsley-errors-list.filled {
                opacity: 1;
            }

        .parsley-type, .parsley-required, .parsley-equalto {
            color: #ff0000;
        }
        /*Parsly  Section*/

        .table-bordered {
            border-collapse: collapse !important;
        }

            .table-bordered th {
                border: 1px solid black;
            }

            .table-bordered td {
                border: 1px solid black;
            }

        .table-bordered-grey {
            border-collapse: collapse !important;
        }

            .table-bordered-grey th {
                border: 1px solid gray;
            }

            .table-bordered-grey td {
                border: 1px solid gray;
            }
    </style>

</head>
<body>
    <div style="height:15%;">
        <div style="width:100%;overflow:hidden;">
            <div style="width:10%;float:left;">
                <img src="@companyImage" alt="OPUS ERP" style="height:50px;" />
            </div>
            <div style="width:80%;float:left;">
                @*<h3 style="text-align:center;color:black;"><b>@Model.companies.FirstOrDefault().companyName</b></h3>
                    <br />
                    <p style="text-align:center;color:black;">@Model.companies.FirstOrDefault().addressLine</p>*@
                @*<h5 style="text-align:center;color:black;font-size:larger;">Advise sheet for transfering Salary for the Month of @Model.bankStatementReportViewModels.FirstOrDefault().periodName</h5>*@
            </div>
            @*<div style="width:10%;float:right;">
                    <div class="fa-pull-right">
                        <h5 style="text-align:right;color:black;">@Model.bankStatementReportViewModels.FirstOrDefault().lockLabel</h5>
                    </div>
                </div>*@
        </div>
    </div>
    <div style="height:85%;">

        @RenderBody()

    </div>
    

    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
