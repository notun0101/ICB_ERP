@model GrettingsViewModel
@{
    ViewData["Title"] = "Gretting Information";
}
<style>
    .backgroundImg {
        background-image: url("/../images/christmas-greetings-background.jpg");
        /*background-repeat:no-repeat;*/
        background-size: contain;
        border: 6px solid gold;
        margin-bottom: 30px;
    }

    .textWish {
        color: oldlace;
        font-weight: bold;
        font-size: 30px;
        margin-top: 25px;
    }
    .textWish5 {
        color: oldlace;
        font-weight: bold;
    }

</style>

<div class="container-fluid">
    <div class="col-12">
        <div class="row card-header">
            <div class="col-10">
                <h4 class="m-0 font-weight-bold text-primary"> Member's Greetings Information </h4>
            </div>
        </div>
        <br />
        <div class="row">
            @foreach (var data in Model.grettings)
            {
                <!-- Grettings Post -->
                <div class="col-2"></div>
                <div class="col-8 backgroundImg">
                    <center style="padding: 14px;">
                        <img src="~/images/DelayedDishonestAcouchi-size_restricted.gif" height="250" width="350">
                        @if (@data.relation == "self")
                        {
                            <h4 class="textWish">
                                Happy @data.GrettingsMessage To @data.name 
                            </h4>
                        }
                        else
                        {
                            <h4 class="textWish">
                                Happy @data.GrettingsMessage To @data.name 
                            </h4>
                            <h5 class="textWish5">@data.relation</h5>
                            <h4 class="textWish5">@data.memberName</h4>
                        }
                    </center>
                </div>
                <div class="col-2"></div>
            }
        </div>
    </div>
</div>

