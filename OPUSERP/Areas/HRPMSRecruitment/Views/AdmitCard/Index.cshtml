
@{
    ViewData["Title"] = "Admit Card";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Style{
}

<div class="card" style="width: 100%;">
    <div class="card-body">
        <h5 class="card-title" style="color: black">Admit Card</h5>
        <hr>
        <div class="container">

            <form asp-area="HRPMSRecruitment" asp-controller="AdmitCard" asp-action="Index" method="post">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="row">
                    <div class="col-sm-3"></div>

                    <div class="col-sm-6">
                        <div class="form-group row">
                            <label for="rollNo" class="col-sm-4 col-form-label">Roll No</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="rollNo" id="rollNo">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="examType" class="col-sm-4 col-form-label">Exam Type<strong style="color:red;"> *</strong></label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="examType" id="examType" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="examDate" class="col-sm-4 col-form-label">Exam Date<strong style="color:red;"> *</strong></label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="examDate" id="examDate" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="examVenue" class="col-sm-4 col-form-label">Exam Venue<strong style="color:red;"> *</strong></label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="examVenue" id="examVenue" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="examStartEndTime" class="col-sm-4 col-form-label">Exam Start & End Time<strong style="color:red;"> *</strong></label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="examStartEndTime" id="examStartEndTime" required>
                            </div>
                        </div>
                    </div>
                </div>

                <hr>
                <button type="submit" value="Submit" class="btn btn-success btn-sm" style="float:right; margin-top:5px;"><i class="fas fa-download"></i> Download</button>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#examDate').datepicker({ uiLibrary: 'bootstrap4' });
        });
    </script>
}
