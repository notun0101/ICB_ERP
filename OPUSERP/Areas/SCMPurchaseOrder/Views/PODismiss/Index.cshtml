@model PurchaseOrderDismissViewModel
@{
    ViewData["Title"] = "PO Dismiss List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header row">
                <div class="col-md-10">
                    <h6 class="m-0 font-weight-bold text-primary">List of Purchase Order</h6>
                </div>
                <div class="col-md-2">
                    <button type="button" class="btn btn-default btn-sm" style="width:100px;background-color:#024972;color:white;float:right;" onclick="location.href='@Url.Action("CreatePO", "PurchaseOrder")'">Create PO</button>
                </div>
            </div>

            <div class="card-body">
                <table class="table table-striped table-bordered" id="csListTable">
                    <thead>
                        <tr>
                            <th>Project</th>
                            <th>Req No</th>
                            <th>PO No</th>
                            <th>PO Date</th>
                            <th>PO Value</th>
                            <th>Supplier Name</th>
                            <th>Action</th>
                    </thead>
                    <tbody>
                        @foreach (var data in Model.purchaseOrderDismisses)
                        {
                            <tr>
                                <td>@data.projectName</td>
                                <td>@data.ReqNo</td>
                                <td>@data.PONo</td>
                                <td>@data.poDate</td>
                                <td>@data.poValue</td>
                                <td>@data.organizationName</td>
                                
                                <td>
                                    <a class="btn btn-success" href="javascript:void(0)"><i class="fa fa-info"></i></a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div style="height:15px;"></div>

<div class="row clearfix">
    <div class="col-12">
