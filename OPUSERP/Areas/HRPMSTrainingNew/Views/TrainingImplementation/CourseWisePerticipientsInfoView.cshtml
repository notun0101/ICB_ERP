@model TrainingEnrollViewModel
@{
    ViewData["Title"] = "Course Wise Training Report";
    Layout = "~/Views/Shared/_PrintView.cshtml";
}

<style>
    body {
        color: black !important;
		font-family:'Times New Roman';
    }
    #footertbl tr td p {
        margin: 0;
    }
</style>
<div class="text-center p-2">
    <h5 style="font-weight: 900">Bangladesh Development Bank Limited</h5>
    <h6 style="text-decoration: underline">BDBL Bhaban-2 (Level-16), 12, Karwan Bazar, Dhaka-1215</h6>
    <h6 style="text-decoration: underline">Training Institute</h6>
    <br />
    <h6 style="text-decoration: underline">Training Course on: @Model.courseWiseTrainings?.FirstOrDefault()?.course</h6>
    <h6 style="text-decoration: underline">Duration: @ViewBag.startDate to @ViewBag.endDate</h6>
</div>

@if (Model.courseWiseParticipents.Where(x => x.trainingType == 1).Count() != 0)
{
    <h5><u>In House Training:</u></h5>
    <table class="report-table-1" border="1" cellpadding="3"cellspacing="0" id="participantTable">
        <thead>
            <tr>
                <th>SL No.</th>
                <th>
                    Name of the
                    Participants
                </th>
                <th>Designation</th>
                <th>ID No.</th>
                <th>
                    Present Place
                    of Posting
                </th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Duration (Working Days)</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 1;
            }
            @foreach (var item in Model.courseWiseParticipents.Where(x => x.trainingType == 1))
            {
                <tr>
                    <td style="text-align:center;">@i</td>
                    <td>@item.name</td>
                    <td>@item.designation</td>
                    <td  style="text-align:center;">@item.employeeId</td>
                    <td>@item.workingPlace</td>
                    <td  style="text-align:center;">@item.startDate?.ToString("dd-MM-yyyy")</td>
                    <td  style="text-align:center;">@item.endDate?.ToString("dd-MM-yyyy")</td>
                    <td  style="text-align:center;">@item.durationDays</td>
                </tr>
                i++;
            }
        </tbody>
    </table>
    <br />
}

