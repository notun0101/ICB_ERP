@model EvalutionPlaceViewModel
@{
    ViewData["Title"] = "Training Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Style{
}

<div class="card" style="width: 100%;">
    <div class="card-body">
        <h5 class="card-title" style="color: black">@Model.fLang.titleReport</h5>
        <hr>
        <div class="container">
            <div class="row">
                <table class="table table-bordered">
                    <tr>
                        <th>@Model.fLang.course</th>
                        <td colspan="3">@Model.trainingInfoNew.course</td>
                    </tr>
                    <tr>
                        <th>@Model.fLang.planeStartDate</th>
                        <td>@Model.trainingInfoNew.startDate?.ToString("MM/dd/yy")</td>
                        <th>@Model.fLang.planeEndDate</th>
                        <td>@Model.trainingInfoNew.endDate?.ToString("MM/dd/yy")</td>
                    </tr>
                    <tr>
                        <th>@Model.fLang.year</th>
                        <td>@Model.trainingInfoNew.year</td>
                        <th>@Model.fLang.participant</th>
                        <td>@Model.trainingInfoNew.noOfParticipants</td>
                    </tr>
                    <tr>
                        <th>@Model.fLang.employeeType</th>
                        <td>@Model.trainingInfoNew.employeeTypeNames</td>
                        <th>@Model.fLang.budget</th>
                        <td>@Model.trainingInfoNew.budget</td>
                    </tr>
                    <tr>
                        <th>@Model.fLang.startDateActual</th>
                        <td>@Model.trainingInfoNew.startDateActual?.ToString("MM/dd/yy")</td>
                        <th>@Model.fLang.endDateActual</th>
                        <td>@Model.trainingInfoNew.endDateActual?.ToString("MM/dd/yy")</td>
                    </tr>
                </table>
            </div>

            <br />

            <div class=" row">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>@Model.fLang.employeeName</th>
                            <th>@Model.fLang.designation</th>
                            <th>@Model.fLang.orgType</th>
                            <th>@Model.fLang.place</th>
                    </thead>
                    <tbody>
                        @foreach (var data in Model.enrolledTrainees)
                        {
                            <tr>
                                <td>@data.name</td>
                                <td>@data.designation</td>
                                <td>@data.workingPlace</td>
                                <td>
                                    @data.positon
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

@section Scripts{
