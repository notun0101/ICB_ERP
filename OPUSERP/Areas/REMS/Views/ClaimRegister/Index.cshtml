@model ClaimRegisterViewModel
@{
    ViewData["Title"] = "Index";
}

@section Style{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
}

<br />
<div class="col-sm-12">
    <div class="card">
        <div class="card-header" style="padding:6px 0px 5px 3px;">
            <label style="padding:0px 0px 0px 10px;font-size:16px;font-weight:600" class="col-sm-10 pull-left"><i class="fa fa-th-list fa-sm"></i>&nbsp;&nbsp; Claim Registers</label>
        </div>
        <form asp-area="HR" asp-controller="ClaimRegister" asp-action="Index" method="post" enctype="multipart/form-data" data-parsley-validate="parsley">

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="card-body p-3 m-0" style="padding-bottom:0px;">
                <div class="container">
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group row">
                                <label for="AssetName" class="col-sm-4 col-form-label">AssetID<span style="color:red">*</span></label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="AssetName" name="AssetName" required />
                                    <input type="hidden" id="AssetID" name="assetRegistrationId" />
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="claimDate" class="col-sm-4 col-form-label">Claim Date<span style="color:red">*</span></label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="claimDate" name="claimDate" required />
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="name" class="col-sm-4 col-form-label">Asset Name</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="name" name="name" readonly />
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="moNo" class="col-sm-4 col-form-label">Memo No</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="moNo" name="moNo" readonly />
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="poDate" class="col-sm-4 col-form-label">Purchase Date</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="poDate" name="poDate" readonly />
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="Depatment" class="col-sm-4 col-form-label">Depatment</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="Depatment" name="Depatment" readonly />
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="warrenty" class="col-sm-4 col-form-label">Is Warrenty</label>
                                <div class="col-sm-8">
                                    <input type="checkbox" class="form-control" id="warrenty" name="warrenty" disabled />
                                    <input type="hidden" id="warrentyId" name="warrentyId" value="0" />
                                </div>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="form-group row">
                                <label for="Warrent" class="col-sm-4 col-form-label">Warrent Start On</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="Warrent" name="Warrent" readonly />
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="Finished" class="col-sm-4 col-form-label">Warrent Finished At</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="Finished" name="Finished" readonly />
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="Location" class="col-sm-4 col-form-label">Location</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="Location" name="Location" readonly />
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="Supplier" class="col-sm-4 col-form-label">Supplier Code</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="Supplier" name="Supplier" readonly />
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="supplierName" class="col-sm-4 col-form-label">Supplier Name</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="supplierName" name="supplierName" readonly />
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="Description" class="col-sm-4 col-form-label">Claim Description</label>
                                <div class="col-sm-8">
                                    <textarea rows="5" class="form-control" id="Description" name="claimDescription"></textarea>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="Description" class="col-sm-8 col-form-label"></label>
                                <div class="col-sm-4">
                                    <input type="submit" class="btn btn-success btn-block" value="Save">
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<br />
<br />

<div class="col-sm-12">
    <div class="card">
        <div class="card-header" style="padding:6px 0px 5px 3px;">
            <label style="padding:0px 0px 0px 10px;font-size:16px;font-weight:600" class="col-sm-10 pull-left"><i class="fa fa-th-list fa-sm"></i>&nbsp;&nbsp;Claim List</label>
        </div>
        <div class="card-body p-3 m-0" style="padding-bottom:0px;">
            <table class="table table-striped table-bordered" id="csListTable">
                <thead>
                    <tr>
                        <th>Asset ID</th>
                        <th>Asset Name</th>
                        <th>Claim Number</th>
                        <th>Purchase Date</th>
                        <th>Claim Date</th>
                        <th>Claim Description</th>
                        <th>Action</th>
                </thead>
                <tbody>
                    @foreach(var data in Model.claimRegisters)
                    {
                        <tr>
                            <td>@data.assetRegistration.assetNo</td>
                            <td>@data.assetRegistration.itemSpecification.Item.itemName</td>
                            <td>@data.claimNumber</td>
                            <td>@data.assetRegistration.purchaseInfo.purchaseDate?.ToString("dd-MMM-yyyy")</td>
                            <td>@data.claimDate?.ToString("dd-MMM-yyyy")</td>
                            <td>@data.claimDescription</td>
                            <td>
                                @*<a style="color:white" class="btn btn-success"><i class="fa fa-edit"></i></a>*@
                                <a style="color:white" onclick="Print(@data.Id)" class="btn btn-info"><i class="fa fa-print"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#csListTable').DataTable();
            $('#claimDate').flatpickr({ dateFormat: "d-M-Y", maxDate: "@DateTime.Now.ToString("dd/MMM/yyyy")" });

            Common.Ajax('GET', '/global/api/GetAssetRegistration', [], 'json', assetDetails, false);
        });

        function assetDetails(response) {
            var GetAssetDetailsList = [];
            $.each(response, function (id, option) {
                var obj = new Object();
                obj.key = option.Id;
                obj.value = option.itemSpecification.Item.itemName + ' - ' + option.assetNo;
                obj.assetName = option.itemSpecification.Item.itemName;
                obj.memoNo = option.purchaseInfo.purchaseNo;
                obj.purchaseDate = option.purchaseInfo.purchaseDate;
                obj.supplierCode = option.purchaseInfo.supplier.orgCode;
                obj.supplierName = option.purchaseInfo.supplier.organizationName;
                GetAssetDetailsList[GetAssetDetailsList.length] = obj;
            });
            $('#AssetName').autocomplete({
                source: GetAssetDetailsList,
                select: function (event, ui) {
                    AllCleare();

                    $("#AssetID").val(ui.item.key);
                    $("#name").val(ui.item.assetName);
                    $("#moNo").val(ui.item.memoNo);
                    $("#poDate").val(getVoucherDate(ui.item.purchaseDate));
                    $("#Warrent").val(getVoucherDate(ui.item.purchaseDate));
                    $("#Supplier").val(ui.item.supplierCode);
                    $("#supplierName").val(ui.item.supplierName);

                    Common.Ajax('GET', '/global/api/GetAssetWarrenty/' + ui.item.key, [], 'json', assetWarrentyDetails, false);
                    Common.Ajax('GET', '/global/api/GetAssetAssign/' + ui.item.key, [], 'json', assetAssignDetails, false);
                }
            });
        }

        function assetWarrentyDetails(response) {
            //console.log(response);
            if (response != null) {
                $("#Finished").val(getVoucherDate(response.warrentyDate));
                $("#warrentyId").val(1);
                $("#warrenty").attr('checked', true);
            }
        }

        function assetAssignDetails(response) {
            //console.log(response);
            $("#Depatment").val(response.department.deptName);
            $("#Location").val(response.deliveryLocation.locationName);
        }

        function AllCleare() {
            $("#AssetID").val('');
            $("#name").val('');
            $("#moNo").val('');
            $("#poDate").val('');
            $("#Warrent").val('');
            $("#Supplier").val('');
            $("#supplierName").val('');
            $("#Finished").val('');
            $("#warrenty").attr('checked', false);
            $("#Depatment").val('');
            $("#Location").val('');
        }

        function getVoucherDate(vdate) {
            var formattedDate = new Date(vdate);
            var d = formattedDate.getDate();
            var m = formattedDate.getMonth();
            //  m += 1;  // JavaScript months are 0-11
            var y = formattedDate.getFullYear();

            var monthNames = [
                "Jan", "Feb", "Mar",
                "Apr", "May", "Jun", "Jul",
                "Aug", "Sep", "Oct",
                "Nov", "Dec"
            ];

            var fullDate = d + "-" + monthNames[m] + "-" + y;
            return fullDate;
        }

        function Print(Id) {
            window.open("/REMS/ClaimReports/ClaimReceiptPdf?claimId=" + Id, "_blank");
        }

    </script>
}

