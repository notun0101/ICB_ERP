
@model TravelMasterViewModel

@{
    ViewData["Title"] = "TravelList";
}


<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Travel List</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="travelListTable">
                    <thead>
                        <tr>
                            <th>Travel Number</th>
                            <th>Employee Name</th>
                            <th>Account Number</th>
                            <th>Date</th>
                            <th>Project</th>
                            <th>Doner</th>
                            <th>Activity</th>
                            <th>Travel Purpose</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var data in Model.travelMasters)
                        {
                            <tr>
                                <td>@data.travelNumber</td>
                                <td>@data.employee?.nameEnglish</td>
                                <td>@data.accountNumber</td>
                                <td>@data.date?.ToString("yyyy-MM-dd")</td>
                                <td>@data.travelProject?.name</td>
                                <td>@data.hRDoner?.name</td>
                                <td>@data.hRActivity?.name</td>
                                <td>@data.purpose</td>
                                <td>
                                    @*the commented code below is for report format of IFRC Travel report*@
                                    @*<a class="btn btn-success" target="_blank" title="Report" href="/HRPMSTravle/TravelMaster/TravelReportPdf/@data.Id"><i class="fa fa-print"></i></a>*@
                                    <a class="btn btn-success" target="_blank" title="Report" href="/HRPMSTravle/TravelMaster/TravelApproveReportPdf/@data.Id"><i class="fa fa-print"></i></a>

                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script>
        $(document).ready(function () {
            $('#travelListTable').DataTable();

        });
    </script>
}