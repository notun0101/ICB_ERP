            var dtTable = $("#tblitemDetails");
            var tableBody = dtTable.find('tbody');
            if (response != null) {
                $.each(response, function (i, ite) {
                    var totalAmount = (ite.price * ite.quantity) - ((ite.price * ite.quantity) * ite.discountPersent / 100)
