@section Scripts{
    <script src="~/Assets/paginathing.js"></script>
    <script>
        $(document).ready(function () {
            //$("#education").addClass("active");
            $('#tblInvoiceList').DataTable({
                dom: "<'row'<'col-sm-12 col-md-2'l><'col-sm-12 col-md-3'B><'col-sm-12 col-md-7'f>>" +
                    "<'row'<'col-sm-12't>>" + "<'row'<'col-sm-12 col-md-6'i><'col-sm-12 col-md-6'pr>>",
                buttons: [
                    {
                        extend: 'excelHtml5',
                        text: '<i class="fa fa-file-excel"></i> Excel',
                        titleAttr: 'Excel',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4]
                        },
                        title: 'ERP',
                        messageTop: 'Invoice List',
                        class: 'btn btn-info'
                    },
                    {
                        extend: 'csvHtml5',
                        text: '<i class="fa fa-file-excel"></i> CSV',
                        titleAttr: 'CSV',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4]
                        },
                        title: 'ERP',
                        messageTop: 'Invoice List'
                    },
                    {
                        extend: 'print',
                        text: '<i class="fa fa-print"></i> Print',
                        titleAttr: 'Print',
                        title: 'ERP',
                        messageTop: 'Invoice List',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4]
                        },
                        customize: function (doc) {
                            $(doc.document.body).find('h1').css('font-size', '20pt');
                            $(doc.document.body).find('h1').css('font-family', "'Times New Roman', Times, serif");
                            $(doc.document.body).find('h1').css('text-align', 'center');
                        }
                    }
                ]
                // processing: true,
            });
            $('#gridView').show();
            $('#listView').hide();

            $('.fas').removeClass('active');
            $('.fa-th').addClass('active');

            $("#myInput1").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $(".searchdiv").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });
            $("#shippingDate").datepicker({ dateFormat: "dd-M-yy", showAnim: "scale", changeMonth: true, changeYear: true, yearRange: "2010:2030" }).datepicker();

            var table = $('#tblInvoiceList').DataTable();
            $('#tblInvoiceList tbody').on('click', 'tr', function () {
                var data = table.row(this).data();
                var iddata = data[2];
                let id = iddata.replace('<span style="display:none">', "").replace("</span>", "");
                var vid = parseInt(id.split('-')[1]);
                window.location.href = "/OtherSales/SalesInvoice/RentInvoiceDetails/?id=" + vid;
            });
            $('#tblInvoiceList tbody').on('click', 'td:last-child', function (e) {
                e.stopPropagation();
            });


        });
        $('.fa-list-alt').click(function () {
            $('#listView').show();
            $('#gridView').hide();

            $('.fas').removeClass('active');
            $('.fa-list-alt').addClass('active');
        })
        $('.fa-th').click(function () {
            $('#listView').hide();
            $('#gridView').show();

            $('.fas').removeClass('active');
            $('.fa-th').addClass('active');
        })


        $('#cards').paginathing({

            // Limites your pagination number
            // false or number
            limitPagination: 6,
            // limitPagination: false,

            // Pagination controls
            perPage: 8,
            prevNext: true,
            firstLast: true,
            prevText: '&laquo;',
            nextText: '&raquo;',
            firstText: 'First',
            lastText: 'Last',
            containerClass: 'pagination-container',
            ulClass: 'pagination',
            liClass: 'page',
            activeClass: 'active',
            disabledClass: 'disabled',
            pageNumbers: true,
            insertAfter: '#cards'
        })

    </script>
}