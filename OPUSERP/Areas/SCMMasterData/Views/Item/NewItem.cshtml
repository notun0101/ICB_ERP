@model ItemViewModel
@{
    ViewData["Title"] = "Item";
    Layout = "~/Areas/Auth/Views/Shared/_MasterLayout.cshtml";
}
<style>
    .tabButton {
        font-size: 20px;
        padding: 10px 20px;
    }

    .width {
        width: 83% !important;
    }

    #myDIV {
        background-color: white;
        padding: 20px;
        box-shadow: 3px 3px 3px 3px lightgray;
