        function addNewCard() {
            $('#outer-box').append(`<div class="card card_${i + 1} mb-2 col-md-4">
                                                                        <a href="javascript:void(0)" style="width: 30px; position: absolute; right: 5px; top: 5px;" class="addNewCard btn btn-info btn-sm" onclick="addNewCard()">+</a>
