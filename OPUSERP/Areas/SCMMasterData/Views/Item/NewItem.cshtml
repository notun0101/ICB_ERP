            $('.select2-results').css('width', '83%');
            $('.select2-search__field').addClass('width');
            $('.select2-selection').css('width', '83%');
        })

        function AddSpec() {
            $('#outer-box').append(`<div class="card card_1 mb-2 col-md-4">
