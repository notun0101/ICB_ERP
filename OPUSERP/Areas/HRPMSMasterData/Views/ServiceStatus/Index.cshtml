            <div class="container">
                <form asp-area="HRPMSMasterData" asp-controller="ServiceStatus" asp-action="Index" method="post" id="FormId" data-parsley-validate="parsley">

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group row">
                        <input type="hidden" name="serviceStatusId" id="serviceStatusId" value="0" />
                        <label for="statusName" class="col-sm-3 col-form-label">Status Name (English)<span class="redStar">*</span></label>
                        <div class="col-sm-9">
                            <input type="text" data-parsley-required="true" data-parsley-trigger="keyup" class="form-control" name="statusName" id="statusName">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="statusNameBn" class="col-sm-3 col-form-label">Status Name (Bangla)</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="statusNameBn" id="statusNameBn">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="statusShortName" class="col-sm-3 col-form-label">@Model.fLang.shortName</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="statusShortName" id="statusShortName">
                        </div>
                    </div>
                    <hr>
                    <button type="submit" id="submitbtn" value="Submit" class="btn btn-success btn-lg" style="float:right; margin-top:5px;display:none;"><i class="fas fa-save"></i></button>
                    <button type="button" id="submit" value="Submit" class="btn btn-success btn-lg" style="float:right; margin-top:5px;"><i class="fas fa-save"></i></button>

                </form>
            </div>
        </div>
    </div>

<hr />
<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Service Status List</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="departmentTable">
                    <thead>
                        <tr>
                            <th>Service Status Name (English)</th>
                            <th>Service Status Name (Bangla)</th>
                            <th>@Model.fLang.shortName</th>
                            <th>@Model.fLang.action</th>
                    </thead>
                    <tbody>
                        @foreach (var data in Model.serviceStatus)
                        {
                            <tr>
                                <td>@data.statusName</td>
                                <td>@data.statusNameBn</td>
                                <td>@data.statusShortName</td>
                                <td>
                                    <a class="btn btn-success" onclick="Edit(@data.Id, '@data.statusName', '@data.statusNameBn', '@data.statusShortName')" href="#"><i class="fa fa-edit"></i></a>&nbsp;&nbsp;
                                    <a class="btn btn-danger" title="Delete" href="javascript:void(0)" onclick="DeleteMaster(@data.Id)"><i class="fa fa-trash-alt"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

