@model OTSlotTypeViewModel
@{
    ViewData["TitleMD"] = "OT Slot Type";
    Layout = "~/Areas/HRPMSMasterData/Views/Shared/_MasterDataForm.cshtml";
}

@section StyleMD{
    <style>
        .redStar {
            color: red;
        }
    </style>
}

    <div class="card" style="width: 100%;">
        <div class="card-header  d-flex flex-row align-items-center justify-content-between">
            <h5 class="m-0 font-weight-bold text-primary">OT Slot Type</h5>
            @*<a class=' mr-5' style="float:right" data-toggle='tooltip' title='Go Back' href='/Home/GridMenuPage?moduleId=3&perentId=5701'><i class="fas fa-chevron-circle-left" style="font-size:33px;"></i></a>*@

        </div>
        <div class="card-body">
            @*<h5 class="card-title" style="color: black">OT Slot Type</h5>
            <hr>*@
            <div class="container">
                <form asp-area="HRPMSMasterData" asp-controller="OT" asp-action="Index" method="post" data-parsley-validate="parsley">

                    <div asp-validation-summary="All" class="text-danger"></div>



                    <div class="form-group row">
                        <label for="name" class="col-sm-2 col-form-label"> Slot Name <span style="float:right;" class="redStar">*</span></label>
                        <div class="col-sm-10">
                            <input type="hidden" name="slotTypeId" id="slotTypeId" value="0" />
                            <input type="text" data-parsley-required="true" data-parsley-trigger="keyup" class="form-control" name="slotName" id="slotName">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="name" class="col-sm-2 col-form-label"> Slot Hour <span style="float:right;" class="redStar">*</span></label>
                        <div class="col-sm-10">

                            <input type="number" data-parsley-required="true" data-parsley-trigger="keyup" class="form-control" name="slotHour" id="slotHour">
                        </div>
                    </div>


                    <hr />
                    <button type="submit" value="Submit" class="btn btn-success btn-lg" style="float:right; margin-top:5px;"><i class="fas fa-save"></i></button>

                </form>
            </div>
        </div>
    </div>
<hr />
<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">OT Slot List</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="departmentTable">
                    <thead>
                        <tr>
                            
                            <th>Slot Name</th>
                            <th>Action</th>
                    </thead>
                    <tbody>
                        @foreach (var data in Model.oTSlotTypes)
                        {
                            <tr>
                                
                                <td>@data.slotName</td>
                                <td>
                                    <a class="btn btn-success" onclick="Edit(@data.Id, '@data.slotName')" href="#"><i class="fa fa-edit"></i></a>
                                   
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section ScriptsMD{
    <script>
        $(document).ready(function () {
            $("#SpecialBranchUnit").addClass("active");
            $('#departmentTable').DataTable();
        });

        function Edit(Id, name) {

          
            $("#slotTypeId").val(Id);
            $("#slotName").val(name);
           
        }
    </script>
}

