@section ScriptsMD{
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.11/summernote-bs4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <script>
        $(document).ready(function () {
            Clear();
            //$("#tblFormate").DataTable();
            $('#tblFormate').DataTable({
                dom: "<'row'<'col-sm-12 col-md-2'l><'col-sm-12 col-md-3'B><'col-sm-12 col-md-7'f>>" +
                    "<'row'<'col-sm-12't>>" + "<'row'<'col-sm-12 col-md-6'i><'col-sm-12 col-md-6'pr>>",
                buttons: [
                    {
                        extend: 'excelHtml5',
                        text: '<i class="fa fa-file-excel"></i> Excel',
                        titleAttr: 'Excel',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4]
                        },
                        title: 'ERP',
                        messageTop: 'Status List',
                        class: 'btn btn-info'
                    },
                    {
                        extend: 'csvHtml5',
                        text: '<i class="fa fa-file-excel"></i> CSV',
                        titleAttr: 'CSV',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4]
                        },
                        title: 'ERP',
                        messageTop: 'Status List'
                    },
                    {
                        extend: 'print',
                        text: '<i class="fa fa-print"></i> Print',
                        titleAttr: 'Print',
                        title: 'ERP',
                        messageTop: 'Status List',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4]
                        },
                        customize: function (doc) {
                            $(doc.document.body).find('h1').css('font-size', '20pt');
                            $(doc.document.body).find('h1').css('font-family', "'Times New Roman', Times, serif");
                            $(doc.document.body).find('h1').css('text-align', 'center');
                        }
                    }
                ]
            }
            );

            $('#body').summernote({
                tabsize: 2,
                height: 300
            });

            //$('#bodyText').summernote({
            //    tabsize: 2,
            //    height: 300
            //});

            $("#submit").click(function () {
                swal({
                    title: 'Are you sure?', text: 'Do you want to submit this record!', type: 'warning', showCancelButton: true, confirmButtonColor: '#3085d6', cancelButtonColor: '#d33', confirmButtonText: 'Yes, submit it!'
                }).then(function () {
                    $("#submitbtn").click();
                    Clear();
                });
            });
        });


        function Edit(Id, name, type, body) {
            $("#formatMasterId").val(Id);
            $("#name").val(name);
            $("#type").val(type);
            $('#body').summernote('code', body);
        }

        function Clear() {
            $("#formatMasterId").val(0);
            $("#name").val("");
            $("#type").val("");
            $("#body").val("");
        }



        function Delete(Id) {
            swal({
                title: 'Are you sure?', text: 'Do you want to delete this record!', type: 'warning', showCancelButton: true, confirmButtonColor: '#3085d6', cancelButtonColor: '#d33', confirmButtonText: 'Yes, delete it!'
            }).then(function () {

                $.ajax({
                    url: "/HRPMSMasterData/FormatMaster/DeleteFormatById/"+Id,
                    data: { Id: Id },
                    type: 'POST',
                })
                    .done(function () {
                        swal('', 'Deleted Successfully!', 'success');
                        window.location.reload();
                    })
                    .fail(function () {
                        swal('Cancelled', 'It will not be deleted. Please try again later !!!', 'error');
                    });
            });
        }


        function BodyDesignHtml(body) {

            var bodytext = body;
          //  $('#bodyText').append(bodytext);
            $('#bodyText').html(bodytext);
         //   $('#open_ender_output').html(openEnderContent);

 
          //  $('#bodyText').summernote('code', body);
         //  $('#bodyText').summernote('disable');
         //   $('#bodyText').val(body);
          //  $("bodyText").prop('disabled', true);
           // $('#bodyText').attr('disabled', 'disabled');
           // $('#bodyText').summernote(body);
            $("#BodyDeatilsModal").modal('show');
        }
    </script>
}


