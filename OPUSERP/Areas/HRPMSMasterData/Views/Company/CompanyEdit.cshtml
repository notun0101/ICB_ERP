@section ScriptsMD{
    <script src="~/lib/jquery.colorpicker.js"></script>
    
    <script>
        $(document).ready(function () {


            $("#my_color_picker").colorpicker();


            $("#submit").click(function () {
                swal({
                    title: 'Are you sure?', text: 'Do you want to Update this record!', type: 'warning', showCancelButton: true, confirmButtonColor: '#3085d6', cancelButtonColor: '#d33', confirmButtonText: 'Yes, submit it!'
                }).then(function () {
                    $("#submitbtn").click();
                });
            });
            $("#imagePath").change(function () {
                readURL(this);
            });
            $('#dateOfEstablishment').datepicker({ dateFormat: "dd-M-yy", showAnim: "scale", changeMonth: true, changeYear: true, yearRange: "1900:2100" });
            //$('#dateOfAgm').datepicker({ dateFormat: "dd-M-yy", showAnim: "scale", changeMonth: true, changeYear: true, yearRange: "1900:2100" });
            //$('#permission').datepicker({ dateFormat: "dd-M-yy", showAnim: "scale", changeMonth: true, changeYear: true, yearRange: "1900:2100" });
            //$('#certificateOfInspir').datepicker({ dateFormat: "dd-M-yy", showAnim: "scale", changeMonth: true, changeYear: true, yearRange: "1900:2100" });


        });
        function readURL(input) {
            if (input.files && input.files[0]) {
                var filerdr = new FileReader();
                filerdr.onload = function (e) {
                    $('#user_img').attr('src', e.target.result);
                    //$('#user_img_current').attr('src', e.target.result);
                }
                filerdr.readAsDataURL(input.files[0]);
            }
        }


    </script>
