@model ContributionViewModel
@{
    ViewData["Title"] = "ContributionOverView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row clearfix ">
    <div class="col-12 ">
        <div class="card mb-4">
            <div class="card-header  d-flex flex-row align-items-center justify-content-between">
                <h5 class="m-0 font-weight-bold text-primary">Contribution Overview</h5>
                <a class='btn btn-info mr-4' style="float:right" data-toggle='tooltip' title='Go Back' href='/Home/GridMenuPage?moduleId=1014&perentId=6015'>@*<i class="fas fa-backward fa-2x "></i>*@<i class="fas fa-angle-double-left"> <span style="">Back</span></i></a>
            </div>

            <div class="card-body bg-light">
                <div class="row ">
                    <div class="col-sm-3" align="center">
                        <div class="bg-white">
                            <br />
                            <h1 class="text-success" style="font-size:30px">@Model.totalContribution</h1>
                            <hr />
                            <h5><a href="">Total Contribution</a></h5>

                        </div>
                    </div>

                    <div class="col-sm-3" align="center">
                        <div class="bg-white">
                            <br />
                            <h1 class="text-success" style="font-size:30px">--</h1>
                            <hr />
                            <h5><a href="">Active Member</a></h5>

                        </div>
                    </div>

                    <div class="col-sm-3" align="center">
                        <div class="bg-white">
                            <br />
                            <h1 class="text-danger" style="font-size:30px">--</h1>
                            <hr />
                            <h5><a href="">Outgoing Member</a></h5>

                        </div>
                    </div>
                </div>

                <br />

                <div class="bg-white">
                    <br />
                    <table class="table table-striped table-bordered table-hover bg-white" id="TblOverView">
                        <thead>
                            <tr>

                                <th>Members ID</th>
                                <th>Contribution Month</th>
                                <th>Transaction Date</th>
                                <th>Company Contribution</th>
                                <th>Employee Contribution</th>

                        </thead>
                        <tbody>
                            @foreach (var data in Model.pFContributions)
                            {
                                <tr>
                                    <td>@data.pfmember?.memberName (@data.pfmember?.memberCode)</td>
                                    <td>@data.contributionMonth?.ToString("dd-MMM-yyyy")</td>
                                    <td>@data.transectionDate?.ToString("dd-MMM-yyyy")</td>
                                    <td>@data.companyContribution</td>
                                    <td>@data.employeeContribution</td>

                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#TblOverView').DataTable();

    });
</script>