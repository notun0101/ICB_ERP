@model LoanApplicationViewModel

@{
    ViewData["Title"] = "LoanDisbursment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4 bg-light">

            <div class="card">
                <div class="card-body">
                    <h5 class="m-0 font-weight-bold text-primary"> Loan Disbursment Pending</h5>
                    <hr />
                    <table class="table table-bordered table-striped" id="tblMemberList1" data-parsley-required="true">
                        <thead style="width:100%;background-color:lightgray">
                            <tr>
                                <th>
                                    Member ID
                                </th>
                                <th>
                                    Member Name
                                </th>
                                <th>
                                    Mobile
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Application Date
                                </th>
                               
                                <th>
                                    Loan Amount (Approved)
                                </th>
                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var data in Model.pFLoanManagements)
                                {
                                    <tr>
                                        <td>@data.EmployeeInfo?.employeeCode</td>
                                    <td>@data.EmployeeInfo?.nameEnglish</td>
                                    <td>@data.EmployeeInfo?.mobileNumberOffice</td>
                                        <td></td>
                                        <td>@data.applicationDate?.ToString("dd-MMM-yyyy")</td>
                                        <td>@data.loanAmount</td>
                                       
                                    <td><a href="/ProvidentFund/LoanManagement/PendingLoanPay?id=@data.Id" class="btn btn-primary btn-xs text-white" style="background-color:lightseagreen">Disbursement</a></td>
                                    </tr>
                                }



                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script>
        $(document).ready(function () {

            $('#tblMemberList1').DataTable();

        });
    </script>
}

