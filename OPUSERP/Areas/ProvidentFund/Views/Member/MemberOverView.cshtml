@model PFMemberInfoViewModel
@{
    ViewData["Title"] = "MemberOverView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row clearfix">
    <div class="col-12">
     

        <div class="card mb-4 bg-light">
            <div class="card-header  d-flex flex-row align-items-center justify-content-between">
                <h5 class="m-0 font-weight-bold text-primary">Member Overview</h5>
                <a class='btn btn-info mr-4' style="float:right" data-toggle='tooltip' title='Go Back' href='/Home/GridMenuPage?moduleId=1014&perentId=6014'>@*<i class="fas fa-backward fa-2x "></i>*@<i class="fas fa-angle-double-left"> <span style="">Back</span></i></a>
            </div>
            <div class="card-body">
                <div class="">
                    <div class="row ">
                        <div class="col-sm-3" align="center">
                            <div class="bg-white">
                                <h3 class="text-success" style="font-size:60px">@Model.totalMember</h3>
                                <hr />
                                <h6><a href="">Total Members</a></h6>
                                <br />
                            </div>
                        </div>

                        <div class="col-sm-3" align="center">
                            <div class="bg-white">
                                <h3 class="text-success" style="font-size:60px">@Model.newMember</h3>
                                <hr />
                                <h6><a href="">New Members(this year)</a></h6>
                                <br />
                            </div>
                        </div>

                        <div class="col-sm-3" align="center">
                            <div class="bg-white">
                                <h3 class="text-danger" style="font-size:60px">@Model.pendingMember</h3>
                                <hr />
                                <h6><a href="">Pending Members</a></h6>
                                <br />

                            </div>
                        </div>
                        <div class="col-sm-3" align="center">
                            <div class="bg-white">
                                <h3 class="text-warning" style="font-size:60px">--</h3>
                                <hr />
                                <h6><a href="">Pending PF Final Settlement</a></h6>
                                <br />

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="row clearfix">
            <div class="col-12">
                <div class="card mb-4">
                    <!-- Card Header - Dropdown -->
                   
                    <div class="card-header  d-flex flex-row align-items-center justify-content-between">
                        <h5 class="m-0 font-weight-bold text-primary">Member List</h5>
                    </div>
                    <!-- Card Body -->
                    <div class="card-body">
                        <table class="table table-bordered table-striped" id="tblMemberList" data-parsley-required="true">
                            <thead style="width:100%;background-color:lightgray">
                                <tr>
                                    <th>
                                        Member ID
                                    </th>
                                    <th>
                                        Member Name
                                    </th>
                                    <th>
                                        Total Contribution
                                    </th>
                                    <th>
                                        Total Profit
                                    </th>
                                    <th>
                                        Member Status
                                    </th>
                                    <th>
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var data in Model.pfMemberInfos)
                                {
                                    <tr>

                                        <td>@data.pFMember.memberCode</td>
                                        <td>@data.pFMember.memberName</td>
                                        <td>@data.totalContribution</td>
                                        <td></td>
                                        @if (data.pFMember.approveStatus == 1)
                                        {
                                            <td>Reject</td>
                                        }
                                        else if (data.pFMember.approveStatus == 2)
                                        {
                                            <td>Approved</td>
                                        }
                                        else if (data.pFMember.approveStatus == 0)
                                        {
                                            <td>Pendding</td>
                                        }
                                        else
                                        {
                                            <td></td>
                                        }

                                        @*<td>@data.approveStatus</td>*@


                                        <td><a href="/ProvidentFund/Member/MemberPFStatement"><i class="fas fa-eye" style="color:green"></i></a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>








@section Scripts{

    <script>
        $(document).ready(function () {

            $('#tblMemberList').DataTable();

        });
    </script>
}

