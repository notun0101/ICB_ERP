@model PFInvestmentViewModel
@{
    ViewData["Title"] = "InvestmentOverView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            @*<div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h2 class="m-0 font-weight-bold text-primary">Overview</h2>
            </div>*@



            <div class="card-body bg-light">
                <div class="row ">
                    <div class="col-sm-3" align="center">
                        <div class="bg-white">
                            <br />
                            <h1 class="text-success" style="font-size:30px">@Model.totalInvestment</h1>
                            <hr />
                            <h5><a href="">Total Investment</a></h5>
                        </div>
                    </div>

                    <div class="col-sm-3" align="center">
                        <div class="bg-white">
                            <br />
                            <h1 class="text-success" style="font-size:30px">@Model.totalNewYearInvestment</h1>
                            <hr />
                            <h5><a href="">New Investment (this year)</a></h5>
                        </div>
                    </div>
                    <div class="col-sm-3" align="center">
                        <div class="bg-white">
                            <br />
                            <h1 class="text-success" style="font-size:30px">--</h1>
                            <hr />
                            <h5><a href="">Interest Income (this year)</a></h5>
                        </div>
                    </div>

                    <div class="col-sm-3" align="center">
                        <div class="bg-white">
                            <br />
                            <h1 class="text-danger" style="font-size:30px">--</h1>
                            <hr />
                            <h5><a href="">Encashment (this year)</a></h5>
                        </div>
                    </div>
                </div>

                <br />
                <br />
                <div class=" bg-white">
                    <br />
                    <h5 class="m-0 font-weight-bold text-primary ">Investment List</h5>
                    <hr />
                    <table class="table table-striped table-bordered table-hover bg-white" id="TblOverView">
                        <thead>
                            <tr>
                                <th>Investment Name</th>
                                <th>Investment Date</th>
                                <th>Amount</th>
                                <th>Interest Rate</th>
                                <th>Maturity Date</th>
                                <th>Manage</th>

                        </thead>
                        <tbody>
                            @foreach (var data in Model.pFInvestments)
                            {
                                <tr>
                                    <td>@data.investmentName</td>
                                    <td>@data.investmentDate?.ToString("dd-MMM-yyyy")</td>
                                    <td>@data.investmentAmount</td>
                                    <td>@data.interestRate</td>
                                    <td>@data.maturityDate?.ToString("dd-MMM-yyyy")</td>
                                    <td>
                                        <a href="/ProvidentFund/Investment/PreviewInvestment">
                                            <i class="fa fa-eye" style="color:green"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#TblOverView').DataTable();
    });
</script>
