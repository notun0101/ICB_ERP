@*@model EmployeeInfoViewModel*@
@{
    ViewData["Title"] = "All CV Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Style{
}

<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">All CV Information</h6>
            </div>
            
            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" style="width:100%;" id="allCVListTable">
                    <thead>
                        <tr>
                            <th>Candidate Name</th>
                            <th>Mobile No</th>
                            <th>Email</th>
                            <th width="100px">Action</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        var table;
        $(document).ready(function () {  

            table = $('#allCVListTable').DataTable({
                ajax: {
                    url: "/global/api/allCandidateList",
                    dataSrc: ""
                },
                scrollX: true,
                columns: [
                    { data: "candidateName" },
                    { data: "mobile" },
                    { data: "email" },
                    { data: "action" }
                ],
                stateSave: true,
                dom: "<'row'<'col-sm-12 col-md-2'l><'col-sm-12 col-md-3'B><'col-sm-12 col-md-7'f>>" +
                    "<'row'<'col-sm-12't>>" + "<'row'<'col-sm-12 col-md-6'i><'col-sm-12 col-md-6'pr>>",
                buttons: [
                    {
                        extend: 'excelHtml5',
                        text: '<i class="fa fa-file-excel"></i> Excel',
                        titleAttr: 'Excel',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4]
                        },
                        title: "ERP-HRPMS",
                        messageTop: 'List Of Employee',
                        class: 'btn btn-info'
                    },
                    {
                        extend: 'csvHtml5',
                        text: '<i class="fa fa-file-excel"></i> CSV',
                        titleAttr: 'CSV',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4]
                        },
                        title: "ERP-HRPMS",
                        messageTop: 'List Of Employee'
                    },
                    {
                        extend: 'print',
                        text: '<i class="fa fa-print"></i> Print',
                        titleAttr: 'Print',
                        title: "ERP-HRPMS",
                        messageTop: 'List Of Employee',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4]
                        },
                        customize: function (doc) {
                            $(doc.document.body).find('h1').css('font-size', '20pt');
                            $(doc.document.body).find('h1').css('font-family', "'Times New Roman', Times, serif");
                            $(doc.document.body).find('h1').css('text-align', 'center');
                        }
                    }
                ]
            });
        });
    </script>
}