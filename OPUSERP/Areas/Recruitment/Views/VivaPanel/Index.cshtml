@*@model TrainingImplementationViewModel*@
@{
    ViewData["Title"] = "Job Posting";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Style{
}

<br />
<hr />
<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Viva List</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="vivaListable">
                    <thead>
                        <tr>
                            <th>Candidate Name</th>
                            <th>Job No</th>
                            <th>Department</th>
                            <th>Designation</th>
                            <th>Interview Type</th>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Target Date</th>
                            <th>Action</th>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Wahid Azmal</td>
                            <td>CA/Job/New/12314</td>
                            <td>HR</td>
                            <td>Executive</td>
                            <td>Viva</td>
                            <td>10/12/2019</td>
                            <td>10AM</td>
                            <td>10/12/2019 10AM</td>
                            <td>
                                <a class="btn btn-success" onclick="Edit(5,4,9,'trainingTitle','countryId','20191031','20191031','sponsoringAgency','remarks')" href="#"><i class="fa fa-edit"></i></a>
                                <a class="btn btn-danger" onclick="Remove(Id,employeeId)" href="#"><i class="fa fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<br /><br />
<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Viva Board List</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="vivaBoardTable">
                    <thead>
                        <tr>
                            <th>Job No</th>
                            <th>Emp Name</th>
                            <th>Department</th>
                            <th>Designation</th>
                            <th>Action</th>
                    </thead>
                    <tbody>
                        <tr>
                            <td>CA/Job/New/12314</td>
                            <td>Wahid Azmal</td>
                            <td>HR</td>
                            <td>Executive</td>
                            @*<td>@data.startDateActual?.ToString("MM/dd/yy")</td>
                                <td>@data.endDateActual?.ToString("MM/dd/yy")</td>*@
                            <td>
                                <a class="btn btn-success" data-toggle="modal" data-target="#jobPostingModal" href="#"><i class="fa fa-edit"></i></a>
                                <a class="btn btn-danger" href="#"><i class="fa fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script>
        $(document).ready(function () {
            //$("#award").addClass("active");
            $('#postingDate').datepicker({
                uiLibrary: 'bootstrap4'
            });
            $('#deadline').datepicker({
                uiLibrary: 'bootstrap4'
            });
            $('#vivaListable').DataTable();
            $('#vivaBoardTable').DataTable();
        });

    </script>
}