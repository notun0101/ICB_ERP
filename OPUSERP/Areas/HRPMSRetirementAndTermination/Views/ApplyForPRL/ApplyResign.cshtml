        function Edit(Id, employeeId, nameEnglish, designation, employeeCode, resignDate, lastWorkingDate, resignReason, url, nextApprover) {
         //   Common.Ajax('GET', '/HRPMSRetirementAndTermination/ApplyForPRL/GetEmpIdByUserId?id=' + nextApprover, [], 'json', ajaxFunctionNext, true);

