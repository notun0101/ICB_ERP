<div class="card" style="width: 100%;">
    <div class="card-header row outBox" style="background-color: #EAF6FA;padding: 0; color: black;">
        <div class="col-md-4" style="display: flex; justify-content: flex-start; align-items: center; ">
            <h5 class="card-title" style="color: black; margin: 8px;">Apply for resignation</h5>
        </div>
        <div class="col-md-8">

            <div style="float: right; margin: 16px;">
                <a class='btn btn-info mr-4' style="" data-toggle='tooltip' title='Go Back' href='/Home/GridMenuPage?moduleId=3&perentId=5753'><i class="fas fa-angle-double-left"> <span style="">Back</span></i></a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="container">
            <form asp-area="HRPMSRetirementAndTermination" id="FormId" asp-controller="ApplyForPRL" asp-action="ApplyResign" method="post" data-parsley-validate="parsley"  enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="card" style="padding:2%;">
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group row">
                                <label for="employeeId" class="col-sm-2 col-form-label">Employee Code<span class="redClolor">*</span></label>
                                <input type="hidden" id="employeeId" name="employeeId"  />
                                <input type="hidden" id="resignId" name="resignId" value="0" />
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" data-parsley-required="true" id="empNameId" name="empNameId">
                                </div>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="form-group row">
                                <label for="designation" class="col-sm-4 col-form-label">@Model.flang.designation</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" name="designation" id="designation" readonly>
                                </div>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="form-group row">
                                <label for="employeeName" class="col-sm-4 col-form-label">@Model.flang.employeeName</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" name="employeeName" id="employeeName"  readonly>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card" style="padding: 2%; margin-top: 1%;">
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group row">
                                <label for="resignDate" class="col-sm-4 col-form-label">Resign Date <span class="redClolor">*</span></label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" readonly name="resignDate" id="resignDate" data-parsley-required="true">
                                </div>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="form-group row">
                                <label for="lastWorkingDate" class="col-sm-4 col-form-label">Last Working Date <span class="redClolor">*</span></label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" readonly name="lastWorkingDate" id="lastWorkingDate" data-parsley-required="true">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group row">
                                <label for="resignReason" class="col-4 col-form-label">Reason <span class="redClolor">*</span></label>
                                <div class="col-8">
                                    <textarea class="form-control" rows="3" name="resignReason" id="resignReason" data-parsley-required="true"></textarea>
                                </div>
                            </div>
                        </div> 
                        
                        <div class="col-6">
                            <div class="form-group row">
                                <label for="resignReason" class="col-4 col-form-label">Next Approver<span class="redClolor">*</span></label>
                                <div class="col-8">
                                    <input type="text" class="form-control" id="empNameId1" name=""  value="" data-parsley-required="true">
                                    <input type="hidden" id="employeeId1" name="nextApprover" value="" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-6">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Attachment</label>


                                <div class="col-8">
                                    <img id="user_img1" style="width:180px;height:180px;" src="~/images/file_imge.jpg" alt="" class="img-thumbnail float-left">
                                    <input type="hidden" id="userFile" />
                                    <input type="hidden" name="resignId" value="@Model.resignId" />

                                    <input type="file" title="Photo Upload" id="imagePath1" data-parsley-required="false" name="resignPhoto" class="btn btn-default btn-sm pull-right" />

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                    <hr>
                    @*<button type="button" id="submit" value="Submit" class="btn btn-success btn-sm" style="float:right; margin-top:5px;"><i class="fas fa-save"></i></button>*@

                    <button type="submit" id="submitbtn" value="Submit" class="btn btn-success btn-lg" style="float:right; margin-top:5px;display:none;"><i class="fas fa-save"></i></button>
                    <button type="button" id="submit" value="Submit" class="btn btn-success" style="float:right; margin-top:5px;"><i class="fas fa-save"></i> Save</button>

         </form>
        </div>
    </div>
</div>

<hr />
<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">All Applied resignations</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="childrenTable">
                    <thead>
                        <tr>
                            <th>Employee</th>
                            <th>Designation</th>
                            <th>Resign Date</th>
                            <th>Last Working Date</th>
                            <th>Attachment</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var data in Model.resignInformation)
                        {
                        <tr>
                            <td>@data.employee?.employeeCode - @data.employee?.nameEnglish</td>
                            <td>@data.employee?.lastDesignation?.designationName</td>
                            <td>@data.resignDate?.ToString("dd-MMM-yyyy")</td>
                            <td>@data.lastWorkingDate?.ToString("dd-MMM-yyyy")</td>
                            @if (data.url == null)
                            {
                                <td></td>

                            }
                            else
                            {

                                <td> <a href="~/EmpAttachment/@data.url" target="_blank"><i class="fas fa-link"><u>Click Here</u></i></a></td>

                            }
                            <td>
                                <a class="btn btn-success" onclick="Edit(@data.Id,'@data.employeeId','@data.employee?.nameEnglish','@data.employee?.lastDesignation?.designationName','@data.employee?.employeeCode','@data.resignDate?.ToString("dd-MMM-yyyy")','@data.lastWorkingDate?.ToString("dd-MMM-yyyy")','@data.resignReason','@data.url', @data.nextApprover)" href="#"><i class="fa fa-edit"></i></a>
                                @*<a class="btn btn-danger" onclick="Remove(@data.Id,@data.employeeId)" href="#"><i class="fa fa-trash-alt"></i></a>*@
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="imgViewModal" role="dialog" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">

                <h5 class="modal-title" id="exampleModalLabel">Photo Preview</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" style="color: black; box-shadow: none !important; outline: none!important;">×</span>
                </button>
