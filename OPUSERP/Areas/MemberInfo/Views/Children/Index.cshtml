@model ChildrenViewModel

@{
    ViewData["Title"] = "Children Information";
    Layout = "~/Areas/MemberInfo/Views/Shared/_EmployeeForm.cshtml";
}

@section StyleEmp{
    <link rel="stylesheet" href="https://unpkg.com/multiple-select@1.3.1/dist/multiple-select.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <style>
        .redStar {
            color: red;
        }
        #skills {
            width: 30%;
        }
    </style>
}

<div class="card" style="width: 100%;">
    <div class="card-body">
        <div class="row">
            <div class="col-8">
                <h5 class="card-title" style="color: black">@Model.fLang.title </h5>
            </div>
            <div class="col-4">
                <h6 class="identity-box">@Model.employeeNameCode</h6>
            </div>
        </div>
        <hr>
        <div class="container">
            <form asp-area="MemberInfo" asp-controller="Children" asp-action="Index" method="post" data-parsley-validate="parsley">

                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group row">
                            <label for="childName" class="col-sm-3 col-form-label">@Model.fLang.childName </label>
                            <span class="col-1 redStar">*</span>
                            <div class="col-sm-8">
                                <input data-parsley-trigger="keyup" type="text" class="form-control" id="childName" value="" name="childName" data-parsley-required="true">
                                <input type="hidden" id="employeeID" name="employeeID" value="@Model.employeeID">
                                <input type="hidden" id="childrenID" name="childrenID" value="0">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="dateOfBirth" class="col-sm-4 col-form-label">@Model.fLang.dateOfBirth </label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="dateOfBirth" value="" name="dateOfBirth" >
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="occupation" class="col-sm-4 col-form-label">@Model.fLang.occupation</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="occupation" value="" name="occupation">
                            </div>
                        </div>
                        <div class="form-group row" style="display:none;">
                            <label for="organization" class="col-sm-4 col-form-label">@Model.fLang.organization</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="organization" value="" name="organization">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="bin" class="col-sm-4 col-form-label">@Model.fLang.bin </label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="bin" value="" name="bin">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="bloodGroup" class="col-sm-4 col-form-label">@Model.fLang.bloodGroup</label>
                            <div class="col-sm-8">
                                <select class="form-control" name="bloodGroup" id="bloodGroup">
                                    <option value="O+">O+</option>
                                    <option value="O-">O-</option>
                                    <option value="A+">A+</option>
                                    <option value="A-">A-</option>
                                    <option value="AB+">AB+</option>
                                    <option value="AB-">AB-</option>
                                    <option value="B+">B+</option>
                                    <option value="B-">B-</option>
                                </select>
                            </div>
                        </div>

                    </div>
                    <div class="col-sm-6">
                        <div class="form-group row">
                            <label for="childNameBN" class="col-sm-4 col-form-label">@Model.fLang.childNameBN</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="childNameBN" value="" name="childNameBN">
                            </div>
                        </div>
                    <div class="form-group row" style="display:none;">
                        <label for="education" class="col-sm-4 col-form-label">@Model.fLang.education</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="educations" value="" name="education">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="gender" class="col-sm-4 col-form-label">@Model.fLang.gender</label>
                        <div class="col-sm-8">
                            <select class="form-control" name="gender" id="gender">
                                <option>Male</option>
                                <option>Female</option>
                                <option>Others</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row" style="display:none;">
                        <label for="designation" class="col-sm-4 col-form-label">@Model.fLang.designation</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="designation" value="" name="designation">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="nid" class="col-sm-4 col-form-label">@Model.fLang.nid </label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="nid" value="" name="nid">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="isDisable" class="col-sm-4 col-form-label">@Model.fLang.Disable</label>
                        <div class="col-sm-8" style="padding-left: 3%;">
                            <input type="checkbox" class="form-check-input" id="isDisable" name="isDisable">
                            <label class="form-check-label" for="isDisable"></label>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="skills" class="col-sm-4 col-form-label">@Model.fLang.skill</label>
                        <div class="col-sm-8">
                            <select class="multiple-select" multiple="multiple" name="skills" id="skills">
                                @foreach (var data in Model.spacialSkills)
                                {
                                    <option value="@data.Id">@data.skilName</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                </div>
                <hr>
                <button type="submit" value="Submit" class="btn btn-success btn-lg" style="float:right; margin-top:5px;"><i class="fas fa-save"></i></button>

            </form>
        </div>
    </div>
</div>

<br />
<hr />
<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">@Model.fLang.title</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="childrenTable">
                    <thead>
                        <tr>
                            <th>@Model.fLang.childName</th>
                            <th>@Model.fLang.dateOfBirth</th>
                            <th>@Model.fLang.gender</th>
                            <th>@Model.fLang.bloodGroup</th>
                            <th>@Model.fLang.skill</th>
                            <th>@Model.fLang.action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var data in Model.children)
                        {
                            <tr>
                                <td>@data.childName</td>
                                <td>@data.dateOfBirth?.ToString("MM/dd/yyyy")</td>
                                <td>@data.gender</td>
                                <td>@data.bloodGroup</td>
                                <td>@data.spacialSkills</td>
                                <td>
                                    <a class="btn btn-success" onclick="Edit(@data.Id,'@data.childName','@data.employeeId','@data.childNameBN','@data.dateOfBirth?.ToString("MM/dd/yyyy")','@data.education','@data.gender','@data.occupation','@data.designation','@data.organization','@data.bin','@data.nid','@data.bloodGroup','@data.spacialSkillIds')" href="#"><i class="fa fa-edit"></i></a>
                                    <a class="btn btn-danger" onclick="Remove(@data.Id,@data.employeeId)" href="#"><i class="fa fa-trash-alt"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section ScriptsEmp{
    <script src="https://unpkg.com/multiple-select@1.3.1/dist/multiple-select.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        $(document).ready(function () {
            $("#children").addClass("active");
            $('#skills').multipleSelect();
            $('#dateOfBirth').flatpickr({ dateFormat: "m/d/Y", maxDate: "@DateTime.Now.ToString("MM/dd/yyyy")" });
            
            $('#childrenTable').DataTable();
        });

        function Edit(Id, childName, employeeId, childNameBN, dateOfBirth, education, gender, occupation, designation, organization, bin, nid, bloodGroup, spacialSkillIds) {
            $('#employeeID').val(employeeId);
            $('#childrenID').val(Id);
            $('#childName').val(childName);
            $('#childNameBN').val(childNameBN);
            $('#dateOfBirth').val(dateOfBirth);
            $('#educations').val(education);
            $('#gender').val(gender);
            $('#occupation').val(occupation);
            $('#designation').val(designation);
            $('#organization').val(organization);
            $('#bin').val(bin);
            $('#nid').val(nid);
            $('#bloodGroup').val(bloodGroup);
            $("#skills").multipleSelect('setSelects', spacialSkillIds.split(","));
        }

        function Remove(Id, employeeId) {
            chk = confirm('Do you want to delete this?');
            if (chk) {
                //return true;
                location.replace("/Employee/Children/Delete/" + Id + "?empId=" + employeeId);
            } else {
                return false;
            }
        }


    </script>
}


