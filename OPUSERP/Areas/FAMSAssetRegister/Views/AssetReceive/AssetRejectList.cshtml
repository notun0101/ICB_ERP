@model AssetReceiveViewModel
@{
    ViewData["Title"] = "AssetRejectList";
}

@section Style{
    <style>
        #assetRejectTable tbody tr {
            cursor: pointer;
        }
    </style>
}

<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h4 class="m-0 font-weight-bold text-primary">Asset Reject List</h4>
                <a href="/FAMSAssetRegister/AssetReceive/AssetNotReceiveList" class="btn btn-success btn-sm pull-right">Add Asset Reject</a>
            </div>

            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="assetRejectTable">
                    <thead>
                        <tr>
                            <th>Asset No</th>
                            <th>Asset Value</th>
                            <th>Reject Date</th>
                            <th>Reject By</th>
                            @*<th>Action</th>*@
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var data in Model.assetRejects)
                        {
                            <tr>
                                <td><span style="display:none">-@data.Id-</span>@data.assetRegistration.assetNo</td>
                                <td>@data.assetRegistration.assetValue</td>
                                <td>@data.rejectDate?.ToString("dd-MMM-yyyy")</td>
                                <td>@data.rejectBy</td>
                                @*<td>
                                        <a class="btn btn-success" data-toggle="tooltip" title="Edit" href="/FAMSAssetRegister/AssetReceive/AssetReceive/?id=@data.Id&assetId=@data.assetRegistrationId"><i class="fa fa-edit"></i></a>
                                    </td>*@
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

