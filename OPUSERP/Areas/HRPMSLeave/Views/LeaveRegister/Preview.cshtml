                        <label>@Model.companies.FirstOrDefault().addressLine</label>
                    </div>
                </div>
                <div class="col-2"></div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-3">
                    @*<img src="~/images/Bangladesh-Govt-Logo.jpg" style="height:85px" />*@
                </div>
                <div class="col-6 text-center">
                    <h3 class="card-title" style="color: black;margin-top: 25px;"><b>LEAVE APPLICATION FORM</b></h3>
                    @*<h6 class="identity-box-center">(@Model.pIMSVisitor.name)</h6>*@
                </div>

            </div>
        </div>
        <hr>
        <div class="container">

            <div class="row clearfix">

                <div class="row clearfix">
                    @*<div class="col-12">
                            <h6 class="m-0 font-weight-bold text-primary" id="personal">SUBMITTED BY</h6>
                        </div>*@
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="m-0 font-weight-bold text-primary" id="personal">SUBMITTED BY</h6>
                            </div>
                          
                            <div class="card-body ">
                                <table class="" style="width:100%;">
                                    <tr>
                                        <td style="padding: 7px;"><strong style="font-size:18px;">Employee Name : </strong>@Model.leaveRegister.employee.nameEnglish- @Model.leaveRegister.employee.employeeCode</td>
                                        <td style="padding: 7px;"><strong style="font-size:18px;">Employee Code : </strong>@Model.leaveRegister.employee.employeeCode</td>
                                    </tr>
                                    <tr>
                                        <td style="padding: 7px;"><strong style="font-size:18px;">Department : </strong>@Model.leaveRegister.employee.department.deptName</td>
                                        <td style="padding: 7px;"><strong style="font-size:18px;">Designation : </strong>@Model.leaveRegister.employee.designation</td>
                                    </tr>
                                </table>
                                @*<div class="row">
                                    <div class="col-1"></div>
                                    <div class="col-6">
                                        <div class="form-group row">
                                            @if (Model.leaveRegister.employee.nameEnglish != null)
                                            {

                                                <label style="padding: 7px;"><strong style="font-size:18px;">Employee Name : </strong>@Model.leaveRegister.employee.nameEnglish- @Model.leaveRegister.employee.employeeCode</label>

                                            }
                                        </div>
                                        <div class="form-group row">
                                            @if (Model.leaveRegister.employee.employeeCode != null)
                                            {
                                                <label style="padding: 7px;"><strong style="font-size:18px;">Employee Code : </strong>@Model.leaveRegister.employee.employeeCode</label>
                                            }
                                        </div>
                                    </div>
                                    <div class="col-5">
                                        <div class="form-group row">
                                            @if (Model.leaveRegister.employee.department != null)
                                            {
                                                <label style="padding: 7px;"><strong style="font-size:18px;">Department : </strong>@Model.leaveRegister.employee.department.deptName</label>

                                            }
                                        </div>
                                        <div class="form-group row">
                                            @if (Model.leaveRegister.employee.designation != null)
