@section ScriptsL{
    <script src="~/Assets/paginathing.js"></script>
    <script>
        $(document).ready(function () {
            var masterId = $('#masterId').val();
            $('#reg_' + masterId).addClass('active1');

            $("#education").addClass("active");
            $('#requisitionListTable').DataTable({
                dom: "<'row'<'col-sm-12 col-md-2'l><'col-sm-12 col-md-3'B><'col-sm-12 col-md-7'f>>" +
                    "<'row'<'col-sm-12't>>" + "<'row'<'col-sm-12 col-md-6'i><'col-sm-12 col-md-6'pr>>",
                buttons: [
                    {
                        extend: 'excelHtml5',
                        text: '<i class="fa fa-file-excel"></i> Excel',
                        titleAttr: 'Excel',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4]
                        },
                        title: 'ERP',
                        messageTop: 'Status List',
                        class: 'btn btn-info'
                    },
                    {
                        extend: 'csvHtml5',
                        text: '<i class="fa fa-file-excel"></i> CSV',
                        titleAttr: 'CSV',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4]
                        },
                        title: 'ERP',
                        messageTop: 'Status List'
                    },
                    {
                        extend: 'print',
                        text: '<i class="fa fa-print"></i> Print',
                        titleAttr: 'Print',
                        title: 'ERP',
                        messageTop: 'Status List',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4]
                        },
                        customize: function (doc) {
                            $(doc.document.body).find('h1').css('font-size', '20pt');
                            $(doc.document.body).find('h1').css('font-family', "'Times New Roman', Times, serif");
                            $(doc.document.body).find('h1').css('text-align', 'center');
                        }
                    }
                ]
            }
            );
            $('#gridView').show();
            $('#listView').hide();

            $('.fas').removeClass('active');
            $('.fa-th').addClass('active');

            $("#myInput1").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $(".searchdiv").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });

            if ($("#cards").length != null) {

                $('#cards').paginathing({

                    // Limites your pagination number
                    // false or number
                    // limitPagination: limit,
                    // limitPagination: false,

                    // Pagination controls
                    perPage: 8,
                    prevNext: true,
                    firstLast: true,
                    prevText: '&laquo;',
                    nextText: '&raquo;',
                    firstText: 'First',
                    lastText: 'Last',
                    containerClass: 'pagination-container',
                    ulClass: 'pagination',
                    liClass: 'page',
                    activeClass: 'active',
                    disabledClass: 'disabled',
                    pageNumbers: true,
                    insertAfter: '#cards'
                })
            }
        });
        $('.fa-list-alt').click(function () {
            $('#listView').show();
            $('#gridView').hide();

            $('.fas').removeClass('active');
            $('.fa-list-alt').addClass('active');
        })
        $('.fa-th').click(function () {
            $('#listView').hide();
            $('#gridView').show();

            $('.fas').removeClass('active');
            $('.fa-th').addClass('active');
        })

        $.fn.dataTable.ext.classes.sPageButton = 'your class';




        $('.DataPage').paginathing({

            // Limites your pagination number
            // false or number
            //limitPagination: length,
            // limitPagination: false,

            // Pagination controls
            perPage: 8,
            prevNext: true,
            firstLast: true,
            prevText: '&laquo;',
            nextText: '&raquo;',
            firstText: 'First',
            lastText: 'Last',
            containerClass: 'pagination-container',
            ulClass: 'pagination',
            liClass: 'page',
            activeClass: 'active',
            disabledClass: 'disabled',
            pageNumbers: true,
            insertAfter: '.DataPage'
        })
        function GetStatus(id) {
            Common.Ajax('GET', '/global/api/GetAllLeaveStatusLogByLeaveId/' + id, [], 'json', AjaxGetStatus);
        }

        function AjaxGetStatus(response) {
            console.log(response)
            var dtTable = $("#statusTable");
            var tableBody = dtTable.find('tbody');
            tableBody.empty();
            $.each(response, function (key, value) {
                console.log(response[key])
                var trHtml = '<tr>' +
                    '<td>' + formatDate(response[key].leaveStatusLog.leaveRegister.leaveFrom) + '</td>' +
                    '<td>' + formatDate(response[key].leaveStatusLog.leaveRegister.leaveTo) + '</td>' +
                    '<td>' + response[key].leaveStatusLog.leaveRegister.leaveType.nameEn + '</td>' +
                    '<td>' + response[key].employeeInfo.nameEnglish + '</td>' +
                    '<td>' + response[key].leaveStatusLog.remarks + '</td>' +
                    '<td>' + formatDate(value.leaveStatusLog.date) + '</td>' +
                    '</tr>';

                tableBody.append(trHtml);
            })
        }

        function formatDate(date) {
            var monthNames = [
                "Jan", "Feb", "Mar",
                "Apr", "May", "Jun", "Jul",
                "Aug", "Sep", "Oct",
                "Nov", "Dec"
            ];
            date = new Date(date);
            var day = date.getDate();
            var monthIndex = date.getMonth();
            var year = date.getFullYear();

            return day + ' ' + monthNames[monthIndex] + ' ' + year;
        }
    </script>
}

