            }
            else {
                m = dateNew.getMonth();
            }
            if (parseInt(dateNew.getDate()) < 10) {
                d = '0' + dateNew.getDate();
            }
            else {
                d = dateNew.getDate();
            }
            return dateNew.getFullYear() + '-' + m + '-' + d;
        }
