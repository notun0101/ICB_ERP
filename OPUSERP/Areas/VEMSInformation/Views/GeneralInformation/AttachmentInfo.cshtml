@model VendorAttachmentViewModel
@{
    ViewData["Title"] = "NDA File";
}

<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <br />
            <div class="card-header row">
                <div class="col-md-10">
                    <h6 class="m-0 font-weight-bold text-primary">Upload Attachment File</h6>
                </div>
                <div class="col-md-2">
                    <a class="btn btn-sm btn-info" style="float:right;" href="/VEMSInformation/GeneralInformation/Index/@Model?.registrationFormId">Back To List</a>
                </div>
            </div>

            <div class="card-body">
                <form id="frmDoc" asp-area="VEMSInformation" asp-controller="GeneralInformation" asp-action="AttachmentInfo" method="post" enctype="multipart/form-data" data-parsley-validate="parsley">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group row">
                        <label for="fileNmae" class="col-sm-3 col-form-label text-right">File Name</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="fileNmae" id="fileNmae" maxlength="50" data-parsley-trigger="keyup">
                            <input type="hidden" class="form-control" value="@Model.registrationFormId" name="registrationFormId" id="registrationFormId">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="LicenseNumber" class="col-sm-3 col-form-label text-right">File For</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="fileFor" id="fileFor" maxlength="50" data-parsley-trigger="keyup">
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <label for="LicenseNumber" class="col-sm-3 col-form-label text-right">UPload</label>
                        <div class="col-sm-9" enctype="multipart/form-data">
                            <input class="form-control input-sm" style="width:100%;" type="file" id="docformFile" name="formFile" required />
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="submit" style="background-color:#024972;" class="btn-primary btn-sm">Upload</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#codeOfContactTable').DataTable();
        });

        function showdoc(input) {
            if (input.files && input.files[0]) {
                var filerdr = new FileReader();
                filerdr.onload = function (e) {
                    $('#user_doc').attr('src', e.target.result);
                }
                filerdr.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
