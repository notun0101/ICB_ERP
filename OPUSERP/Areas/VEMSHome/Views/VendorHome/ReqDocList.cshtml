@model RegistrationViewModel
@{
    ViewData["Title"] = "Documents required";
}

<div class="card" style="margin: 0 80px 0 80px;">
    <div class="card-header">
        <h1>Documents required for registration</h1>
    </div>
    <div class="card-body">
        <div class="row">
            <p class="col-12" style="font-weight:bold;">Thank you for your interest to become a supplier. You will need the following scanned documents while registering :</p>
            <ol class="col-12" style="margin-left: 30px;">
                @foreach (var item in Model.requiredDocuments)
                {
                    <li>@item.description</li>
                }
            </ol>
        </div>
        <div class="row">
            <div class="col-1" style="padding: 0px 0px 0px 24px;">
                <a class="btn btn-danger btn-sm" href="/VEMSHome/VendorHome/Index" onclick=""><i class="fa fa-times"></i> Cancel</a>
            </div>
            <div class="col-10">
                <a class="btn btn-info btn-sm" href="/VEMSHome/VendorHome/CodeOfConduct" onclick=""><i class="fa fa-check"></i> I have the documents, continue for registration</a>
            </div>
        </div>
    </div>
</div>