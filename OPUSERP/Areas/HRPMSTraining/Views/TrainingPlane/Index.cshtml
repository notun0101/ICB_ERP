@model TrainingPlaneViewModel
@{
    ViewData["Title"] = "Training Plane";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Style{
}

<div class="card" style="width: 100%;">
    <div class="card-body">
        <h5 class="card-title" style="color: black">@Model.fLang.title</h5>
        <hr>
        <div class="container">
            <form asp-area="HRPMSTraining" asp-controller="TrainingName" asp-action="Index" method="post" data-parsley-validate="parsley">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group row">
                    <label for="planeName" class="col-sm-2 col-form-label">@Model.fLang.planeName</label>
                    <div class="col-sm-10">
                        <input type="text" data-parsley-required="true" data-parsley-trigger="keyup" class="form-control" name="planeName" id="planeName">
                        <input type="hidden" name="trainingPlaneId" id="trainingPlaneId" value="0" />
                    </div>
                </div>

                <div class="form-group row">
                    <label for="planeStartDate" class="col-sm-2 col-form-label">@Model.fLang.planeStartDate</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" name="planeStartDate" id="planeStartDate">
                    </div>

                    <label for="type" class="col-sm-2 col-form-label">@Model.fLang.planeEndDate</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" name="planeEndDate" id="planeEndDate">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="trainingName" class="col-sm-2 col-form-label">@Model.fLang.trainingName</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="trainingName" id="trainingName">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="durationValue" class="col-sm-2 col-form-label">@Model.fLang.duration</label>
                    <div class="col-sm-3">
                        <input type="text" class="form-control" name="durationValue" id="durationValue">
                    </div>
                    <div class="col-sm-3">
                        <select class="form-control" name="durationUnit" id="durationUnit">
                            <option value="Day">Day</option>
                            <option value="Month">Month</option>
                            <option value="Year">Year</option>
                        </select>
                    </div>

                    <label for="participant" class="col-sm-2 col-form-label">@Model.fLang.participant</label>
                    <div class="col-sm-2">
                        <input type="text" class="form-control" name="participant" id="participant">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="trainingType" class="col-sm-2 col-form-label">@Model.fLang.trainingType</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" name="trainingType" id="trainingType">
                    </div>

                    <label for="noOfTraining" class="col-sm-2 col-form-label">@Model.fLang.noOfTraining</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" name="noOfTraining" id="noOfTraining">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="expectedStartDate" class="col-sm-2 col-form-label">@Model.fLang.expectedStartDate</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" name="expectedStartDate" id="expectedStartDate">
                    </div>

                    <label for="expectedEndDate" class="col-sm-2 col-form-label">@Model.fLang.expectedEndDate</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" name="expectedEndDate" id="expectedEndDate">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="organization" class="col-sm-2 col-form-label">@Model.fLang.organization</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="organization" id="organization">
                    </div>
                </div>

                <hr>
                <button type="submit" value="Submit" class="btn btn-success btn-lg" style="float:right; margin-top:5px;"><i class="fas fa-save"></i></button>
            </form>
        </div>
    </div>
</div>

<br />
<hr />
<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">@Model.fLang.title</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="trainingPlaneTable">
                    <thead>
                        <tr>
                            <th>@Model.fLang.trainingName</th>
                            <th>@Model.fLang.trainingType</th>
                            <th>@Model.fLang.expectedStartDate</th>
                            <th>@Model.fLang.expectedEndDate</th>
                            <th>@Model.fLang.organization</th>
                            <th>@Model.fLang.action</th>
                    </thead>
                    <tbody>
                        @*@foreach (var data in Model.awards)
                            {
                                <tr>
                                    <td>@data.name</td>
                                    <td>@data.isMandatory</td>
                                    <td>@data.type</td>
                                    <td>@data.objective</td>
                                    <td>
                                        <a class="btn btn-success" onclick="Edit(@data.Id, '@data.awardName', '@data.awardNameBn', '@data.awardShortName')" href="#"><i class="fa fa-edit"></i></a>
                                        <a class="btn btn-danger" href="#"><i class="fa fa-trash-alt"></i></a>
                                    </td>
                                </tr>
                            }*@

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            //$("#award").addClass("active");
            $('#trainingPlaneTable').DataTable();
        });

        function Edit(Id, awardName, awardNameBn, awardShortName) {
            $("#awardId").val(Id);
            $("#awardName").val(awardName);
            $("#awardNameBn").val(awardNameBn);
            $("#awardShortName").val(awardShortName);
        }
    </script>
}