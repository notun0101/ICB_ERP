@model ForumViewModel
@{
    ViewData["Title"] = "Topic";
}

@section Style{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <style>
        .redStar {
            color: red;
        }
    </style>
}

<div class="card" style="width: 100%;">
    <div class="card-body">
        <div class="row">
            <div class="col-8">
                <h5 class="card-title" style="color: black">Topic Details</h5>
            </div>
        </div>
        <hr>
        <div class="container">
            <form asp-area="Forum" asp-controller="Topic" asp-action="Create" method="post" enctype="multipart/form-data" data-parsley-validate="parsley">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group row">
                    <label for="title" class="col-sm-3 col-form-label">Title <span style="color:red;">*</span></label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="topic" value="" name="topic" data-parsley-required="true">
                        <input type="hidden" id="Id" name="Id" value="0" />
                    </div>
                </div>

                <div class="form-group row">
                    <label for="description" class="col-sm-3 col-form-label">Description <span style="color:red;">*</span></label>
                    <div class="col-sm-9">
                        <textarea type="text" rows="5" class="form-control" id="details" name="details" data-parsley-required="true" data-parsley-required-message="Please Comment before hitting Send Button"></textarea>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="date" class="col-sm-3 col-form-label">Date <span style="color:red;">*</span></label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="date" value="" name="date" data-parsley-required="true">
                    </div>
                </div>

                <hr>
                <button type="submit" value="Submit" class="btn btn-success btn-lg" style="float:right; margin-top:5px;"><i class="fas fa-save"></i></button>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        $(document).ready(function () {            
            $('#date').flatpickr({ dateFormat: "m/d/Y", maxDate: "@DateTime.Now.ToString("MM/dd/yyyy")" });

        });
    </script>
}


