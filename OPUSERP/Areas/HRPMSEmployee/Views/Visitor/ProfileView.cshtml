@model PIMSVisitorViewModel
@{
    ViewData["Title"] = "Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Style{

}

<div class="card" style="width: 100%;">
    <div class="card-body">
        <div class="container-fluid">
            <div class="row">
                <div class="col-3">
                    @*<img src="~/images/Bangladesh-Govt-Logo.jpg" style="height:85px" />*@
                </div>
                <div class="col-6 text-center">
                    <h3 class="card-title" style="color: black;margin-top: 25px;">Personal Data System</h3>
                    <h6 class="identity-box-center">(@Model.pIMSVisitor.name)</h6>
                </div>
                @*<div class="col-3">
                    <a class="btn btn-info" data-toggle='tooltip' title='Print' target='_blank' href='/HRPMSEmployee/InfoView/pdspdf/@Model.pIMSVisitor.Id' style="float:right;margin-top: 25px;"><i class="fa fa-print"></i></a>
                </div>*@
            </div>
        </div>
        <hr>
        <div class="container">

            <div class="row clearfix">
                <div class="col-12">
                    <h6 class="m-0 font-weight-bold text-primary" id="personal">Visitor's Basic Information</h6>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Visitor's ID</th>
                                <td>@Model.pIMSVisitor.Id</td>
                                <td rowspan="3" style="height: 140px;width: 140px;">
                                    <img id="user_img_current" style="width:110px;height:110px" src="~/@Model.pIMSVisitor.imageUrl" alt="" class="img-thumbnail">
                                </td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>@Model.pIMSVisitor.name</td>
                            </tr>
                            <tr>
                                <th>Purpose</th>
                                <td colspan="2">@Model.pIMSVisitor.subject</td>
                            </tr>
                            <tr>
                                <th>Gender</th>
                                <td colspan="2">@Model.pIMSVisitor.gander</td>
                            </tr>
                            <tr>
                                <th>Date of Birth</th>
                                <td colspan="2">@Model.pIMSVisitor.dateOfBirth?.ToString("dd-MMM-yyyy")</td>
                            </tr>
                            <tr>
                                <th>Phone</th>
                                <td colspan="2">@Model.pIMSVisitor.phone</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td colspan="2">@Model.pIMSVisitor.email</td>
                            </tr>
                            <tr>
                                <th>Passport</th>
                                <td colspan="2">@Model.pIMSVisitor.passportNumber</td>
                            </tr>
                            <tr>
                                <th>Nationality</th>
                                <td colspan="2">@Model.pIMSVisitor.nationality</td>
                            </tr>
                           
                           
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
