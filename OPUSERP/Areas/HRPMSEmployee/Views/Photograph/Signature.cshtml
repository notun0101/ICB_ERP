@section ScriptsEmp{
    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var filerdr = new FileReader();
                filerdr.onload = function (e) {
                    console.log(e);
                    $('#user_img').attr('src', e.target.result);
                }
                filerdr.readAsDataURL(input.files[0]);
            }
        }

         function readURL1(input) {
            if (input.files && input.files[0]) {
                var filerdr = new FileReader();
                filerdr.onload = function (e) {
                    console.log(e);
                    $('#user_img1').attr('src', e.target.result);
                }
                filerdr.readAsDataURL(input.files[0]);
            }
        }

       

        $(document).ready(function () {

            var _URL = window.URL || window.webkitURL;

            $("#imagePath").change(function (e) {

                var fileInput =
                    document.getElementById('imagePath');

                var file, img;
                if ((file = this.files[0])) {
                    img = new Image();
                    var objectUrl = _URL.createObjectURL(file);
                    img.onload = function () {
                        if (this.width == 300 && this.height == 80) {
                            readURL(fileInput);
                            $('#error1').hide();
                        } else {
                            $('#error1').show();
                            fileInput.value = '';
                            $('#user_img').attr('src', '');
                            return false;
                        }
                    };
                    img.src = objectUrl;
                }

            });


            $("#imagePath1").change(function (e) {
                var fileInput =
                    document.getElementById('imagePath1');
              
                var file, img;
                if ((file = this.files[0])) {
                    img = new Image();
                    var objectUrl = _URL.createObjectURL(file);
                    img.onload = function () {
                        if (this.width == 300 && this.height == 80) {
                            readURL1(fileInput);
                            $('#error2').hide();
                        } else {
                            $('#error2').show();
                            fileInput.value = '';
                            $('#user_img1').attr('src', '');
                            return false;
                        }
                    };
                    img.src = objectUrl;
                }

            });


























            $('#user_img_current').on('change', function () {

                let img = new Image()
                img.src = window.URL.createObjectURL(event.target.files[0])
                img.onload = () => {
                    if (img.width === 300 && img.height === 80) {
                        alert(`Nice, image is the right size. It can be uploaded`)
                        // upload logic here
                    } else {
                        alert(`Sorry, this image doesn't look like the size we wanted. It's 
                   ${img.width} x ${img.height} but we require 300 x 80 size image.`);
                    }
                }
            });





            $("#submit").click(function () {
                swal({
                    title: 'Are you sure?', text: 'Do you want to submit this record!', type: 'warning', showCancelButton: true, confirmButtonColor: '#3085d6', cancelButtonColor: '#d33', confirmButtonText: 'Yes, submit it!'
                }).then(function () {
                    $("#submitbtn").click();
                });
            });
            $("#btngle").click(function () {
                $("#myDIV").slideToggle("slow");
            });
            $("#photo").addClass("active");
            $("#imagePath").change(function () {
                readURL(this);
            });

            $("#imagePath1").change(function () {
                readURL1(this);
            });
        });
    </script>
}

