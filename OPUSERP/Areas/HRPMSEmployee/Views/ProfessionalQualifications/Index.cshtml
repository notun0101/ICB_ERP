                <table class="table table-striped table-bordered" id="professionalQualificationsTable">
                    <thead>
                        <tr>
                            <th>Qualification</th>
                            <th>Institute Name</th>
                            <th>Passing Year</th>
                            <th>Subject</th>
                            <th>Result</th>
                            <th>Mark/Grade</th>
                            <th>Action</th>
