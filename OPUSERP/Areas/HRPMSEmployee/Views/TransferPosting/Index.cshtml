@model TransferPostingViewModel
@{
    ViewData["Title"] = "Transfer";
    Layout = "~/Areas/HRPMSEmployee/Views/Shared/_EmployeeForm.cshtml";
}

@section StyleEmp{
}

<div class="card" style="width: 100%;">
    <div class="card-body">
        <div class="row">
            <div class="col-8">
                <h5 class="card-title" style="color: black">Transfer And Posting</h5>
            </div>
            <div class="col-4">
                @*<a href='/HRPMSEmployee/Photograph/EditGrid/@Model.employeeId' style="text-decoration:none;"><h6 class="identity-box">@Model.employeeNameCode</h6></a>*@
            </div>
        </div>
        <hr>
        <div class="container">
            <form asp-area="HRPMSEmployee" asp-controller="TransferPosting" asp-action="Index" method="post">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group row">
                    <label for="workStation" class="col-sm-4 col-form-label">@Model.fLang.workStation</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="workStation" value="" name="workStation">
                    </div>
                </div>


                <div class="form-group row">
                    <label for="fromDate" class="col-sm-4 col-form-label">@Model.fLang.trFromDate</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="trFromDate" value="" name="fromDate">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="toDate" class="col-sm-4 col-form-label">@Model.fLang.trToDate</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="trToDate" value="" name="toDate">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="duration" class="col-sm-4 col-form-label">@Model.fLang.duration</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="duration" value="" name="duration">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="grade" class="col-sm-4 col-form-label">@Model.fLang.grade</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="grade" value="" name="grade">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="designation" class="col-sm-4 col-form-label">@Model.fLang.designation</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="designation" value="" name="designation">
                    </div>
                </div>
                <hr>
                <button type="submit" value="Submit" class="btn btn-success btn-lg" style="float:right; margin-top:5px;"><i class="fas fa-save"></i></button>

            </form>
        </div>
    </div>
</div>

<hr />
<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold">Transfer and Posting Information</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="transferTable">
                    <thead>
                        <tr>
                            <th>@Model.fLang.workStation</th>
                            <th>@Model.fLang.duration</th>
                            <th>@Model.fLang.designation</th>
                            <th>@Model.fLang.grade</th>
                            <th>@Model.fLang.action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Chittagong</td>
                            <td>2</td>
                            <td>SPO</td>
                            <td>Grade-09</td>
                            <td>
                                <a class="btn btn-success" href="#"><i class="fa fa-edit"></i></a>
                                @*<a class="btn btn-danger" href="#"><i class="fa fa-trash-alt"></i></a>*@
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section ScriptsEmp{
    <script>
        $(document).ready(function () {
            $("#transfar").addClass("active");
            $('#trFromDate').datepicker({ uiLibrary: 'bootstrap4' });
            $('#trToDate').datepicker({ uiLibrary: 'bootstrap4' });
            $('#transferTable').DataTable();
        });
    </script>
}

