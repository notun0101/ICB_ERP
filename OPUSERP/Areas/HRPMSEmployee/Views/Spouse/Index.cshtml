<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold">@Model.fLang.title</h6>
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered" id="spouseTable">
                    <thead>
                        <tr>
                            <th>@Model.fLang.spouseName</th>
                            <th>@Model.fLang.dateOfBirth</th>
                            <th>@Model.fLang.gender</th>
                            <th>Occupation</th>
                            <th>Designation</th>
                            <th>Picture</th>
                            <th>@Model.fLang.bloodGroup</th>
                            <th>Marriage Certificate</th>
                            <th>Date Of Marriage</th>
                            <th>@Model.fLang.action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var data in Model.spouses)
                        {
                        <tr>
                            <td>@data.spouseName</td>
                            <td>@data.dateOfBirth?.ToString("dd-MMM-yyyy")</td>
                            <td>@data.gender</td>
                            <td>@data.occupation?.occupationName</td>
                            <td>@data.designation</td>
                            @if (data.imageUrl == null)
                            {
                                <td></td>

                            }
                            else
                            {

                                <td> <a href="~/EmpImages/@data.imageUrl" target="_blank"><i class="fas fa-link"><u>Click Here</u></i></a></td>

                            }

                            <td>@data.bloodGroup</td>
                            @if (data.marriageCertificate == null)
                            {
                                <td></td>

                            }
                            else
                            {

                                <td> <a href="~/EmpImages/@data.marriageCertificate" target="_blank"><i class="fas fa-link"><u>Click Here</u></i></a></td>

                            }
                            @*<td>
                                <a href="~/EmpImages/@data.marriageCertificate" target="_blank"><i class="fas fa-link"><u>Click Here</u></i></a>
                            </td>*@
                            <td>@data.dateOfMarriage?.ToString("dd-MMM-yyyy")</td>
                            <td>
                                <a class="btn btn-success" onclick="Edit(@data.Id,'@data.employeeId','@data.spouseName','@data.nationality','@data.spouseNameBN','@data.bloodGroup','@data.contact','@data.relationship','@data.gender','@data.email','@data.dateOfBirth?.ToString("dd-MMM-yyyy")','@data.occupationId','@data.nid','@data.organization','@data.maritalStatus','@data.designation','@data.imageUrl','@data.bin','@data.highestEducation','@data.dateOfMarriage?.ToString("dd-MMM-yyyy")','@data.marriageCertificate')" href="#"><i class="fa fa-edit"></i></a>
                                <a class="btn btn-danger" onclick="Remove(@data.Id,@data.employeeId)" href="#"><i class="fa fa-trash-alt"></i></a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

