@section ScriptsEmp{
    <script>
        var lstPOP = [];
        function convertEnToBnNum(num) {
            var en = "0123456789";
            var bn = "০১২৩৪৫৬৭৮৯";
            var result = "";
            for (var i = 0; i < num.length; i++) {
                var index = en.indexOf(num[i]);
                var bnNum = bn[index];
                result += bnNum;
            }
            return result;
        }
        $(document).ready(function () {
            var firstYear = 1400;
            var lastYear = 1700;
            for (var i = firstYear; i <= lastYear; i++) {
                $('#years').append('<option value="' + convertEnToBnNum(i.toString()) + '">' + convertEnToBnNum(i.toString()) + '</option>')
            }
            var orgFullTitle = "PRL Information List";
            $("#submit").click(function () {
                swal({
                    title: 'Are you sure?', text: 'Do you want to submit this record!', type: 'warning', showCancelButton: true, confirmButtonColor: '#3085d6', cancelButtonColor: '#d33', confirmButtonText: 'Yes, submit it!'
                }).then(function () {
                    $("#submitbtn").click();
                });
            });
            $('#prlDate').datepicker({ dateFormat: "dd-M-yy", showAnim: "scale", changeMonth: true, changeYear: true, yearRange: "1940:2070" });
            $('#PRLreportDateEn').datepicker({ dateFormat: "dd-M-yy", showAnim: "scale", changeMonth: true, changeYear: true, yearRange: "1940:2070" });

            Common.Ajax('GET', '/global/api/GetActiveAllEmployeeInfo', [], 'json', ajaxGetEmployees);
           
            //$('#prlTable').DataTable();
            $('#prlTable').DataTable({
                stateSave: false,
                dom: "<'row'<'col-sm-12 col-md-2'l><'col-sm-12 col-md-3'B><'col-sm-12 col-md-7'f>>" +
                    "<'row'<'col-sm-12't>>" +
                    "<'row'<'col-sm-12 col-md-6'i><'col-sm-12 col-md-6'pr>>",
                buttons: [
                    {
                        extend: 'excelHtml5',
                        text: '<i class="fa fa-file-excel"></i> Excel',
                        titleAttr: 'Excel',
                        exportOptions: {
                            columns: [0, 1]
                        },
                        title: orgFullTitle,
                        messageTop: 'List Of Foreign Training',
                        class: 'btn btn-info'
                    },
                    {
                        extend: 'csvHtml5',
                        text: '<i class="fa fa-file-excel"></i> CSV',
                        titleAttr: 'CSV',
                        exportOptions: {
                            columns: [0, 1]
                        },
                        title: orgFullTitle,
                        messageTop: 'List Of Employee Training'
                    },
                    {
                        extend: 'print',
                        text: '<i class="fa fa-print"></i> Print',
                        titleAttr: 'Print',
                        title: orgFullTitle,
                        messageTop: 'List Of Foreign Training',
                        exportOptions: {
                            columns: [0, 1]
                        },
                        customize: function (doc) {
                            $(doc.document.body).find('h1').css('font-size', '20pt');
                            $(doc.document.body).find('h1').css('font-family', "'Times New Roman', Times, serif");
                            $(doc.document.body).find('h1').css('text-align', 'center');
                        }
                    }
                ]
            });

        });
        function ajaxGetEmployees(response) {
			$.each(response, function (id, option) {
				var obj = new Object();
				obj.key = option.Id;
				obj.value = option.nameEnglish + " - " + option.employeeCode;
                obj.date = formatDate(new Date());
               // var date = formatDate(new Date());
				lstPOP[lstPOP.length] = obj;
			});
		}
        $('#EmployeeName').autocomplete({
				source: lstPOP,
				select: function (event, ui) {
					$("#EmployeeId").val(ui.item.key);
					//$("#prlDate").val(ui.item.date);
				}
			});
        function formatDate(date) {
            date = new Date(date);
            var year = date.getFullYear(),
                month = date.getMonth() + 1, // months are zero indexed
                day = date.getDate();
            return day + "/" + + month + "/" + year;
        }
        function Edit(Id, name, date, PRLreportDateBn, PRLreportDateEn) {
            var splitBnDate = PRLreportDateBn.split(" ");
            var dateBn = splitBnDate[0];
            var monthBn = splitBnDate[1];
            var yearBn = splitBnDate[2];
            $("#EmployeeId").val(Id);
            $("#EmployeeName").val(name);
            $("#prlDate").val(date);
            $("#PRLreportDateBn").val(dateBn);
            $("#PRLreportMonthBn").val(monthBn);
            $("#years").val(yearBn);
            $("#PRLreportDateEn").val(PRLreportDateEn);
        }
