    <div class="card-header">
        <h2 style="font-size:18px;color:black;">Surity Bond</h2>
    </div>
    <div class="card-body">
        <div class="container">
            <form asp-area="HRPMSEmployee" asp-controller="Info" asp-action="SurityBond" id="FormId" method="post" data-parsley-validate="parsley" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <a class="btn btn-success" style="float:right; margin-top:5px;" href="/HRPMSEmployee/Info/SurityBondPDF">Download</a>

