
@{
    ViewData["Title"] = "SurityBond";
}


<style>
    .redClolor {
        color: red;
    }

    .btnWith {
        width: 95%;
    }

    h5 {
        color: darkblue;
    }

    .close:hover,
    .close:focus {
        color: #bbb;
        text-decoration: none;
        cursor: pointer;
    }

    #user_img1:hover {
        border-radius: 5px;
        cursor: zoom-in;
        transition: 0.3s !important;
        opacity: 0.5;
        box-shadow: 0 0 2px 1px rgba(0, 140, 186, 0.5);
    }
</style>

