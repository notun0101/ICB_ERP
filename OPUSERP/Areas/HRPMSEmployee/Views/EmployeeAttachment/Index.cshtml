                            @*<td>
                                <a href="~/EmpImages/@data.fileUrl" target="_blank"><i class="fas fa-link"><u>Click Here</u></i></a>
                            </td>*@
                            @if (data.fileUrl == null)
                            {
                                <td></td>

                            }
                            else
                            {

                                <td> <a href="~/EmpImages/@data.fileUrl" target="_blank"><i class="fas fa-link"><u>Click Here</u></i></a></td>

                            }


                            <td>
                                @*<a class="btn btn-success" href="~/@data.fileUrl" target="_blank"><i class="fa fa-eye"></i></a>*@
