                        @foreach (var data in Model.licenses)
                        {
                            <tr>
                                <td>@data.licenseNumber</td>
                                <td>@data.placeOfIssue</td>
                                <td>@data.category</td>
                                <td>@data.dateOfIssue?.ToString("dd-MMM-yyyy")</td>
                                <td>@data.dateOfExpair?.ToString("dd-MMM-yyyy")</td>
