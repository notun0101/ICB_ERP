                        <tr>
                            <th>@Model.fLang.licenseNumber</th>
                            <th>@Model.fLang.place</th>
                            <th>@Model.fLang.licenseCategory</th>
                            <th>@Model.fLang.dateOfIssue</th>
                            <th>@Model.fLang.dateOfExpair</th>
                            <th>@Model.fLang.action</th>
                    </thead>

