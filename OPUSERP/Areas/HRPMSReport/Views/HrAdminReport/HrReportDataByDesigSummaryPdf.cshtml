        <div class="container-fluid">
            <div class="fa-pull-right">
                <p style="font-size:smaller;">Print at: @DateTime.Now.ToString("dd-MMM-yyyy HH:mm:ss")</p>
            </div>
            <div class="row" style="padding-top:0px;">
                <div class="col-2">
                    <img src="/EmpImages/@Model.companies.FirstOrDefault().filePath" alt="OPUS ERP" style="height:80px;" />
                </div>
                <div class="col-8">
                    <div style="color:black;text-align:center;">
                        <h3 style="font-size:19px;">BANGLADESH DEVELOPMENT BANK LIMITED</h3>
                        <h3 style="font-size:19px;">HEAD OFFICE: DHAKA</h3>
                        <h3 style="font-size:19px;"><u>HUMAN RESOURCE MANAGEMENT DEPARTMENT</u></h3>
                        <h3 style="font-size:19px;"><u>Designation Wise Summary HR Information</u></h3>
                       
                        <br />
                    </div>
                </div>
                <div class="col-2"></div>
            </div>
        </div>

        <div class="container-fluid" style="color:black;">

            <div class="row" style="padding: 0px 15px 0px 15px;">

                <table class="table table-bordered">
                    <thead>
                        <tr style="background-color:lightgray;">
                            <th style="text-align:center;width:10%;">Sl#</th>
                            <th style="text-align:center;width:60%;">Designation</th>
                            <th style="text-align:center;width:15%;">Number</th>
                            <th style="text-align:center;width:15%;">Ratio (%)</th>
                        </tr>
                    </thead>
					<tbody>
						@foreach (var data in Model.hrSummaryReportViewModels.OrderBy(x => Convert.ToInt32(x.deptCode)))
						{
							<tr>
								<td style="text-align:center;">@data.rowSlNo</td>
								<td>@data.deptName</td>
								<td style="text-align:center;">@data.totalNumber</td>
								<td style="text-align:center;">@data.ratio</td>
							</tr>
						}
					</tbody>
                </table>
            </div>

        </div>
    </div>
</div>

