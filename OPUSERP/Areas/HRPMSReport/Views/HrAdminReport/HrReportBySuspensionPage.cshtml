                    </div>
                </div>
                @*<div class="col-2"></div>*@
            </div>
        </div>

        <div class="container-fluid" style="color:black;">
            <table class="table table-bordered">
                <thead>
                    <tr style="background-color:lightgray;">

                        <th style="text-align:center;width:10%;">Employee Id</th>
                        <th style="text-align:center;width:10%;">Employee Name</th>
                        <th style="text-align:center;width:10%;">Designation</th>
                        <th style="text-align:center;width:8%;">Qualification</th>
                        <th style="text-align:center;width:8%;">Date of Birth dd/mm/yy</th>
                        <th style="text-align:center;width:10%;">Date of Joining dd/mm/yy</th>
                        <th style="text-align:center;width:10%;">Last Promotion Date dd/mm/yy</th>
                        <th style="text-align:center;width:10%;">Last Transfer Date dd/mm/yy</th>
                        <th style="text-align:center;width:10%;">Retirement Date dd/mm/yy</th>
                        <th style="text-align:center;width:10%;">Present Posting</th>
                        <th style="text-align:center;width:10%;">Home District</th>
                        <th style="text-align:center;width:10%;">Effective Form</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var data in Model.employeeInfos1)
                    {
                    <tr>

                        <td>@data.employeeInfo?.employeeCode</td>
                        <td>@data.employeeInfo?.nameEnglish</td>
                        <td>@data.employeeInfo?.lastDesignation?.shortName</td>
                        <td>@data.employeeInfo?.qualification</td>
                        <td>@data.employeeInfo?.dateOfBirth?.ToString("dd/MM/yyyy")</td>
                        <td>@data.employeeInfo?.joiningDateGovtService?.ToString("dd/MM/yyyy")</td>
                        <td>@data.employeeInfo?.lastPromotionDate?.ToString("dd/MM/yyyy")</td>
                        <td>@data.employeeInfo?.lastTransferDate?.ToString("dd/MM/yyyy")</td>
                        <td>@data.employeeInfo?.DateOfRetirement?.ToString("dd/MM/yyyy")</td>
                        <td>@data.employeeInfo?.presentPosting</td>
                        <td>@data.employeeInfo?.homeDistrict</td>
                        <td>@data.suspension?.effectiveForm?.ToString("dd-MMM-yyyy")</td>
                    </tr>
                    }

                </tbody>
            </table>



            <br />


        </div>
    </div>
</div>

