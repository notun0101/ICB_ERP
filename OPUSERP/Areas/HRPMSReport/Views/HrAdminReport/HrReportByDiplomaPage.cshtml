        <div class="container-fluid">
            <div class="fa-pull-right">
                <p style="font-size:smaller;">Print at: @DateTime.Now.ToString("dd-MMM-yyyy HH:mm:ss")</p>
            </div>
            <div class="row" style="padding-top:0px;">
                <div class="col-2">
                    <img src="/EmpImages/@Model.companies.FirstOrDefault().filePath" alt="OPUS ERP" style="height:80px;" />
                </div>
                <div class="col-8">
                    <div style="color:black;text-align:center;">
                        <h5 style="font-size:20px;">BANGLADESH DEVELOPMENT BANK LIMITED</h5>
                        <h5 style="font-size:20px;">HEAD OFFICE: DHAKA</h5>
                        <h5 style="font-size:20px;"><u>HUMAN RESOURCE MANAGEMENT DEPARTMENT</u></h5>
                        <h6 style="font-size:20px"><u>Diploma Wise Summary HR Information</u></h6>

                        <br />
                    </div>
                </div>
                <div class="col-2"></div>
            </div>
        </div>

        <div class="container-fluid" style="color:black;">
            <div class="row" style="padding: 0px 15px 0px 15px;">
                <table class="table table-bordered">
                    <thead>
                        <tr style="background-color:lightgray;">
                            <th style="text-align:center;width:2%;">Sl. No</th>
                            <th style="text-align:center; width: 5%;">Emp Id</th>
                            <th style="text-align:center;width:28%;">Name</th>
                            <th style="text-align:center;width: 12%;">Designation</th>
                            <th style="text-align:center;width: 12%;">Diploma</th>
                            <th style="text-align:center;width:7%;">Passing Year</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var i = 0;
                        }
                        @foreach (var item in Model.employeeDiplomas)
                        {
                            i++;
                            <tr>
                                <td style="text-align:center;">@i</td>
                                <td>@item.employeeCode</td>
                                <td>@item.nameEnglish</td>
                                <td>@item.designationName</td>
                                <td>
                                    @if (item.diplomaPart1 != null && item.diplomaPart2 != null)
                                    {
                                        <span>@(item.diplomaPart1 + ", " + item.diplomaPart2)</span>
                                    }
                                    else
                                    {
                                        @if (item.diplomaPart1 != null)
                                        {
                                            <span>@(item.diplomaPart1)</span>
                                        }
                                        @if (item.diplomaPart2 != null)
                                        {
                                            <span>@(item.diplomaPart2)</span>
                                        }
                                    }
                                </td>
                                <td>
                                    @if (item.diplomaPart1 != null && item.diplomaPart2 != null)
                                    {
                                        <span>@(item.passingYear1 + ", " + item.passingYear2)</span>
                                    }
                                    else
                                    {
                                        @if (item.passingYear1 != null)
                                        {
                                            <span>@(item.passingYear1)</span>
                                        }
                                        @if (item.diplomaPart2 != null)
                                        {
                                            <span>@(item.passingYear2)</span>
                                        }
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



