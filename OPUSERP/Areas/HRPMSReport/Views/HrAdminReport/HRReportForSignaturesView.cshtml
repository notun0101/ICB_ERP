@model AllHrReportViewModel
@{
    ViewData["Title"] = "HR Report";
    Layout = "~/Views/Shared/_PrintView.cshtml";
}

@section Style{
    <style>

        .print-card-body {
            width: 100%;
            padding-bottom: 10px;
        }

        .vartical-table th {
            width: 25%;
        }

        .vartical-table td {
            width: 25%;
        }

        .table td, .table th {
            padding: .3rem;
            font-size: 13px;
        }

        /*table {
            page-break-inside: auto;
        }*/

        tr {
            page-break-inside: avoid;
            page-break-after: auto;
        }

        thead {
            display: table-header-group;
        }

        tfoot {
            display: table-footer-group;
        }

        h6 {
            font-size: 14px;
            background-color: gray;
            color: white !important;
            padding: 3px;
        }
    </style>
}

<div class="print-card" style="width: 100%;">
    <div class="print-card-body">
        <div class="container-fluid">
            <div class="fa-pull-right">
                <p style="font-size:smaller;">Print at: @DateTime.Now.ToString("dd-MMM-yyyy HH:mm:ss")</p>
            </div>
            <div class="row" style="padding-top:0px;">
                <div class="col-2">
                    <img src="/EmpImages/@Model.companies.FirstOrDefault().filePath" alt="OPUS ERP" style="height:80px;" />
                </div>
                <div class="col-8">
                    <div style="color:black;text-align:center;">
                        <h3 style="font-size:20px;">BANGLADESH DEVELOPMENT BANK LIMITED</h3>
                        <h3 style="font-size:20px;">HEAD OFFICE: DHAKA</h3>
                        <h3 style="font-size:20px;"><u>HUMAN RESOURCE MANAGEMENT DEPARTMENT</u></h3>
                        <h3 style="font-size:20px;"><u>Signature Wise HR Information</u></h3>
                        <br />
                    </div>
                </div>
                <div class="col-2"></div>
            </div>
        </div>

        <div class="container-fluid" style="color:black;">
            <div class="row" style="">

                <table class="table table-bordered">
                    <thead>
                        <tr style="background-color:lightgray;">
                            <th style="text-align:center;width:5%;">Sl#</th>
                            <th style="text-align:center;width:5%;">Emp Id</th>
                            <th style="text-align:center;width:40%;">NAME</th>
                            <th style="text-align:center;width:10%;">Designation</th>
                            <th style="text-align:center;width:10%;">English Sign</th>
                            <th style="text-align:center;width:10%;">Bangla Sign</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 1;
                            @foreach (var data in Model.signatureReports)
                            {
                                <tr>
                                    <td style="text-align:center;">@i</td>
                                    <td>@data.employeeCode</td>
                                    <td>@data.nameEnglish</td>
                                    <td>@data.designationName</td>
                                    <td>
                                        <img src="~/EmpImages/@data.englishSign" style="width: 150px; height: 40px;" />
                                    </td>
                                    <td>
                                        <img src="~/EmpImages/@data.banglaSign" style="width: 150px; height: 40px;" />
                                    </td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>

            </div>
            <br />



        </div>
    </div>
</div>

@section Scripts{
}

