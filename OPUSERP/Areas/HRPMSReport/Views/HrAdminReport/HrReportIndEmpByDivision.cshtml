                        </div>
                    </div>
                    <div class="col-2">

                    </div>
                </div>
            </div>*@
        <div class="container-fluid">
            <div class="fa-pull-right">
                <p style="font-size:smaller;">Print at: @DateTime.Now.ToString("dd-MMM-yyyy HH:mm:ss")</p>
            </div>
            <div class="row" style="padding-top:0px;">
                <div class="col-2">
                    <img src="/EmpImages/@Model.companies.FirstOrDefault().filePath" alt="OPUS ERP" style="height:80px;" />
                </div>
                <div class="col-10">
                    <div style="color:black;text-align:center;">
                        <h3 style="font-size:20px;">BANGLADESH DEVELOPMENT BANK LIMITED</h3>
                        <h3 style="font-size:20px;">HEAD OFFICE: DHAKA</h3>
                        <h3 style="font-size:20px;"><u>HUMAN RESOURCE MANAGEMENT DEPARTMENT</u></h3>
                        <h3 style="font-size:20px;"><u>Division Wise Summary HR Information</u></h3>

                        <br />
                    </div>
                </div>
                @*<div class="col-2"></div>*@
            </div>
        </div>
        <div class="container-fluid" style="color:black;">

            <div class="row" style="padding: 0px 15px 0px 15px;">

                <table class="table table-bordered">
                    <thead>
                        <tr style="background-color:lightgray;">
                            <th style="text-align:center;width:10%;">SL#</th>
                            <th style="text-align:center;width:15%;">Employee Id</th>
                            <th style="text-align:center;width:30%;">Employee Name</th>
                            <th style="text-align:center;width:30%;">Branch Name</th>
                            <th style="text-align:center;width:30%;">Department Name</th>
                            <th style="text-align:center;width:20%;">Division Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 1;
                            @foreach (var data in @Model.employeeInfos)
                            {
                                <tr>
                                    @*<td>@i</td>*@
                                    <td style="text-align:center;">@i</td>
                                    <td style="text-align:center;">@data.employeeCode</td>
                                    <td style="text-align:center;">@data.nameEnglish</td>
                                    <td style="text-align:center;">@data.branch?.branchUnitName</td>
                                    <td style="text-align:center;">@data.department?.deptName</td>
                                    <td style="text-align:center;">@data.Division?.divisionName</td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

