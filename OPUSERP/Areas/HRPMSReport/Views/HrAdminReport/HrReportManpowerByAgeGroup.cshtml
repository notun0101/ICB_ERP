@model AllHrReportViewModel
@{
    ViewData["Title"] = "HR Report Manpower Age Group";
    Layout = "~/Views/Shared/_PrintView.cshtml";
}

@section Style{
    <style>

        .print-card-body {
            width: 100%;
            padding-bottom: 10px;
        }

        .vartical-table th {
            width: 25%;
        }

        .vartical-table td {
            width: 25%;
        }

        .table td, .table th {
            padding: .3rem;
            font-size: 14px;
        }

        table {
            page-break-inside: auto;
        }

        tr {
            page-break-inside: avoid;
            page-break-after: auto;
        }

        thead {
            display: table-header-group;
        }

        tfoot {
            display: table-footer-group;
        }

        h6 {
            font-size: 14px;
            background-color: gray;
            color: white !important;
            padding: 3px;
        }
    </style>
}

<div class="print-card" style="width: 100%;">
    <div class="print-card-body">
        <div class="container-fluid">
            <div class="fa-pull-right">
                <p style="font-size:smaller;">Print at: @DateTime.Now.ToString("dd-MMM-yyyy HH:mm:ss")</p>
            </div>
            <div class="row" style="padding-top:0px;">
                <div class="col-2">
                    <img src="/EmpImages/@Model.companies.FirstOrDefault().filePath" alt="OPUS ERP" style="height:80px;" />
                </div>
                <div class="col-10">
                    <div style="color:black;text-align:center;">
                        <h4 style="text-transform: uppercase;font-size:18px;">Bangladesh Development Bank Limited</h4>
                        <h4 style="text-transform: uppercase;font-size:18px;">Head office : dhaka</h4>
                        <h4 style="text-transform: uppercase;font-size:18px;"><u>Human Resource Management Department</u></h4>
                        <h5 style="font-size:18px;"><u>Manpower by Age Group [Regular and Contractual]</u></h5>
                      
                        <br />
                        <br />
                       
                    </div>
                </div>
                @*<div class="col-2"></div>*@
            </div>
        </div>

        <div class="container-fluid" style="color:black;">

            <div class="row" style="padding: 0px 15px 0px 15px; width:100%;">
                <table class="table table-bordered " style="width:60%;">
                    <thead>
                        <tr style="background-color:lightgray;">

                            <th style="text-align:center;width:50%;border-bottom:1px solid black !important;" rowspan="3">Age Group</th>

                            <th style="text-align:center;border-right:1px solid lightgray;color:lightgray !important;border-bottom:1px solid black !important;" colspan="2">manpower</th>
                            
                           
                        </tr>
                        <tr style="background-color:lightgray;">
                            <th style="text-align:center;width:50%;border-bottom:1px solid black !important;" colspan="2">@ViewBag.monthTw?.ToString("dd-MM-yyyy")</th>

                        </tr>

                        <tr style="background-color:lightgray;">
                            <th style="text-align:center;width:20%;border-bottom:1px solid black !important;">Number</th>
                            <th style="text-align:center;width:20%;border-bottom:1px solid black !important;">Mix (%)</th>

                        </tr>
                        
                    </thead>
                    <tbody>
                        @{
                            int tNumber = 0;
                            int tRatio = 0;
                        }
                       
                        @foreach (var data in @Model.hrSummaryReportViewModels12)
                        {
                            <tr>

                                <td>@data.deptName</td>


                                <td style="text-align:center;">@data.totalNumber</td>
                                <td style="text-align:center;">@data.ratio</td>
                            </tr>

                            tNumber += data.totalNumber;
                            tRatio +=Convert.ToInt16(data.ratio);
                        }
                            <tr>

                                <th style="text-align:right;">Total</th>

                                <th style="text-align:center;">@tNumber</th>
                                <th style="text-align:center;">@tRatio</th>
                             
        
                            </tr>

                    </tbody>
                </table>

                <table class="table table-bordered "  style="width:20%;">
                    <thead>
                        <tr style="background-color:lightgray;">


                            <th style="text-align:center;border-left:1px solid lightgray;border-right:1px solid lightgray;border-bottom:1px solid black !important;" colspan="2" >Manpower</th>

                        </tr>
                        <tr style="background-color:lightgray;">
                            <th style="text-align:center;width:50%; border-bottom:1px solid black !important;" colspan="2">@ViewBag.months?.ToString("dd-MM-yyyy")</th>

                        </tr>

                        <tr style="background-color:lightgray;">
                            <th style="text-align:center;width:20%;border-bottom:1px solid black !important;">Number</th>
                            <th style="text-align:center;width:20%;border-bottom:1px solid black !important;">Mix (%)</th>

                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int tNumber1 = 0;
                            int tRatio1 = 0;
                        }


                        @foreach (var data in @Model.hrSummaryReportViewModels6)
                        {
                            <tr>


                                <td style="text-align:center;">@data.totalNumber</td>
                                <td style="text-align:center;">@data.ratio</td>
                            </tr>
                            tNumber1 += data.totalNumber;
                            tRatio1 +=Convert.ToInt32(data.ratio);

                        }
                            <tr>


                                <th style="text-align:center;">@tNumber1</th>
                                <th style="text-align:center;">@tRatio1</th>
                             


                            </tr>
                    </tbody>
                </table>
                <table class="table table-bordered "  style="width:20%;">
                    <thead>
                        <tr style="background-color:lightgray;">


                            <th style="text-align:center;border-left:1px solid lightgray; color:lightgray !important;border-bottom:1px solid black !important;" colspan="2" >manpower</th>

                        </tr>
                        <tr style="background-color:lightgray;">
                            <th style="text-align:center;width:50%;border-bottom:1px solid black !important;" colspan="2">@ViewBag.month?.ToString("dd-MM-yyyy")</th>

                        </tr>

                        <tr style="background-color:lightgray;">
                            <th style="text-align:center;width:20%;border-bottom:1px solid black !important;">Number</th>
                            <th style="text-align:center;width:20%;border-bottom:1px solid black !important;">Mix (%)</th>

                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int tNumber2 = 0;
                            int tRatio2 = 0;
                        }
                        @foreach (var data in @Model.hrSummaryReportViewModels)
                        {
                            <tr>


                                <td style="text-align:center;">@data.totalNumber</td>
                                <td style="text-align:center;">@data.ratio</td>
                            </tr>
                            tNumber2 += data.totalNumber;
                            tRatio2 +=Convert.ToInt16(data.ratio);

                        }
                            <tr>


                                <th style="text-align:center;">@tNumber2</th>
                                <th style="text-align:center;">@tRatio2</th>
                              
                            </tr>
                    </tbody>
                </table>

            </div>

        </div>
    </div>
</div>

@section Scripts{
}



