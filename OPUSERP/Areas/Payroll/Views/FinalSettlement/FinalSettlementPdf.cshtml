                        <td style="border:solid 1px;">@Model.finalSettlementDataViewModel.EmpCode</td>
                    </tr>
                    <tr>
                        <td style="border:solid 1px;">Designation</td>
                        <td style="border:solid 1px;">@Model.finalSettlementDataViewModel.Designation</td>
                    </tr>
                    <tr>
                        <td style="border:solid 1px;">Department</td>
