<div class="card" style="width: 100%;">
    <div class="card-header  d-flex flex-row align-items-center justify-content-between">
        <h5 class="m-0 font-weight-bold text-primary">Interest Charge</h5>
        <a class='btn btn-info mr-4' style="" data-toggle='tooltip' title='Go Back' href='/Home/GridMenuPage?moduleId=1017&perentId=6229'><i class="fas fa-angle-double-left"> <span style="">Back</span></i></a>

    </div>
    <div class="card-body">

        <div class="container">
            <form>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group row">
                            <label for="chargeDate" class="col-sm-3 col-form-label">Charge Date</label>
                            <div class="col-sm-3">
                                <input type="text" class="form-control datepicker" id="chargeDate" readonly>
                            </div>
                        </div>
                    </div>
                    <a id="submit" type="button" class="btn btn-success" style="float:right; " href='javascript:void(0)'><i class="fas fa-file-pdf"></i> Print</a> &nbsp;
                </div>
            </form>
        </div>
    </div>

</div>
<script>

    $(document).ready(function () {
        $('.datepicker').datepicker({ dateFormat: "dd-M-yy", showAnim: "scale", changeMonth: true, changeYear: true, yearRange: "1900:2100" });
    });

    $('#submit').click(function () {
        var chargeDate = $('#chargeDate').val();
        if (chargeDate == '') {
            alert('Please enter charge date.');
            return false;
        }
        window.open("/Payroll/PayrollReport/GetIndividualLoanSummaryByChargeDateExcel?chargeDate=" + chargeDate);
    });
    
    function formatDate(date) {
        date = new Date(date);
        var year = date.getFullYear(),
            month = date.getMonth() + 1, // months are zero indexed
            day = date.getDate(),
            hour = date.getHours(),
            minute = date.getMinutes(),
            second = date.getSeconds(),
            hourFormatted = hour % 12 || 12, // hour returned in 24 hour format
            minuteFormatted = minute < 10 ? "0" + minute : minute,
            morning = hour < 12 ? "am" : "pm";

        return day + "/" + + month + "/" + year;
    }
    
</script>

