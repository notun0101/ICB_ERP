@model IncomeTaxProcessViewModel
@{
    ViewData["Title"] = "Tax Process";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Style{
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
