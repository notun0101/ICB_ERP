@model SalaryProcessViewModel
@{
    ViewData["Title"] = "Salary Contribution view";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<style>
    

    .c {
        min-height: 300px;
        background-color: #FDF2E9;
    }

        .c .card-footer {
            height: 50px;
            background-color: #E9F7EF;
            display: flex;
            justify-content: center;
            align-items: center;
        }

    .cb {
        height: 464px;
    }

    .c .cb {
        transition: .3s all;
        /*cursor: pointer;*/
    }

    .c:hover {
        background-color: #D6DBE9;
    }

   

    .center {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 100px;
        height: 100px;
        border-radius: 50%;
    }

   

    
</style>



<div class="row card" id="listView" >
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Employees Salary Contribution</h6>
                <div style="float: right;">
                    <a class='btn btn-outline-info' style=" margin-top: -10px;" data-toggle='tooltip' title='Go Back' href='/Home/GridMenuPage?moduleId=10&perentId=1252'><i class="fas fa-backward"></i></a>

                </div>
            </div>
           
            <hr />
            <div class="card-body">
                <table class="table table-striped table-bordered" id="requisitionListTable">
                    <thead>
                        <tr>
                            <th>Employee Code</th>
                            <th>Employee Name</th>
                            <th>Department</th>
                            <th>Designation</th>
                            <th>Mmonth</th>
                            <th>Year</th>
                            <th>Own Contribution</th>
                            <th>Company Contribution</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var data in Model.pFSalaryContributions)
                        {
                        <tr>
                            <td>@data.employeeCode</td>
                            <td>@data.employee?.nameEnglish</td>
                            <td>@data.employee?.department?.deptName</td>
                            <td>@data.employee?.lastDesignation?.designationName</td>
                            <td>@data.month</td>
                            <td>@data.year</td>
                            <td>@data.pfOwn</td>
                            <td>@data.pfCompany</td>


                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>






@section Scripts{
    <script src="~/Assets/paginathing.js"></script>

    <script>


        $(document).ready(function () {
            $('#requisitionListTable').DataTable();

           

           

        });

       



    </script>
}