    function formatingDate(date) {
        var monthName = "";
        date = new Date(date);
        var year = date.getFullYear(),
            month = date.getMonth() + 1, // months are zero indexed
            day = date.getDate(),
            hour = date.getHours(),
            minute = date.getMinutes(),
            second = date.getSeconds(),
            hourFormatted = hour % 12 || 12, // hour returned in 24 hour format
            minuteFormatted = minute < 10 ? "0" + minute : minute,
            morning = hour < 12 ? "am" : "HR";
        if (month == 1) {
            monthName = 'Jan';
        }
        else if (month == 2) {
            monthName = 'Feb';
        }
        else if (month == 3) {
            monthName = 'Mar';
        }
        else if (month == 4) {
            monthName = 'Apr';
        }
        else if (month == 5) {
            monthName = 'May';
        }
        else if (month == 6) {
            monthName = 'Jun';
        }
        else if (month == 7) {
            monthName = 'Jul';
        }
        else if (month == 8) {
            monthName = 'Aug';
        }
        else if (month == 9) {
            monthName = 'Sep';
        }
        else if (month == 10) {
            monthName = 'Oct';
        }
        else if (month == 11) {
            monthName = 'Nov';
        }
        else {
            monthName = 'Dec';
        };

        return day + "-" + monthName + "-" + year;
    }

