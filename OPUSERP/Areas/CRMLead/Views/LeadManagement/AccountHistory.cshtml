    @section Scripts{
        <script type="text/javascript">
            function ajaxGetCRMEmployees(response) {
                console.log();
                var GeEmployeesList = [];
                $.each(response, function (id, option) {
                    var obj = new Object();
                    obj.key = option.Id;
                    obj.value = option.nameEnglish + "(" + option.employeeCode + ")";
                    obj.designation = option.designation;
                    obj.employeeCode = option.nameEnglish;
                    obj.emailAddress = option.emailAddress;
                    GeEmployeesList[GeEmployeesList.length] = obj;
                });

                $('#bdPerson').autocomplete({
                    source: GeEmployeesList,
                    select: function (event, ui) {
                        $("#bdPerson").val(ui.item.value);
                        $("#bdPersonasp").val(ui.item.emailAddress);

                    }
                });
            }
            $(document).ready(function () {


                $('#statusTable').DataTable();
                Common.Ajax('GET', '/global/api/GetEmployeeInfoCRMAnalyst', [], 'json', ajaxGetCRMEmployees, false);
                getActivitydata();
                $("#accName1").keydown(function () {
                
                    $("#rdBdPerson").attr("checked", false);

                    
                    $("#bdPersonasp").val('');

                });
              
                $("#rdBdPerson").change(function () {

                    if ($("input[Id='rdBdPerson']:checked").val() != 3) {
                        $("#bdPerson").val('');
                        $("#bdPersonasp").val('');
                    }
                    else {
                        $("#accName1").val('');
                    }

                });



                $("#AllSearch").click(function () {

                   
                    var BD = $("#bdPersonasp").val();
                    if (BD == "") {
                        BD = "NoData"
                    }
                    if ($("input[Id='rdBdPerson']:checked").val() == 3) {

                        if (BD == "NoData") {
                            swal("Please Enter BD Person.");
                            return false;
                        }

                    }
                    var LeadId = $("#accName1").val();


                    if (LeadId == "") {
                        LeadId = "NoData"
                    }

                    //Common.Ajax('GET', '/global/api/GetAllClientListS/'  + TeamLeader + "/" + Fa + "/" + BD + "/" + LeadId , [], 'json', ajaxGetMaster);
                    GetAllClientDataS(BD, LeadId);


                });
            });
            function getActivitydata() {
                $('#xxxx').show();

                $('#statusTable').DataTable().destroy();

                $('#statusTable').DataTable({
                    ajax: {
                        url: '/CRMLead/LeadManagement/GetAllLeadsHistorySP',
                        dataSrc: ""
                    },
                    columns: [
                        { data: "SLNo" },
                        { data: "leadName" },
                        { data: "actionName" },
                        { data: "actionDetails" },
                        { data: "createdAt" },
                        { data: "createdBy" }
                    ]
                });
                $('#xxxx').hide();

            }
            function GetAllClientDataS(BD,accountName) {

                $('#xxxx').show();
                $('#statusTable').DataTable().destroy();
                $('#statusTable').DataTable({
                    ajax: {
                        url: '/CRMLead/LeadManagement/GetAllLeadsHistorySPfilter',
                        data: {BD:BD, leadId: accountName },
                        dataSrc: ""
                    },
                    columns: [
                        { data: "SLNo" },
                        { data: "leadName" },
                        { data: "actionName" },
                        { data: "actionDetails" },
                        { data: "createdAt" },
                        { data: "createdBy" }
                    ]
                });
                $('#xxxx').hide();

            }

        </script>
    }


