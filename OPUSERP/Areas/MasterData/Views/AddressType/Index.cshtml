@model AddressTypeViewModel
@{
    ViewData["Title"] = "Address Type";
    Layout = "~/Areas/MasterData/Views/Shared/_MasterDataForm.cshtml";
}

@section StyleMD{
}

<div class="card" style="width: 100%;">
    <div class="card-body">
        <h5 class="card-title" style="color: #4e73df!important;">Address Type Info</h5>
        <hr>
        <div class="container">
            <form asp-area="MasterData" asp-controller="AddressType" asp-action="Index" method="post" data-parsley-validate="parsley">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group row">
                    <input type="hidden" name="addressTypeId" id="addressTypeId" value="0" />
                   
                </div>

               

                <div class="form-group row">
                    <label for="typeName" class="col-sm-4 col-form-label">Address Type Name<span style="color:red">*</span></label>
                    <div class="col-sm-8">
                        <input type="text" data-parsley-required="true" data-parsley-trigger="keyup" class="form-control" name="typeName" id="typeName">
                    </div>
                </div>

              
                <hr />
                <button type="submit" value="Submit" class="btn btn-success btn-lg" style="float:right; margin-top:5px;"><i class="fas fa-save"></i></button>

            </form>
        </div>
    </div>
</div>

<br />
<hr />
<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Address Type Info</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="addressTypeTable">
                    <thead>
                        <tr>
                          
                            <th>Type Name</th>
                           
                            <th>Action</th>
                    </thead>
                    <tbody>
                        @foreach (var data in Model.addressTypes)
                        {
                            <tr>
                               
                                <td>@data.typeName</td>                                
                              
                                <td>
                                    <a class="btn btn-success" onclick="Edit(@data.Id, '@data.typeName')" href="#"><i class="fa fa-edit"></i></a>
                                    <a class="btn btn-danger" href="#"><i class="fa fa-trash-alt"></i></a>
                                </td>
                            </tr>
                        }
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section ScriptsMD{
    <script>
        $(document).ready(function () {
            $("#ddressType").addClass("active");
            $('#addressTypeTable').DataTable();

          
        });

        //handeler
     

        function Edit(Id, typeName) {
            $("#addressTypeId").val(Id);
           
           
            $("#typeName").val(typeName);
        }

    </script>
}

