@model AreaViewModel
@{
    ViewData["Title"] = "Area";
    Layout = "~/Areas/CRMMasterData/Views/Shared/_CRMMasterDataForm.cshtml";
}

@section StyleMD{
}


<div class="card" style="width: 100%;">
    <div class="card-body">
        <h5 class="card-title" style="color: #4e73df;">Area Info</h5>
        <hr>
        <div class="container">
            <form asp-area="CRMMasterData" asp-controller="Communication" asp-action="Area" method="post" data-parsley-validate="parsley">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group row">
                    <input type="hidden" name="areaId" id="areaId" value="0" />

                    <label for="areaCode" class="col-sm-4 col-form-label">Area Code</label>
                    <div class="col-sm-8">
                        <input type="text" data-parsley-required="true" data-parsley-trigger="keyup" class="form-control" name="areaCode" id="areaCode">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="areaName" class="col-sm-4 col-form-label">Area Name</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" name="areaName" id="areaName">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="areaLocation" class="col-sm-4 col-form-label">Area Location</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" name="areaLocation" id="areaLocation">
                    </div>
                </div>
                <hr>
                <button type="submit" value="Submit" class="btn btn-success btn-lg" style="float:right; margin-top:5px;"><i class="fas fa-save"></i></button>
            </form>
        </div>
    </div>
</div>

<br />
<hr />
<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Area Info</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="areaTable">
                    <thead>
                        <tr>
                            <th>Area Code</th>
                            <th>Area Name</th>
                            <th>Area Location</th>
                            <th>Action</th>
                    </thead>
                    <tbody>
                        @foreach (var data in Model.areas)
                        {
                            <tr>
                                <td>@data.areaCode</td>
                                <td>@data.areaName</td>
                                <td>@data.areaLocation</td>
                                <td>
                                    <a class="btn btn-success" onclick="Edit(@data.Id,'@data.areaCode','@data.areaName','@data.areaLocation')" href="#"><i class="fa fa-edit"></i></a>
                                    <a class="btn btn-danger" href="#"><i class="fa fa-trash-alt"></i></a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section ScriptsMD{
    <script>
        $(document).ready(function () {
            $("#Area").addClass("active");
            $('#areaTable').DataTable();
        });

        function Edit(Id, areaCode, areaName, areaLocation) {
            $("#areaId").val(Id);
            $("#areaCode").val(areaCode);
            $("#areaName").val(areaName);
            $("#areaLocation").val(areaLocation);
        }
    </script>
}





