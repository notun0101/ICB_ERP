@model AgreementCategoryViewModel
@{
    ViewData["Title"] = "AgreementCategory";
    Layout = "~/Areas/CRMMasterData/Views/Shared/_CRMMasterDataForm.cshtml";
}

@section StyleMD{
}


<div class="card" style="width: 100%;">
    <div class="card-body">
        <h5 class="m-0 font-weight-bold text-primary">Agreement Category</h5>
        <hr>
        <div class="container">
            <form asp-area="CRMMasterData" asp-controller="AgreementCategory" asp-action="AgreementCategory" method="post" data-parsley-validate="parsley">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group row">
                    <input type="hidden" name="Id" id="Id" value="0" />
                    <label for="agreementCategoryName" class="col-sm-4 col-form-label">Agreement Category Name</label>
                    <div class="col-sm-8">
                        <input type="text" data-parsley-required="true" data-parsley-trigger="keyup" class="form-control" name="agreementCategoryName" id="agreementCategoryName">
                    </div>
                </div>

                <hr>
                <button type="submit" value="Submit" class="btn btn-success btn-lg" style="float:right; margin-top:5px;"><i class="fas fa-save"></i></button>
            </form>
        </div>
    </div>
</div>

<br />
<hr />
<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Agreement Category list</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="AgreementCategoryTable">
                    <thead>
                        <tr>
                            <th>Agreement Category Name</th>
                            <th>Action</th>
                    </thead>
                    <tbody>
                        @foreach (var data in Model.agreementCategories)
                        {
                            <tr>
                                <td>@data.agreementCategoryName</td>

                                <td>
                                    <a class="btn btn-success" onclick="Edit(@data.Id,'@data.agreementCategoryName')" href="javascript:void(0)"><i class="fa fa-edit"></i></a>
                                    <a class="btn btn-danger" href="javascript:void(0)"><i class="fa fa-trash-alt"></i></a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section ScriptsMD{
    <script>
        $(document).ready(function () {
            $("#AgreementCategory").addClass("active");
            $('#AgreementCategoryTable').DataTable();
        });

        function Edit(Id, agreementCategoryName) {
            $("#Id").val(Id);
            $("#agreementCategoryName").val(agreementCategoryName);

        }
    </script>
}





