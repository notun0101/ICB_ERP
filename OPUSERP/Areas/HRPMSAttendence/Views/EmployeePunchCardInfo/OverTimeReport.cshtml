        function convertto12hourtime(time) {
            var ftime = time.split(":");
            var hour = ftime[0];
            var realhour = "";
            var time = "";

            if (parseInt(hour) == 0) {
                realhour = "12";
                time = realhour + ":" + ftime[1] + ":" + ftime[2] + " AM";
            }
            else if (parseInt(hour) == 12) {
                realhour = "12";
                time = realhour + ":" + ftime[1] + ":" + ftime[2] + " PM";
            }
            else if (parseInt(hour) < 12 && parseInt(hour) != 0) {
                realhour = hour;
                time = realhour + ":" + ftime[1] + ":" + ftime[2] + " AM";
            }
            else {
                realhour = hour - 12;
                time = realhour + ":" + ftime[1] + ":" + ftime[2] + " PM";
            };
            return time;
        }

